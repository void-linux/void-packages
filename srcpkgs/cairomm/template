# Template file for 'cairomm'
pkgname=cairomm
version=1.15.4
revision=1
build_style=gnu-configure
make_build_args="CXXFLAGS=-std=gnu++17"
hostmakedepends="pkg-config"
makedepends="libsigc++-devel fontconfig-devel libpng-devel libXrender-devel cairo-devel"
depends="cairo"
short_desc="C++ bindings to Cairo vector graphics library"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-only, MPL-1.1"
homepage="http://www.cairographics.org"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=4cd9fd959538953dfa606aaa7a31381e3193eebf14d814d97ef928684ee9feb5

cairomm-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/cairomm*"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
