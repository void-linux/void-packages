checksum=0a9f26445a9d379d3ee4d753ae932a298754756f5e1c64712fd5f1750ac40ee4

do_build() {
	make all

	rm -r etc/service.d/agetty-*
}

do_install() {
	vlicense LICENSE

	vcopy usr /
	vcopy etc /
	vcopy bin /usr

	for f in man/*; do
		vman $f
	done
}
