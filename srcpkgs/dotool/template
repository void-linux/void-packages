system_accounts="_dotoold"
triggers=hwdb.d-dir

post_install() {
	cp -v dotoolc dotoold "${DESTDIR}/usr/bin"
	vinstall 80-dotool.rules 644 usr/lib/udev/rules.d
	vsv dotoold
	scdoc < doc/dotool.1.scd > dotool.1
	vman dotool.1
}
