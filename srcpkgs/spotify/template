# Template file for 'spotify'
pkgname=spotify
version=1.1.10
revision=1
archs="x86_64"
create_wrksrc=yes
build_style=fetch
depends="binutils gtk+ nss GConf libXScrnSaver libatomic"
short_desc="Proprietary music streaming client"
maintainer="Stefan MÃ¼hlinghaus <jazzman@alphabreed.com>"
license="Proprietary"
homepage="https://www.spotify.com"
repository=nonfree
_sversion=".546.ge08ef575-19_amd64"
_schecksum="da49fd4d222ff7d719345fba6298f38a6422ef293bb43ada13cf857a694a12e6"
do_install() {
	vbin ${FILESDIR}/spotify
	vmkdir usr/share/spotify
	echo "export SVERSION=\"${version}${_sversion}\"" >"${DESTDIR}/usr/share/spotify/pkgdata"
	echo "export SCHECKSUM=\"${_schecksum}\"" >>"${DESTDIR}/usr/share/spotify/pkgdata"
}
