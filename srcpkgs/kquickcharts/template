# Template file for 'kquickcharts'
pkgname=kquickcharts
version=5.76.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools"
makedepends="qt5-declarative-devel qt5-quickcontrols2-devel"
