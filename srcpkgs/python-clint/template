# Template file for 'python-clint'
pkgname=python-clint
version=0.5.1
revision=1
wrksrc="${pkgname#*-}-$version"
noarch=yes
build_style=python-module
pycompile_module="clint"
hostmakedepends="python-setuptools python3-setuptools"
depends="python-args"
short_desc="Tools for Python2-based command-line applications"
maintainer="Emerson Ferreira <me@skrps.me>"
license="ISC"
homepage="https://github.com/kennethreitz/${pkgname#*-}"
distfiles="$homepage/archive/v$version.tar.gz"
checksum=cc2ac47fca097d6235fd12e70a4984a63c4ea1992eb0cee04fe8ed13c88544cd

post_install() {
	vlicense LICENSE
}

python3-clint_package() {
	noarch=yes
	pycompile_module="clint"
	depends="python3-args"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
