pkgname=dante
version=1.4.2
revision=4
build_style=gnu-configure
hostmakedepends="tar automake libtool"
short_desc="SOCKS server and client"
maintainer="shtayerc <david.murko@mailbox.org>"
license="MIT-CMU"
