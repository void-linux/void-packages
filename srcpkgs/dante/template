if [ "$XBPS_TARGET_LIBC" = "glibc" ]; then
	configure_args="--with-libc=libc.so.6"
else
	configure_args="ac_cv_func_sched_setscheduler=no"
fi

pre_configure() {
	autoreconf -fi
}

post_install() {
	vlicense LICENSE
}
