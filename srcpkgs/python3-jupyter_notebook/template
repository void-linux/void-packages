	vlicense LICENSE
	# use system mathjax
	rm -rf ${DESTDIR}/${py3_sitelib}/notebook/static/components/MathJax
	ln -sf /usr/share/mathjax ${DESTDIR}/${py3_sitelib}/notebook/static/components/MathJax
}

