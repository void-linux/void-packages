# Template file for 'libsepol'
pkgname=libsepol
version=3.9
revision=1
build_style=gnu-makefile
make_install_args=SHLIBDIR=/usr/lib
hostmakedepends="flex"
short_desc="SELinux binary policy manipulation library"
maintainer="Orphaned <orphan@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="http://userspace.selinuxproject.org"
distfiles="https://github.com/SELinuxProject/selinux/releases/download/${version}/${pkgname}-${version}.tar.gz"
checksum=ba630b59e50c5fbf9e9dd45eb3734f373cf78d689d8c10c537114c9bd769fa2e

CFLAGS="-fcommon"

libsepol-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove usr/share/man/man3
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
