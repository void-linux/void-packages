_xdg_runtime_dir="/tmp/gnome-shell-xdg"

pre_check() {
	mkdir "$_xdg_runtime_dir"
	export XDG_RUNTIME_DIR="$_xdg_runtime_dir"
	make_cmd="xvfb-run ninja"
}

post_check() {
	rm -r "$_xdg_runtime_dir"
}
