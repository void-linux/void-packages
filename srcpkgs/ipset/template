# Template file for 'ipset'
pkgname=ipset
version=7.4
revision=1
build_style=gnu-configure
configure_args="--with-kmod=no PKG_CONFIG=pkg-config"
hostmakedepends="pkg-config"
makedepends="libmnl-devel"
short_desc="Administration tool for IP sets"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="GPL-2.0-only"
homepage="http://ipset.netfilter.org/"
distfiles="${homepage}${pkgname}-${version}.tar.bz2"
checksum=4a974176e57fe4b7e2984abb231c4a18af2291bdc41536ef64e4b8ec4d4a1884

libipset_package() {
	short_desc+=" - library files"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}

libipset-devel_package() {
	depends="libipset>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/share/man/man3
	}
}
