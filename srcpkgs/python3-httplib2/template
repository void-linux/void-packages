post_install() {
	# use system ca certificates
	rm -rf ${DESTDIR}/${py3_sitelib}/httplib2/cacerts.txt
	ln -sf /etc/ssl/certs.pem ${DESTDIR}/${py3_sitelib}/httplib2/cacerts.txt

	vlicense LICENSE
}
