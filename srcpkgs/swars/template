build_style=gnu-configure
configure_args="--with-data-path=/opt/swars/"
hostmakedepends="pkg-config"
makedepends="SDL-devel zlib-devel libopenal-devel libpng-devel libvorbis-devel"
depends="vorbis-tools cdparanoia"
