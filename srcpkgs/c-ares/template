# Template file for 'c-ares'
pkgname=c-ares
version=1.15.0
revision=1
build_style=gnu-configure
short_desc="C library that performs DNS requests and name resolves asynchronously"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="MIT"
homepage="https://c-ares.haxx.se/"
distfiles="https://c-ares.haxx.se/download/${pkgname}-${version}.tar.gz"
checksum=6cdb97871f2930530c97deb7cf5c8fa4be5a0b02c7cea6e7c7667672a39d6852

pre_configure() {
	case "$CFLAGS" in
	*"-D_FORTIFY_SOURCE=2"*)
		export CFLAGS=${CFLAGS/-D_FORTIFY_SOURCE=?/}
		export CPPFLAGS+=" -D_FORTIFY_SOURCE=2"
		;;
	esac
	export CFLAGS=${CFLAGS/-I${XBPS_CROSS_BASE}\/usr\/include/}
}

post_install() {
	vlicense LICENSE.md LICENSE
}

c-ares-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
		vmove usr/share/man
	}
}

