# Template file for 'python-py'
pkgname=python-py
version=1.7.0
revision=1
noarch=yes
wrksrc="py-${version}"
build_style=python-module
pycompile_module="py"
hostmakedepends="python-setuptools python3-setuptools"
depends="python"
checkdepends="python3-pytest"
short_desc="Python2 development support library"
maintainer="Orpahend <orphan@voidlinux.eu>"
license="MIT"
homepage="https://github.com/pytest-dev/py"
changelog="https://github.com/pytest-dev/py/raw/master/CHANGELOG"
distfiles="${PYPI_SITE}/p/py/py-${version}.tar.gz"
checksum=bf92637198836372b520efcba9e020c330123be8ce527e535d185ed4b6f45694

do_check() {
	python3 -m pytest
}

post_install() {
	vlicense LICENSE
}

python3-py_package() {
	noarch=yes
	depends="python3"
	pycompile_module="py"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
