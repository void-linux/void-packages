# Template file for 'libgmobile'
pkgname=libgmobile
version=0.6.0
revision=1
build_style=meson
build_helper="gir"
hostmakedepends="pkg-config glib-devel gobject-introspection vala gettext python3-docutils"
makedepends="glib-devel json-glib-devel"
short_desc="Functions useful in mobile related, glib based projects"
maintainer="Eren Öztürk <erenozturkhde@gmail.com>"
license="LGPL-2.1-or-later, GPL-3.0-or-later"
homepage="https://gitlab.gnome.org/World/Phosh/gmobile"
changelog="https://gitlab.gnome.org/World/Phosh/gmobile/-/blob/main/NEWS"
distfiles="https://gitlab.gnome.org/World/Phosh/gmobile/-/archive/v${version}/gmobile-v${version}.tar.gz"
checksum=a322b08c5eaa68f780434300b1cdbe185435221044afd821859a4c169b52175c

libgmobile-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"

	pkg_install() {
		vmove usr/include
		vmove usr/lib*/pkgconfig
		vmove usr/lib*/libgmobile.so
		vmove usr/share/gir-1.0
		vmove usr/share/vala
	}
}
