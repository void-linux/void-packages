# Template file for 'libgdata'
pkgname=libgdata
version=0.17.11
revision=1
build_style=meson
build_helper="gir"
configure_args="-Dgtk_doc=$(vopt_if gtk_doc true false) -Dvapi=true -Dman=true
 -Dinstalled_tests=false -Dgoa=enabled -Dgnome=enabled -Dgtk=enabled"
hostmakedepends="pkg-config flex intltool glib-devel $(vopt_if vala vala)"
makedepends="json-glib-devel gtk+3-devel uhttpmock-devel liboauth-devel
 gcr-devel gnome-online-accounts-devel $(vopt_if gtk_doc gtk-doc) libsoup-devel"
short_desc="Library for accessing GData webservices"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="https://wiki.gnome.org/Projects/libgdata"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=6b9917122e4def6e6f78bcb660e49e146540832e296abcb5cde99829a04ea986
patch_args="-Np1"

build_options="gir vala gtk_doc"
desc_option_gtk_doc="Build API docs via gtk-doc"
build_options_default="gir vala"

if [ ! "$CROSS_BUILD" ]; then
	build_options_default+=" gtk_doc"
fi

libgdata-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gtk_doc" ]; then
			vmove usr/share/gtk-doc
		fi
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
		if [ "$build_option_vala" ]; then
			vmove usr/share/vala
		fi
	}
}
