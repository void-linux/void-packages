# Template file for 'libgdata'
pkgname=libgdata
version=0.17.11
revision=1
build_style=meson
build_helper="gir"
configure_args="-Dintrospection=$(vopt_if gir true false)
 -Dvapi=$(vopt_if vala true false)
 -Dalways_build_tests=false -Dinstalled_tests=false"
hostmakedepends="pkg-config flex glib-devel gtk-doc"
makedepends="json-glib-devel gtk+3-devel uhttpmock-devel liboauth-devel
 gcr-devel gnome-online-accounts-devel $(vopt_if vala vala-devel)"
short_desc="Library for accessing GData webservices"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="https://wiki.gnome.org/Projects/libgdata"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=6b9917122e4def6e6f78bcb660e49e146540832e296abcb5cde99829a04ea986

build_options="gir vala"
build_options_default="gir vala"

pre_build() {
	export GIR_EXTRA_LIBS_PATH="${wrksrc}/gdata/.libs"
}

libgdata-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/gtk-doc
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
		if [ "$build_option_vala" ]; then
			vmove usr/share/vala
		fi
	}
}
