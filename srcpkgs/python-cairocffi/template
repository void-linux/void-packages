post_install() {
	vlicense LICENSE
}

python3-cairocffi_package() {
	archs=noarch
	depends="python3-cffi"
	pycompile_module="cairocffi"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
