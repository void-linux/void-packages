do_check() {
	tox -e py27,py${py3_ver/./}
}

post_install() {
	vlicense LICENSE
}

python3-alembic_package() {
	archs=noarch
	depends="python3-Mako python3-SQLAlchemy python3-dateutil python3-editor"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/bin/*3
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
