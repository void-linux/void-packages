# Template file for 'pygtk'
pkgname=pygtk
version=2.22.0
revision=1
distfiles="${GNOME_SITE}/$pkgname/2.22/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="Python bindings for the GTK+ toolkit"
maintainer="Juan RP <xtraeme@gmail.com>"
