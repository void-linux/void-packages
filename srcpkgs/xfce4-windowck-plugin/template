pre_configure() {
	autogen_args="--prefix=/usr"

	if [ "$CROSS_BUILD" ]; then
		autogen_args+=" --host=${XBPS_CROSS_TRIPLET}"
	fi

	xdt-autogen ${autogen_args}
}
