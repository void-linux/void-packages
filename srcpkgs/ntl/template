# Template file for 'ntl'
pkgname=ntl
version=11.3.2
revision=1
build_wrksrc=src
build_style=configure
configure_args="PREFIX=${XBPS_CROSS_BASE}/usr LIBTOOL=/usr/bin/libtool"
hostmakedepends="perl libtool"
makedepends="gmp-devel"
short_desc="Object oriented library for number theory"
maintainer="Nathan Owens <ndowens04@gmail.com>"
license="LGPL-2.1-or-later"
homepage="https://www.shoup.net/ntl/"
distfiles="https://www.shoup.net/ntl/${pkgname}-${version}.tar.gz"
checksum=84ba3145abf8d5f3be6832a14c60b3368eb920719ee96e5774587e71ecd66e9d
nocross="home-made build system doesn't support cross compilation"

ntl-devel_package() {
	depends="gmp-devel ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/
	}
}

post_install() {
	vlicense ../doc/copying.txt
}
