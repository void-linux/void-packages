do_check() {
	(cd build/lib* && python3 -m unittest regex/test_regex.py)
}

post_install() {
	rm -f ${DESTDIR}/${py3_sitelib}/regex/test_regex.py
	local i
	for i in docs/*.* ; do
		vdoc $i
	done
}
