	build_style=meta
	lib32mode=full
	short_desc="Mesa DRI drivers for ATI GPUs (transitional dummy package)"
	depends="mesa-dri mesa-vulkan-radeon"
	if [ "$_have_hwdec" ]; then
		depends+=" mesa-vaapi mesa-vdpau mesa-XvMC"
	fi
}

