post_install() {
	# Move /usr/share/cmake-<version>/Modules to /usr/share/cmake/Modules
	vmkdir usr/share/cmake
	mv -v ${DESTDIR}/usr/share/cmake-*/Modules/* ${DESTDIR}/usr/share/cmake
}
