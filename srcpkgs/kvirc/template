if [ "$CROSS_BUILD" ];then
	hostmakedepends+=" qt-qmake qt-host-tools"
fi

pre_configure() {
	if [ "$CROSS_BUILD" ]; then
		configure_args+=" -C ${FILESDIR}/TryRunResults.cmake"
	fi
}
