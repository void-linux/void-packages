# Template file for 'ksystemstats'
pkgname=ksystemstats
version=6.5.2
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-base qt6-tools gettext pkg-config kf6-kconfig"
makedepends="kf6-networkmanager-qt-devel kf6-solid-devel libnl3-devel
 kf6-kio-devel kf6-kdbusaddons-devel libksysguard-devel libsensors-devel kf6-kcrash-devel"
short_desc="Plugin based system monitoring daemon"
maintainer="John <me@johnnynator.dev>"
license="GPL-3.0-only,LGPL-3.0-only"
homepage="https://invent.kde.org/plasma/ksystemstats"
distfiles="${KDE_SITE}/plasma/${version}/${pkgname}-${version}.tar.xz"
