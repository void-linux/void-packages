do_check() {
	python3 test/test_imports.py
	python2 test/test_imports.py
}

python3-iwlib_package() {
	pycompile_module="iwlib"
	depends="python3 wireless_tools"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
