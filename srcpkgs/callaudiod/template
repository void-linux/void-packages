libcallaudio_package() {
	short_desc+=" - shared-libraries"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}

libcallaudio-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
