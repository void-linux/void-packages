post_extract() {
	vsed -i -e '/configparser/d' setup.py  # is in Python 3.8
}

post_install() {
	rm -r ${DESTDIR}/${py3_sitelib}/tests
	vlicense LICENSE.md
}

do_check() {
	pytest --disable-warnings
}
