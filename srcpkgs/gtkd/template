		vmove usr/include/d/gtkd-3/gstreamer
		vmove usr/include/d/gtkd-3/gstreamerc
		vmove usr/lib/libgstreamerd-3.so
		vmove usr/lib/pkgconfig/gstreamerd-3.pc
	}
