	nostrip=yes
	noverifyrdeps=yes
	depends="${sourcepkg}-${version}_${revision}"
	short_desc+=" - Cross compilers for Windows"
	pkg_install() {
		vmove "usr/lib/go/pkg/tool/windows_*"
		vmove "usr/lib/go/pkg/windows_*"
	}
}
