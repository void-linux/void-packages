# Template file for 'font-source-sans-3'
pkgname=font-source-sans-3
version=3.052
revision=2
depends="font-util"
short_desc="Sans serif font family for user interface environments"
maintainer="WantToHelp <ghostinthecsh@gmail.com>"
license="OFL-1.1"
homepage="https://adobe-fonts.github.io/source-sans/"
distfiles="https://github.com/adobe-fonts/source-sans/archive/${version}R.tar.gz"
checksum=21f4e24bbd7b24c31ba13ddb10600db3a61565f20f2ccf2347f4e114e6e34596
font_dirs="/usr/share/fonts/OTF/adobe /usr/share/fonts/TTF/adobe"
provides="font:sans-serif-0_1"

do_install() {
	vmkdir usr/share/fonts/TTF/adobe
	vmkdir usr/share/fonts/OTF/adobe
	install -m644 ${wrksrc}/TTF/*.ttf ${DESTDIR}/usr/share/fonts/TTF/adobe
	install -m644 ${wrksrc}/OTF/*.otf ${DESTDIR}/usr/share/fonts/OTF/adobe
}
