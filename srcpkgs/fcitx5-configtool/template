fcitx5-migrator_package() {
	short_desc="${short_desc/config/migration}"
	lib32disabled=yes
	pkg_install() {
		vmove usr/bin/fcitx5-migrator
		vmove "usr/lib/libFcitx5Migrator.so*"
		vmove usr/share/applications/org.fcitx.fcitx5-migrator.desktop
	}
}
