maintainer="mobinmob <mobinmob@disroot.org>"
license="GPL-2.0-or-later"
homepage="https://keep.imfreedom.org/libgnt/"
distfiles="${SOURCEFORGE_SITE}/pidgin/libgnt/${version}/libgnt-${version}.tar.xz"
