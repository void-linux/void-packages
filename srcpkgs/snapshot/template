pkgname=snapshot
version=47.1
revision=1
build_style=meson
build_helper=rust
hostmakedepends="cargo desktop-file-utils gettext glib-devel
 gtk-update-icon-cache pkg-config"
makedepends="libadwaita-devel rust-std libseccomp-devel"
