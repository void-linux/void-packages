	vlicense COPYING
}

xf86-input-libinput-devel_package() {
	lib32disabled=yes
	depends="${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}
