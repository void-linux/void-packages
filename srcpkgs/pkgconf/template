# Template file for 'pkgconf'
pkgname=pkgconf
version=1.5.3
revision=2
build_style=gnu-configure # cmake and meson also available
checkdepends="kyua"
short_desc="Provides compiler and linker configuration"
maintainer="Enno Boland <gottox@voidlinux.eu>"
license="MIT"
homepage="https://git.dereferenced.org/pkgconf/pkgconf"
changelog="https://git.dereferenced.org/pkgconf/pkgconf/raw/branch/master/NEWS"
distfiles="https://distfiles.dereferenced.org/pkgconf/${pkgname}-${version}.tar.xz"
checksum=d3468308553c94389dadfd10c4d1067269052b5364276a9d24a643c88485f715

post_install() {
	vlicense COPYING

	# Add compatiblity symlinks
	ln -s /usr/bin/pkgconf ${DESTDIR}/usr/bin/pkg-config
	ln -s /usr/share/man/man1/pkgconf.1 ${DESTDIR}/usr/share/man/man1/pkg-config.1
}

pkgconf-devel_package() {
	depends="pkgconf-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/man/man7
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"

		# Normally this should be in the -devel package but
		# pkg-config has it in it's main package and we map
		# pkg-config -> pkgconf, not pkgconf-devel, lots of
		# packages will fail if this file isn't present
		# vmove usr/share/aclocal
	}
}

pkg-config_package() {
	depends="pkgconf"
	build_style=meta
	noarch=yes
	short_desc+=" (transitional dummy package)"
}
