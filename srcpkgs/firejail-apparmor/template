# Template file for 'firejail-apparmor'
pkgname=firejail-apparmor
version=0.9.54
revision=1
build_style=gnu-configure
makedepends="libapparmor-devel"
depends="apparmor"
conflicts="firejail"
configure_args+=" --prefix=/usr --enable-apparmor"
wrksrc="firejail-$version"
short_desc="SUID security sandbox program (compiled with AppArmor support)"
maintainer="Julian <julian.dasma@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://firejail.wordpress.com"
#changelog="https://raw.githubusercontent.com/netblue30/firejail/master/RELNOTES"
distfiles="https://github.com/netblue30/firejail/archive/${version}.tar.gz"
checksum=a487f6a1420337f07157cdf0dd8a8bdf08a922b9aef591e7c9a6b8bad4662bcf
conf_files="/etc/firejail/*"

if [ -n "$CROSS_BUILD" ]; then
	configure_args+=" --disable-seccomp"
fi
