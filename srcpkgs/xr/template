# Template file for 'xr'
pkgname=xr
version=0.0.6
revision=1
build_style=cargo
hostmakedepends="cargo pkg-config"
depends="fzf nerd-fonts"
short_desc="Simple tool for searching and managing packages on Void Linux"
maintainer="Gabriel Quintana <duffqtn@gmail.com>"
license="MIT"
homepage="https://gitlab.com/nesstero/xr"
distfiles="${homepage}/-/archive/v.${version}/xr-v.${version}.tar.gz"
checksum="da47531350713cfad49a9cbeeea038928051e41b04042f89589d4d597494c326"

post_install() {
	vbin target/${RUST_TARGET}/release/xr
	vinstall ${FILESDIR}/xr.bash 644 usr/share/bash-completion/completions xr
	vlicense LICENSE
}
