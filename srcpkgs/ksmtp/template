# Template file for 'ksmtp'
pkgname=ksmtp
version=21.08.1
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python3
 gettext kcoreaddons"
makedepends="kmime-devel kio-devel"
short_desc="Job-based library to send email through an SMTP server"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/ksmtp-${version}.tar.xz"
checksum=66d1fc73cb88a9950c03fd30d7c90f1b69c9fbf30c9a2a35dcad5e28df31815e

ksmtp-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
