font_dirs="/usr/share/fonts/TTF"

do_install() {
	vmkdir usr/share/fonts/TTF
	vinstall HanaMinA.ttf 644  usr/share/fonts/TTF
	vinstall HanaMinB.ttf 644  usr/share/fonts/TTF
	vdoc README.txt
	vdoc THANKS.txt
}
