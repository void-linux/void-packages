# Template file for 'kmime'
pkgname=kmime
version=23.08.3
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python3 gettext"
makedepends="kcodecs-devel ki18n-devel"
short_desc="Library for handling mail messages and newsgroup articles"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/kmime-${version}.tar.xz"
checksum=1a51c80c885df34bce2122c24e949d2f354ee0d840de91deaf93feca029f33b1

if [ "CROSS_BUILD" ];then
	hostmakedepends+=" qt5-qmake qt5-host-tools"
fi

kmime-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
