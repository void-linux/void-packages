# Template file for 'kmime'
pkgname=kmime
version=18.08.3
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python3"
makedepends="kcodecs-devel ki18n-devel"
short_desc="Library for handling mail messages and newsgroup articles"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/applications/${version}/src/kmime-${version}.tar.xz"
checksum=4825ee4e07403710bebe46866a62207512e029083ad46081a640e2a562f271d0

if [ "CROSS_BUILD" ];then
	hostmakedepends+=" qt5-qmake qt5-host-tools"
fi

kmime-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
