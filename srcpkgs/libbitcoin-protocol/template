pre_configure() {
	./autogen.sh
}

post_install() {
	vlicense COPYING
	vdoc README.md
}

libbitcoin-protocol-devel_package() {
	short_desc+=" - development files"
	depends="$sourcepkg>=${version}_$revision"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}

