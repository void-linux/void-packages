# Template file for 'akonadi-notes'
pkgname=akonadi-notes
version=23.08.3
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python3 qt5-qmake qt5-host-tools
 gettext kcoreaddons"
makedepends="kmime-devel akonadi5-devel"
short_desc="Libraries and daemons to implement notes management in Akonadi"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://kontact.kde.org/"
distfiles="${KDE_SITE}/release-service/${version}/src/${pkgname}-${version}.tar.xz"
checksum=2f396d28fc85bdc40d1b5458f8151ade725d02cd3f0c98f9011e4f711a3f31fd

akonadi-notes-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
