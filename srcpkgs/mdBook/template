# Template file for 'mdBook'
pkgname=mdBook
version=0.4.37
revision=2
build_style=cargo
build_helper=qemu
short_desc="Create book from markdown files. Like Gitbook but implemented in Rust"
maintainer="Ã‰rico Nogueira <ericonr@disroot.org>"
license="MPL-2.0"
homepage="https://github.com/rust-lang/mdBook"
