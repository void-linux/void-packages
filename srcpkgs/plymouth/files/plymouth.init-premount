#!/bin/sh

PREREQ="udev"

prereqs()
{
	echo "${PREREQ}"
}

case ${1} in
	prereqs)
		prereqs
		exit 0
		;;
esac

SPLASH="false"

for ARGUMENT in $(cat /proc/cmdline)
do
	case "${ARGUMENT}" in
		splash*)
			SPLASH="true"
			;;

		nosplash*)
			SPLASH="false"
			;;
	esac
done

if [ "${SPLASH}" = "true" ]; then
	modprobe i8042
	modprobe atkbd

	/sbin/plymouthd --mode=boot --pid-file=/run/plymouth/pid
	/bin/plymouth --show-splash
fi
