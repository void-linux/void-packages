# Template file for 'libphonenumber'
pkgname=libphonenumber
version=9.0.13
revision=1
build_wrksrc=cpp
build_style=cmake
build_helper=qemu
configure_args="-DREGENERATE_METADATA=OFF -DUSE_BOOST=OFF -DUSE_STDMUTEX=ON"
hostmakedepends="pkg-config protobuf"
makedepends="gtest-devel icu-devel protobuf-devel"
short_desc="Google's common library for handling international phone numbers"
maintainer="Louis Dupr√© Bertoni <contact@louisdb.xyz>"
license="Apache-2.0"
homepage="https://github.com/googlei18n/libphonenumber"
distfiles="https://github.com/google/libphonenumber/archive/refs/tags/v${version}.tar.gz"
checksum=46400323d2df4fdefd57bc46a34111dc2c4612da62ecd0cedebff5ad94e49b0b

CXXFLAGS="-D_FILE_OFFSET_BITS=64"

libphonenumber-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} protobuf-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
