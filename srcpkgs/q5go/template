post_install() {
	qmake -install qinstall "${wrksrc}/src/images/Bowl.ico" "${DESTDIR}/usr/share/q5go/pics/Bowl.ico"
	qmake -install qinstall "${wrksrc}/templates/qgo.desktop" "${DESTDIR}/usr/share/applications/q5go.desktop"
}
