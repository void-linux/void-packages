	makedepends+=" libexecinfo-devel"
fi

remmina-kwallet_package() {
	short_desc+=" - kwallet plugin"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/lib/remmina/plugins/remmina-plugin-kwallet.so
	}
}
