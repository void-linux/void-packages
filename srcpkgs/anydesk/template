 93ce67407d855b21170e007e3dde324ad7cd0a3922206136bc0fd84d72da2b8a"


do_build() {
	patchelf --remove-needed libpangox-1.0.so.0 usr/bin/anydesk
}

do_install() {
	vlicense "${pkgname}-${version}"/copyright
	rm -rf "${pkgname}-${version}"
	vcopy "*" /
}
