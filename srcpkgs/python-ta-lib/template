# Template file for 'python-ta-lib'
pkgname=python-ta-lib
version=0.4.17
revision=1
archs=noarch
wrksrc="TA-Lib-${version}"
build_style=python-module
pycompile_module="talib"
hostmakedepends="python-setuptools python3-setuptools"
makedepends="python-devel python3-devel python-numpy python3-numpy"
depends="python-numpy ta-lib"
short_desc="Python wrapper for TA-Lib"
maintainer="Jean-Philippe Menil <jpmenil@gmail.com>"
license="BSD"
homepage="http://github.com/mrjbq7/ta-lib"
distfiles="${PYPI_SITE}/T/TA-Lib/TA-Lib-${version}.tar.gz"
checksum=16ab1e33c547fe72c10c28b02f6ae342fbcc7eef6a49ba961c639a6020aba56a

post_install() {
	vlicense LICENSE
}

python3-ta-lib_package() {
	archs=noarch
	depends="python3"
	pycompile_module="talib"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
