# Template file for 'python-args'
pkgname=python-args
version=0.1.0
revision=1
wrksrc="${pkgname#*-}-$version"
noarch=yes
build_style=python-module
pycompile_module="args.py"
hostmakedepends="python-setuptools python3-setuptools"
depends="python"
short_desc="Python2 argument parsing library"
maintainer="Emerson Ferreira <me@skrps.me>"
license="BSD-2-Clause"
homepage="https://github.com/kennethreitz/${pkgname#*-}"
distfiles="$homepage/archive/v$version.tar.gz"
checksum=ead9ed80cbb64179a768d2aba8edba9f83dc2e33dc91ac07a7479f3d74119568

post_install() {
	vlicense LICENSE
}

python3-args_package() {
	noarch=yes
	pycompile_module="args.py"
	depends="python3"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
