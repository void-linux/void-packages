python3.4-feedgenerator_package() {
	noarch=yes
	depends="python3.4 python3.4-pytz python3.4-six"
	pycompile_version="3.4"
	pycompile_module="feedgenerator"
	short_desc="${short_desc/Python2/Python3.4}"
	pkg_install() {
		vmove usr/lib/python3.4
	}
}
