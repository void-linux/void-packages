post_patch() {
	if [ "$CROSS_BUILD" ]; then
		sed -i GNUmakefile -e "s|-I/usr/include|-I${XBPS_CROSS_BASE}/usr/include|g"
	fi
}

pre_install() {
	vmkdir usr/bin
	vmkdir usr/share/man/man1
}

post_install() {
	vlicense LICENCE
}
