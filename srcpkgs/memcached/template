# Template file for 'memcached'
pkgname=memcached
version=1.6.18
revision=1
build_style=gnu-configure
configure_args="--enable-seccomp"
makedepends="libevent-devel libseccomp-devel"
short_desc="Distributed memory object caching system"
maintainer="Orphaned <orphan@voidlinux.org>"
license="BSD-3-Clause"
homepage="http://www.memcached.org"
changelog="https://raw.githubusercontent.com/wiki/memcached/memcached/ReleaseNotes${version//./}.md"
distfiles="https://memcached.org/files/memcached-${version}.tar.gz"
checksum=cbdd6ab8810649ac5d92fcd0fcb0ca931d8a9dbd0ad8cc575b47222eedd64158

post_install() {
	vlicense COPYING LICENSE
}

memcached-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
	}
}
