# Template file for 'ardor'
pkgname=ardor
version=2.0.14
revision=1
wrksrc="${pkgname}"
hostmakedepends="unzip"
depends="virtual?java-runtime"
short_desc="Client for the Ardor Platform"
maintainer="Fabio Krapohl <fabio.u.krapohl@fau.de>"
license="Jelurida Public License 1.1"
homepage="https://ardorplatform.org"
distfiles="https://bitbucket.org/Jelurida/${pkgname}/downloads/${pkgname}-client-${version}.zip"
checksum=23ec29b0995970c7ce183dd024acc04b87481c24ca34ba7d5412a30bed437dc1

do_install() {
	vbin ${FILESDIR}/bin/${pkgname}
	vbin ${FILESDIR}/bin/${pkgname}-tor

	vsv ${pkgname}
	vsv ${pkgname}-tor

	vlicense LICENSE.txt

	vmkdir usr/lib/${pkgname}
	vcopy . usr/lib/${pkgname}
}
