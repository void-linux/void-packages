# Template file for 'python-configparser'
pkgname=python-configparser
version=3.7.4
revision=1
archs=noarch
wrksrc="configparser-${version}"
build_style=python-module
pycompile_module="configparser"
hostmakedepends="python-setuptools python3-setuptools"
depends="python"
short_desc="Python2 updated configparser"
maintainer="xaltsc <xaltsc@protonmail.ch>"
license="MIT"
homepage="https://github.com/jaraco/configparser"
distfiles="${PYPI_SITE}/c/configparser/configparser-${version}.tar.gz"
checksum=da60d0014fd8c55eb48c1c5354352e363e2d30bbf7057e5e171a468390184c75

post_install() {
	vlicense LICENSE
}

python3-configparser_package() {
	archs=noarch
	pycompile_module="configparser"
	depends="python3"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
