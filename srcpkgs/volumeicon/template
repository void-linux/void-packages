post_patch() {
	sed -ne '/Copyright/,/IN THE SOFTWARE/s/ [*] *//p' src/bind.c >LICENSE.MIT
	sed -ne '/Copyright/,/OF THIS SOFTWARE/s/ [*] *//p' \
		src/alsa_volume_mapping.c >LICENSE.ISC
}

post_install() {
	vlicense LICENSE.MIT
	vlicense LICENSE.ISC
}
