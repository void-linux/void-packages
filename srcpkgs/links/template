checksum=22aa96c0b38e1a6f8f7ed9d7a4167a47fc37246097759ef6059ecf8f9ead7998

post_install() {
	mkdir -p ${DESTDIR}/usr/share/doc/
	mv doc/ ${DESTDIR}/usr/share/doc/links
}
