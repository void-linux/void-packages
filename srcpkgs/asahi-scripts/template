	vlicense LICENSE
}

asahi-macsmc-battery-udev_package() {
	short_desc="Battery udev rules for Apple silicon"
	conflicts="tlp"
	pkg_install() {
		vmove usr/lib/udev/rules.d
		vmove usr/lib/systemd/system
	}
}
