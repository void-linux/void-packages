maintainer="Orphaned <orphan@voidlinux.org>"
license="MIT"
homepage="https://github.com/unfoldingWord-dev/python-gitea-client"
distfiles="${PYPI_SITE}/g/gitea_client/gitea_client-${version}.tar.gz"
