@@ -121,6 +121,7 @@ m4_define([_LDAP_CHECK_INTERNAL],
   	        save_LIBS="$LIBS"
 	        LIBS="$LIBS -L$d/$ldap_loclibdir -lldap -llber"
    	        AC_LINK_IFELSE([AC_LANG_SOURCE([
+#include <stdio.h>
 #include <ldap.h>
 #include <lber.h>
 #include <ldap_schema.h>
