# Template file for 'kimap'
pkgname=kimap
version=18.12.3
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python"
makedepends="kio-devel kmime-devel"
short_desc="Job-based API for interacting with IMAP servers"
maintainer="John <johnz@posteo.net>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/applications/${version}/src/kimap-${version}.tar.xz"
checksum=00aed701a3bdcc218902998e63e7c587549f77a1aa0d1bd7dad4a1837adc9992

kimap-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove usr/lib/*.so
	}
}
