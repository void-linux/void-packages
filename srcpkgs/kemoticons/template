# Template file for 'kemoticons'
pkgname=kemoticons
version=5.108.0
revision=1
build_style=cmake
hostmakedepends="kcoreaddons extra-cmake-modules"
makedepends="kservice-devel karchive-devel"
short_desc="KDE Convert text emoticons to graphical emoticons"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later, CC-BY-4.0"
homepage="https://invent.kde.org/frameworks/kemoticons"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=a629c715e09ae1d567baac6ff22327a462f8b3e223945a89d7409e5d932ef85c

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-host-tools qt5-qmake"
fi

kemoticons-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
