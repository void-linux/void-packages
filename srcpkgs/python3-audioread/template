post_patch() {
	# Build doesn't actually require pytest-runner and Void doesn't offer it
	vsed -e '/pytest-runner/d' -i setup.py
}

post_install() {
	sed -n '2,13p' decode.py > LICENSE
	vlicense LICENSE
}
