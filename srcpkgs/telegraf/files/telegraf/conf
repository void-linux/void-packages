# TELEGRAF_CONF=
# TELEGRAF_CONFDIR=

if [ ! -z "$TELEGRAF_CONF" ]
then
    TELEGRAF_CONF_LINE="--config=${TELEGRAF_CONF}"
else
    TELEGRAF_CONF_LINE=    
fi

if [ ! -z "$TELEGRAF_CONFDIR" ]
then
    TELEGRAF_CONFDIR_LINE="--config-directory=${TELEGRAF_CONFDIR}"
else
    TELEGRAF_CONFDIR_LINE=    
fi
