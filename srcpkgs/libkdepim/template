# Template file for 'libkdepim'
pkgname=libkdepim
version=25.04.0
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DKF6_HOST_TOOLING=/usr/lib/cmake
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins
 -DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt6/mkspecs/modules"
hostmakedepends="extra-cmake-modules qt6-base qt6-tools gettext"
makedepends="kf6-kcompletion-devel kf6-ki18n-devel qt6-tools-devel"
short_desc="Libraries for KDE PIM applications"
maintainer="John <me@johnnynator.dev>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/libkdepim-${version}.tar.xz"
checksum=c36a50f85201a6f5393d896e472bf5fe99656b8c76cae8e3facf878b17766b7d

if [ "$CROSS_BUILD" ]; then
	configure_args+=" -DDESKTOPTOJSON_EXECUTABLE=/usr/bin/desktoptojson"
fi

libkdepim-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
