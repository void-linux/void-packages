# Template file for 'goffice0.8'.
pkgname=goffice0.8
version=0.8.17
revision=5
wrksrc="goffice-${version}"
hostmakedepends="pkg-config pcre intltool glib-devel libtool automake gtk-doc gettext-devel"
makedepends="GConf-devel gtk+-devel librsvg-devel libgsf-devel libxml2-devel pcre-devel cairo-devel"
build_style="gnu-configure"
maintainer="Philipp Hirsch <itself@hanspolo.net>"
license="GPL-2"
homepage="http://freecode.com/projects/${pkgname}"
distfiles="${GNOME_SITE}/goffice/${version%.*}/goffice-${version}.tar.xz"
checksum=165070beb67b84580afe80a8a100b674a81d553ab791acd72ac0c655f4fadb15
short_desc="Library of document-centric objects and utilities (0.8.x)"

pre_configure() {
	autoreconf -fi
}

goffice0.8-devel_package() {
	short_desc+=" - development files"
	depends="libgsf-devel gtk+-devel libxml2-devel ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
		vmove usr/share/gtk-doc
	}
}
