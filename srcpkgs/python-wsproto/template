	vlicense LICENSE
}

python3-wsproto_package() {
	archs=noarch
	pycompile_module="wsproto"
	depends="python3 python3-h11"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove "usr/lib/python3*"
	}
}
