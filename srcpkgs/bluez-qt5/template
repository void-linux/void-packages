# Template file for 'bluez-qt5'
pkgname=bluez-qt5
version=5.74.0
revision=1
wrksrc="${pkgname%5}-${version}"
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DUDEV_RULES_INSTALL_DIR=/usr/lib/udev/rules.d"
hostmakedepends="kcoreaddons extra-cmake-modules"
makedepends="qt5-declarative-devel"
depends="bluez"
short_desc="Qt wrapper for BlueZ 5 DBus API"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/bluez-qt"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname%5}-${version}.tar.xz"
checksum=2671e9d2cd12a8a6ff55f268e9fa3f5c05f2c629a7649e4e81fb12eab7cfdd2d

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-host-tools qt5-qmake"
fi

bluez-qt5-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
