if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" wxWidgets-common-devel"
	configure_args+=" WXRC=/usr/bin/wxrc --with-boost-libdir=${XBPS_CROSS_BASE}/usr/lib"
fi

