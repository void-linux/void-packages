CPPFLAGS="-DUCHAR_TYPE=uint16_t"

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" wxWidgets-gtk3-devel"
	configure_args+=" WXRC=/usr/bin/wxrc --with-boost-libdir=${XBPS_CROSS_BASE}/usr/lib"
fi

