nocross="gobject-introspection"

pre_configure() {
	NOCONFIGURE=1 ./autogen.sh
}

cinnamon-settings-daemon-devel_package() {
	short_desc+=" - development files"
	depends="libglib-devel ${sourcepkg}-${version}_${revision}"
