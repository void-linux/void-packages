# Template file for 'base-chroot'
pkgname=base-chroot
version=0.66
revision=1
bootstrap=yes
build_style=meta
short_desc="Bootstrap packages for xbps-src"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="Public domain"
homepage="http://www.voidlinux.org"
replaces="base-chroot-musl>=0"

depends="base-files"
case "$XBPS_TARGET_MACHINE" in
 *-musl) depends+=" musl-devel musl-legacy-compat";;
 *) depends+=" glibc-devel glibc-locales";;
esac
depends+=" binutils gcc chroot-bash chroot-grep
 chroot-gawk chroot-git chroot-texinfo chroot-distcc
 chroot-gawk chroot-util-linux sed findutils coreutils
 diffutils which patch sed make gzip xz tar file ccache xbps"
