do_check() {
	:
}

post_install() {
	vdoc README.md
	vlicense LICENSE
	vinstall ${FILESDIR}/${pkgname}.confd 644 etc/default ${pkgname}
	vinstall ${FILESDIR}/config.json 644 etc/minio config.json
	vsv minio
}
