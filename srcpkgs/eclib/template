configure_args="--with-flint --with-boost"
makedepends="pari-devel ntl-devel flintlib-devel boost-devel"
short_desc="Elliptic curve library, includes mwrank"
maintainer="Gonzalo Tornar√≠a <tornaria@cmat.edu.uy>"
