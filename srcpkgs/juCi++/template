case "$XBPS_TARGET_MACHINE" in
	ppc64le*) ;;
	ppc*) broken="missing lldb";;
esac

post_extract() {
	mv ${wrksrc}/../libclangmm-${_libclangmm_commit}/* ${wrksrc}/lib/libclangmm/
	mv ${wrksrc}/../tiny-process-library-${_tiny_commit}/* ${wrksrc}/lib/tiny-process-library
}

post_install() {
	vlicense LICENSE
}
