# Template file for 'ktnef'
pkgname=ktnef
version=20.04.1
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python3
 gettext kcoreaddons"
makedepends="kcalutils-devel kcontacts-devel"
short_desc="API for handling TNEF data"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/ktnef-${version}.tar.xz"
checksum=29c8aba942aaf1f099b1e2f7bda9000d124aa710ac04e6bd295a4dc1c5b8c532

ktnef-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
