# Template file for 'fio'
pkgname=fio
version=3.37
revision=1
build_style=configure
make_build_args="T_TEST_PROGS="
make_install_args="mandir=/usr/share/man"
makedepends="zlib-devel libaio-devel"
depends="python3"
short_desc="Flexible I/O tester"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="GPL-2.0-only"
homepage="https://github.com/axboe/fio"
distfiles="https://github.com/axboe/${pkgname}/archive/${pkgname}-${version}.tar.gz"
checksum=b59099d42d5c62a8171974e54466a688c8da6720bf74a7f16bf24fb0e51ff92d
python_version=3

case "$XBPS_TARGET_MACHINE" in
	i686*|x86_64*|ppc64*) makedepends+=" libnuma-devel"
esac

do_configure() {
	./configure --prefix=/usr --extra-cflags="$CFLAGS" --disable-native
}

post_install() {
	vdoc HOWTO.rst
	for f in examples/*; do
		vsconf "$f"
	done
}
