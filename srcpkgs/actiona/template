pre_configure() {
	if [ "$XBPS_WORDSIZE" = 32 ]; then
		export CFLAGS=${CFLAGS/ -g/-g1}
		export CXXFLAGS=${CXXFLAGS/ -g/-g1}
	fi
}

pre_build() {
	if [ "$XBPS_WORDSIZE" = 32 ]; then
		export CFLAGS=${CFLAGS/ -g/-g1}
		export CXXFLAGS=${CXXFLAGS/ -g/-g1}
	fi
}
