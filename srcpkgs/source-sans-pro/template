replaces="font-adobe-source-sans-pro-v2>=0"

do_install() {
	vmkdir usr/share/fonts/OTF/adobe
	vcopy "OTF/*.otf" usr/share/fonts/OTF/adobe
	vmkdir usr/share/fonts/TTF/adobe
	vcopy "TTF/*.ttf" usr/share/fonts/TTF/adobe
}
