do_install() {
	vlicense LICENSE
	vbin portproton
	vmkdir /usr/share/icons/scalable/apps/
	vcopy portproton.svg /usr/share/icons/scalable/apps/portproton.svg
	vmkdir /usr/share/applications/
	vcopy portproton.desktop /usr/share/applications/portproton.desktop
}
