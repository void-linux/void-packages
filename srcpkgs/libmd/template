# Template file for 'libmd'
pkgname=libmd
version=1.0.0
revision=1
build_style=gnu-configure
hostmakedepends="automake libtool"
short_desc="Message Digest functions from BSD systems"
maintainer="maxice8 <thinkabit.ukim@gmail.com>"
license="Beerware"
homepage="https://github.com/guillemj/libmd"
distfiles="https://github.com/guillemj/libmd/archive/${version}.tar.gz"
checksum=fc572d899c630e5dec0084ebd25459d4f7a2ca8a12977b21d1531ad75682584f

pre_configure() {
	autoreconf -fi
}

libmd-devel_package() {
	depends="libmd-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/man/man3
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"
	}
}