post_install() {
	vlicense LICENSE.txt LICENSE
}

python3-decorator_package() {
	depends="python3"
	pycompile_module="decorator.py"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE.txt LICENSE
	}
}
