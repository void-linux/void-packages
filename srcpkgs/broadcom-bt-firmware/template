do_install() {
	local f
	vmkdir usr/lib/firmware/brcm
	for f in ./brcm/*; do
		vinstall ${f} 0644 usr/lib/firmware/brcm
	done
	vlicense LICENSE.MIT.txt
	vlicense LICENSE.broadcom_bcm20702
}
