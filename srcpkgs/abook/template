# Template file for 'abook'
pkgname=abook
version=0.6.1
revision=1
build_style=gnu-configure
hostmakedepends="autoconf automake gettext-devel"
makedepends="ncurses-devel readline-devel"
maintainer="Philipp Hirsch <itself@hanspolo.net>"
license="GPL-2"
