# Template file for 'ocaml-easy-format'
pkgname=ocaml-easy-format
version=1.3.1
revision=1
wrksrc="easy-format-${version}"
build_style=gnu-makefile
hostmakedepends="ocaml dune"
short_desc="Pretty-printing library for OCaml"
maintainer="John <johnz@posteo.net>"
license="BSD-3-Clause"
homepage="https://github.com/mjambon/easy-format"
distfiles="https://github.com/mjambon/easy-format/archive/v${version}.tar.gz"
checksum=489d55ea5de171cea2d7e2114bcd5cebd1fcbf89f839fbf3757769507502e1f0
nocross=yes

do_install() {
	export OPAMROOT="${wrksrc}"/opam
	opam init -n
	OCAMLFIND_DESTDIR="${DESTDIR}$(ocamlfind printconf destdir)" jbuilder install

	vlicense LICENSE
}
