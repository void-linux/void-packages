# Template file for 'intel-ucode'
pkgname=intel-ucode
version=20220809
revision=1
archs="i686* x86_64*"
short_desc="Microcode update files for Intel CPUs"
maintainer="Andrew J. Hesford <ajh@sideband.org>"
license="custom: Proprietary"
homepage="https://github.com/intel/Intel-Linux-Processor-Microcode-Data-Files"
distfiles="${homepage}/archive/microcode-${version}.tar.gz"
checksum=084463c82fbcb679e7fa211e676fd12a8ae464fed7d445e92ccc67101ced5a94
repository=nonfree

do_install() {
	vmkdir usr/lib/firmware/intel-ucode
	vcopy "intel-ucode/*" usr/lib/firmware/intel-ucode
	vmkdir usr/lib/dracut/dracut.conf.d
	echo "early_microcode=yes" >> ${DESTDIR}/usr/lib/dracut/dracut.conf.d/intel_ucode.conf
	vlicense license
}
