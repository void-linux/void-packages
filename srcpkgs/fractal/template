pre_build() {
	cargo update --package petgraph --precise 0.4.13
	export GETTEXT_BIN_DIR=/usr/bin
	export GETTEXT_LIB_DIR="${XBPS_CROSS_BASE}/usr/lib/gettext"
	export GETTEXT_INCLUDE_DIR="${XBPS_CROSS_BASE}/usr/include"
}
