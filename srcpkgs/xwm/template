# Template file for 'xwm'
pkgname=xwm
version=0.1.3
revision=1
build_style=gnu-makefile
makedepends="libX11-devel xcb-util-keysyms-devel"
short_desc="Tiny XCB floating window manager"
maintainer="mcpcpc <info@mcpcpc.com>"
license="MIT"
homepage="https://github.com/mcpcpc/xwm"
distfiles="https://github.com/mcpcpc/xwm/archive/${version}.tar.gz"
checksum=c394be4d045f2819e5c1c26a3c6f5557493f90e5d21eea692b666cdc678a0d63

do_build() {
	[ -e ${FILESDIR}/config.h ] && cp ${FILESDIR}/config.h config.h
	make CC=$CC
}

post_install() {
	vlicense LICENSE
}
