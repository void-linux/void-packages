do_extract() {
	ar x "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_debpkgid}"
	bsdtar xzpvf data.tar.gz
}

do_install() {
	vbin bin/warp-svc
	vbin bin/warp-taskbar
	vbin bin/warp-diag
	vbin bin/warp-cli
	vsv cloudflare-warp
}
