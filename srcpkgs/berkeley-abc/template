revision=1
wrksrc=abc-$_gitrev
build_style=gnu-makefile
make_use_env=yes
make_build_args="ABC_MAKE_VERBOSE=1 ABC_USE_STDINT_H=1"
makedepends="readline-devel zlib-devel bzip2-devel"
short_desc="System for Sequential Synthesis and Verification"
