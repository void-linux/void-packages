distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=3426b476ed3a9de868f31311309b98b2c6535250ea071abc85df7170a42f50ea

qqc2-desktop-style-devel_package() {
