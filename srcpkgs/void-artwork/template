	vinstall ${FILESDIR}/splashwhite.png 644 usr/share/void-artwork
	vinstall ${FILESDIR}/void-logo.png 644 usr/share/void-artwork
	vinstall ${FILESDIR}/void-transparent.png 644 usr/share/void-artwork
}
