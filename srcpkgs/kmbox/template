# Template file for 'kmbox'
pkgname=kmbox
version=20.04.1
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python3
 gettext"
makedepends="kmime-devel qt5-devel kcodecs-devel"
short_desc="Library for accessing mail storages in MBox format"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/kmbox-${version}.tar.xz"
checksum=2ccfc0d2c12acedf72713ee31c8a7b586b95e4826434a333ab3478b2d1f0960d

kmbox-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
