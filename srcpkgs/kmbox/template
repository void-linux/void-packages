# Template file for 'kmbox'
pkgname=kmbox
version=24.05.1
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DKF6_HOST_TOOLING=/usr/lib/cmake
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins
 -DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt6/mkspecs/modules"
hostmakedepends="extra-cmake-modules qt6-base qt6-tools python3
 gettext"
makedepends="kmime6-devel qt6-base-devel kf6-kcodecs-devel"
short_desc="Library for accessing mail storages in MBox format"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/kmbox-${version}.tar.xz"
checksum=e8ad50953d765a12d9a4c18746c02a8f2ef6feb75081030cbb12ec47489d136c

kmbox-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
