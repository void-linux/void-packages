pkgname=xcircuit
version=3.10.13
revision=1
build_style=gnu-configure
make_build_args="ACLOCAL=aclocal AUTOMAKE=automake"
hostmakedepends="automake pkg-config"
makedepends="cairo-devel libXpm-devel libXt-devel tk-devel"
