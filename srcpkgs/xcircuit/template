post_install() {
	vmkdir usr/share/man/man1
	mv ${DESTDIR}/usr/lib/xcircuit-${version%.*}/man/* ${DESTDIR}/usr/share/man/man1/
	rm -rf ${DESTDIR}/usr/lib/xcircuit-${version%.*}/man
}
