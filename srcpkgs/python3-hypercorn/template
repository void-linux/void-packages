do_check() {
	vsed -i pyproject.toml -e '/addopts/d'
	# Ignored tests depend on packages not offered by Void
	PYTHONPATH=src python3 -m pytest \
		--ignore-glob="tests/trio/*" \
		--ignore=tests/middleware/test_wsgi.py
}

post_install() {
	vlicense LICENSE
}
