# Template file for 'mutter'
pkgname=mutter
version=3.34.3
revision=1
build_helper="gir"
build_style=meson
configure_args="-Degl_device=true -Dudev=true -Dnative_backend=true
 -Dprofiler=false -Dintrospection=$(vopt_if gir true false) -Dxwayland_path=/usr/bin/Xwayland"
hostmakedepends="glib-devel pkg-config zenity wayland-devel xorg-server"
makedepends="elogind-devel glib-devel gnome-desktop-devel json-glib-devel
 libglib-devel libSM-devel libXtst-devel libcanberra-devel libinput-devel
 MesaLib-devel pipewire-devel startup-notification-devel wayland-protocols
 gnome-settings-daemon-devel graphene-devel"
depends="desktop-file-utils zenity"
short_desc="Lightweight GTK+3 window manager"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://wiki.gnome.org/Projects/Mutter/"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=cdf57ddd0bc35db952b732b77c796760e65d1ce2f7df31273e5c8d4759ed4a89
shlib_provides="libmutter-5.so.0 libmutter-cogl-pango-5.so.0 libmutter-cogl-5.so.0
 libmutter-clutter-5.so.0 libmutter-cogl-path-5.so.0 libmutter-clutter-5.so
 libmutter-cogl-5.so libmutter-cogl-pango-5.so libmutter-cogl-path-5.so"
patch_args="-Np1"

build_options="gir"
build_options_default="gir"

mutter-devel_package() {
	depends="gsettings-desktop-schemas gtk+3-devel clutter-devel libX11-devel
	 libXtst-devel mutter-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		if [ $build_option_gir ]; then
			vmove "usr/lib/mutter-5/*.gir"
		fi
		vmove "usr/lib/*.so"
	}
}
