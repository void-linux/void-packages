	depends+=" signon-ui"
fi

post_install() {
	# Pulled by kf6-kaccounts-integration
	rm -rf "${DESTDIR}/usr/share/locale"
}

kaccounts-integration-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
