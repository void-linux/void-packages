case "$ACTION" in
post)
	# Compile the terminfo description.
	case "$ARCH" in
	x86_64*|i686*)
		tic -sxe alacritty,alacritty-direct usr/share/terminfo/a/alacritty.info
		;;
	*)
		# During ncurses cross compilation HAVE_BIG_CORE is set to "no",
		# which disables "-e" option in tic.
		tic -sx usr/share/terminfo/a/alacritty.info
		rm usr/share/terminfo/a/allacritty+common
		;;
	esac
	;;
esac
