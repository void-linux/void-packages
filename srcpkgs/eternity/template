 f19b18f35564f4db6f5d35d820655ea48e2cf8ffb193037fad74eecbabb35f07"

post_extract() {
	cp -r ${wrksrc}/libADLMIDI-1.5.0.1-1/* ${wrksrc}/${pkgname}-${version}/adlmidi
