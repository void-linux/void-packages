}

post_install() {
	# drop asyncio stuff from python2
	# https://github.com/pexpect/pexpect/issues/290
	rm -f ${DESTDIR}/usr/lib/python$py3_ver/site-packages/pexpect/_async.py
	vlicense LICENSE
}
