post_install() {
	vlicense LICENSE
}

do_check() {
	git clone https://github.com/kdheepak/taskwarrior-testdata/
	export TASKRC=$(pwd)/taskwarrior-testdata/.taskrc
	export TASKDATA=$(pwd)/taskwarrior-testdata/.task
	task import $(pwd)/taskwarrior-testdata/export.json
}
