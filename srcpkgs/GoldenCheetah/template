pre_configure() {
	cp "qwt/qwtconfig.pri.in" "qwt/qwtconfig.pri"

	echo "QMAKE_LRELEASE = /usr/bin/lrelease" > src/gcconfig.pri
	echo "LIBZ_LIBS = -lz" >> src/gcconfig.pri
}

do_install() {
	vbin "src/GoldenCheetah"
}
