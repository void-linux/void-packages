python3-google-auth-httplib2_package() {
	noarch=yes
	depends="python3-google-auth python3-httplib2 python3-six"
	pycompile_module="google_auth_httplib2"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
