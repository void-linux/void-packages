# Template file for 'kf6-kparts'
pkgname=kf6-kparts
version=6.18.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 gettext kf6-kconfig"
makedepends="kf6-kconfig-devel kf6-kcoreaddons-devel kf6-ki18n-devel
 kf6-kio-devel kf6-kxmlgui-devel"
short_desc="KDE Plugin framework for user interface components"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kparts"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname#kf6-}-${version}.tar.xz"
checksum=846e522e6aff2a219064a52e9baeefdfbcbea71dadb1810b9c58cb9c41821604

kf6-kparts-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
