# Template for wcli
pkgname=wcli
version=0.1.1
revision=1
archs="x86_64"
hostmakedepends="curl tar xz"
short_desc="A terminal-based weather application written in Zig"
maintainer="Konstantinos Despoinidis <despoinidisk@gmail.com>"
license="MIT"
homepage="https://github.com/KDesp73/wcli"
distfiles="https://github.com/KDesp73/wcli/archive/refs/tags/v${version}.tar.gz"
checksum="d461c45ded82fb721a487eb59413074db96aaeef26295b4750ad1cdc6b456436"

do_build() {
	curl -L https://ziglang.org/download/0.14.1/zig-x86_64-linux-0.14.1.tar.xz -o zig.tar.xz
	tar xvf zig.tar.xz
	./zig-x86_64-linux-0.14.1/zig build
}

do_install() {
    vbin zig-out/bin/wcli
    vlicense LICENSE
    # TODO: install autocomplete
}
