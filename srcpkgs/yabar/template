# Template file for 'yabar'
pkgname=yabar
version=0.4.0
revision=1
hostmakedepends="pkg-config"
makedepends="pango-devel cairo-devel libconfig-devel xcb-util-wm-devel alsa-lib-devel gdk-pixbuf-devel"
depends="pango cairo alsa-utils xcb-util-wm libconfig gdk-pixbuf"
short_desc="Modern and lightweight status bar for X window managers"
maintainer="shizonic <realtiaz@gmail.com>"
license="MIT"
homepage="https://github.com/geommer/yabar"
distfiles="https://github.com/geommer/yabar/archive/${version}.tar.gz"
checksum=f8cc613413328af78944ccb8063a5ba8e6be11797a883c419876e973e102fed0
patch_args="-Np1"

do_build() {
	sed -ie "s/\$(VERSION)/${version}/" Makefile
	make
}

do_install() {
	make DESTDIR="${DESTDIR}" install
	vdoc README.md
	vdoc examples/example.config
	vdoc examples/internal1.config
	vman doc/yabar.1
	vlicense LICENSE
}
