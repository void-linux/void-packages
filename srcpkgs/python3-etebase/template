wrksrc="etebase-py-${version}"
build_style=python3-module
build_helper="rust"
hostmakedepends="python3-setuptools-rust python3-wheel cargo pkg-config"
makedepends="libsodium libsodium-devel openssl-devel"
depends="python3-msgpack"
