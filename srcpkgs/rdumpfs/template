# Template file for 'rdumpfs'
pkgname=rdumpfs
version=0.1
revision=4
depends="rsync bash"
short_desc="A rsync-based dump file system backup tool"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="Public Domain"
homepage="https://github.com/leahneukirchen/rdumpfs"
