hostmakedepends="pkg-config qt5-qmake qt5-host-tools"
makedepends="alsa-lib-devel ffmpeg-devel libass-devel libcdio-devel libgme-devel
 libsidplayfp-devel libva-glx-devel libXv-devel pulseaudio-devel
