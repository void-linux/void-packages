# Template file for 'gtk-vnc'
pkgname=gtk-vnc
version=1.0.0
revision=1
build_style=meson
build_helper="gir"
configure_args="-Dwith-coroutine=gthread -Dwith-vala=$(vopt_if vala true false)"
hostmakedepends="pkg-config"
makedepends="gnutls-devel gtk+3-devel cyrus-sasl libgpg-error-devel expat-devel
 perl-Text-CSV glib-devel libgcrypt-devel $(vopt_if vala vala)"
short_desc="VNC viewer widget for GTK"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://wiki.gnome.org/Projects/gtk-vnc"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=a81a1f1a79ad4618027628ffac27d3391524c063d9411c7a36a5ec3380e6c080

build_options="gir vala"
build_options_default="gir vala"

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" perl glib-devel vala"
fi

gvncviewer_package() {
	short_desc="Demo application for gtk-vnc"
	pkg_install() {
		vbin ${wrksrc}/build/examples/gvncviewer
	}
}

gtk-vnc-devel_package() {
	depends="glib-devel gtk+3-devel gtk-vnc>=${version}_${revision}"
	short_desc+=" (development files)"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
		if [ "$build_option_vala" ]; then
			vmove usr/share/vala
		fi
	}
}
