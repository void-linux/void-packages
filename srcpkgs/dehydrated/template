do_install() {
	vbin dehydrated
	vman docs/man/dehydrated.1
	vmkdir /etc
	vcopy docs/examples /etc/dehydrated
	rm -r docs/man
	rm -r docs/examples
	vlicense LICENSE
	for file in $(ls docs); do
		vdoc docs/$file
	done
}
