# Template file for 'attic'
pkgname=attic
version=0.16
revision=13
build_style=python3-module
pycompile_module="attic"
hostmakedepends="python3-setuptools python3-devel libressl-devel python3-Sphinx python3-Cython"
makedepends="${hostmakedepends/python3-setuptools/} acl-devel"
depends="python3-msgpack python3-llfuse"
short_desc="Deduplicating backup program for efficient and secure backups"
maintainer="Christian Neukirchen <chneukirchen@gmail.com>"
license="BSD-3-Clause"
homepage="https://attic-backup.org/"
distfiles="https://github.com/jborg/attic/archive/${version}.tar.gz"
checksum=ce44800b08540cbe334f0a4f5da49585850c1eea1bf621c2766bbdcc98a13e09

pre_build() {
	if [ "$CROSS_BUILD" ]; then
		sed -i "s|\(possible_openssl_prefixes\) =.*|\1 = ['${XBPS_CROSS_BASE}/usr']|" setup.py
	fi
}
post_build() {
	PYTHONPATH=.. make -C docs man SPHINXBUILD=sphinx-build3
}
post_install() {
	vlicense LICENSE
	vman docs/_build/man/attic-deduplicatingarchiver.1 attic.1
}
