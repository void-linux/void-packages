	depends="libgo>=${_majorver}"
	short_desc+=" - Go library - development files"
	pkg_install() {
		vmove usr/lib/libgo.a
		vmove usr/lib/libgobegin.a
		vmove usr/lib/libgolibbegin.a
		vmove usr/lib/libgo.so
	}
}
