version=0.1.1
revision=1
build_style=cmake
hostmakedepends="pkg-config wayland-devel"
makedepends="wayland-devel wayland-protocols cairo-devel pango-devel libjpeg-turbo-devel wlroots-devel libglvnd-devel"
