checksum=ed36f281aebf3cd0797f163bb165d84c31507cedd15928b095b1675e2d04c676

python3.4-idna_package() {
	noarch=yes
	depends="python3.4"
	pycompile_version="3.4"
	pycompile_module="idna"
	short_desc="${short_desc/Python2/Python3.4}"
	pkg_install() {
		vmove usr/lib/python3.4
	}
}
