# Template file for 'python3-Cheroot'
pkgname=python3-Cheroot
version=8.2.1
revision=3
archs=noarch
wrksrc="cheroot-${version}"
build_style=python3-module
pycompile_module="cheroot"
hostmakedepends="python3-setuptools"
depends="python3-setuptools python3-six python3-more-itertools
 python3-jaraco.functools"
short_desc="High-performance, pure-Python HTTP server (Python3)"
maintainer="bra1nwave <bra1nwave@protonmail.com>"
license="BSD-3-Clause"
homepage="https://github.com/cherrypy/cheroot"
changelog="https://github.com/cherrypy/cheroot/blob/master/CHANGES.rst"
distfiles="${PYPI_SITE}/c/cheroot/cheroot-${version}.tar.gz"
checksum=5b525b3e4a755adf78070ab54c1821fb860d4255a9317dba2b88eb2df2441cff

pre_build() {
	vsed -i setup.cfg \
		-e '/setuptools_scm/d' \
		-e '/use_scm_version/d' \
		-e "/name = /a\
		version = ${version}"
}

post_install() {
	vlicense LICENSE.md
}
