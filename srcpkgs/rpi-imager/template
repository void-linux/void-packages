post_patch() {
	vsed -i -e 's/CURL REQUIRED \([0-9.]*\)/CURL \1 REQUIRED/' CMakeLists.txt
}

pre_configure() {
	ln -sf /bin/true $XBPS_WRAPPERDIR/lsblk
}
