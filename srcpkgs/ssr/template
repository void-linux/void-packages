hostmakedepends="pkg-config"
makedepends="alsa-lib-devel ffmpeg-devel glu-devel jack-devel pulseaudio-devel
 qt5-tools-devel qt5-x11extras-devel"
depends="desktop-file-utils hicolor-icon-theme"
