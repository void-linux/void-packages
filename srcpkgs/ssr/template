if [ -n "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-host-tools qt5-qmake"
fi

case "$XBPS_TARGET_MACHINE" in
	i686*|x86_64*) ;;
	*) configure_args+=" -DENABLE_X86_ASM=no -DWITH_GLINJECT=no" ;;
