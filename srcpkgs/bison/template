alternatives="
 yacc:yacc:/usr/bin/bison-yacc
 yacc:yacc.1:/usr/share/man/man1/bison-yacc.1"

do_check() {
	# Missing files for compilation
	:
}

post_install() {
	mv ${DESTDIR}/usr/bin/{yacc,bison-yacc}
	mv ${DESTDIR}/usr/share/man/man1/{yacc,bison-yacc}.1
}
