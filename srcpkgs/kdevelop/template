# Template file for 'kdevelop'
pkgname=kdevelop
version=25.12.0
revision=1
_llvmver=21
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DKF6_HOST_TOOLING=/usr/lib/cmake
 -DClang_DIR=${XBPS_CROSS_BASE}/usr/lib/llvm/${_llvmver}/lib/cmake/clang
 -DCMAKE_C_STANDARD=11" # Required for static_assert
hostmakedepends="extra-cmake-modules qt6-base qt6-tools shared-mime-info
 pkg-config clang-tools-extra${_llvmver} meson clazy kf6-kpackage
 kdevelop-pg-qt gettext tar kf6-kdoctools kf6-kconfig kf6-kcmutils"
makedepends="
 qt6-base-devel
 qt6-qt5compat-devel
 qt6-declarative-devel
 qt6-tools-devel
 qt6-location-devel qt6-webchannel-devel qt6-webengine-devel
 kf6-kconfig-devel
 kf6-kiconthemes-devel
 kf6-ki18n-devel
 kf6-kitemmodels-devel
 kf6-kitemviews-devel
 kf6-kjobwidgets-devel
 kf6-kcmutils-devel
 kf6-kio-devel
 kf6-knewstuff-devel
 kf6-knotifyconfig-devel
 kf6-kparts-devel
 kf6-kservice-devel
 kf6-ktexteditor-devel
 kf6-threadweaver-devel
 kf6-kxmlgui-devel
 kf6-kwindowsystem-devel
 kf6-kcrash-devel
 kf6-kguiaddons-devel
 kf6-karchive-devel
 kf6-knotifications-devel
 kf6-sonnet-devel
 kf6-ktexttemplate-devel
 kf6-ktextwidgets-devel
 kf6-krunner-devel
 kf6-kwidgetsaddons-devel
 kf6-purpose-devel
 libksysguard-devel
 kf6-kpackage-devel
 apr-util-devel subversion-devel
 llvm${_llvmver}-devel clang${_llvmver}-devel
 libkomparediff2-devel
 astyle
 libedit-devel libplasma-devel
 boost-headers"
# khelpcenter is required to display documentation
depends="khelpcenter"
short_desc="Integrated Development Environment for C/C++"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://www.kdevelop.org/"
changelog="https://kde.org/announcements/changelogs/gear/${version}/#kdevelop"
distfiles="${KDE_SITE}/release-service/${version}/src/kdevelop-${version}.tar.xz"
checksum=efff758bd586af5d82329d2f340abfe646673d89fc6f5770838aea49f73f3f5f

if [ "$XBPS_WORDSIZE$XBPS_WORDSIZE" != "64$XBPS_TARGET_WORDSIZE" ]; then
	broken="no qt6-webengine"
fi

post_install() {
	vdoc "${FILESDIR}/README.voidlinux"
}

kdevelop-devel_package() {
	depends="kdevelop>=${version}_${revision} qt6-webengine-devel
	 qt6-qt5compat-devel kf6-ktexteditor-devel kf6-threadweaver-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		# avoid libkdevcmakecommon.so
		vmove "usr/lib/libKDevPlatform*.so"
	}
}
