# Template file for 'uemacs'
pkgname=uemacs
version=4.0.15
revision=1
makedepends="ncurses-devel"
short_desc="Full screen editor based on MicroEMACS 3.9e"
maintainer="Friedel Schon <derfriedmundschoen@gmail.com>"
license="Public Domain"
homepage="https://github.com/friedelschoen/uemacs"
distfiles="https://github.com/friedelschoen/uemacs/archive/refs/tags/v$version.tar.gz"
checksum=af3b9b0779619f8396d23c536c52036160919e74680d711e800dd75150de7715

do_build() {
	make CC=${CC}
}

do_install() {
	vlicense README
	vbin em
	vinstall emacs.hlp 644 /usr/lib
	vinstall emacs.rc 644 /usr/lib/.emacsrc
}
