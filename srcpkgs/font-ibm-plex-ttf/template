# Template file for 'font-ibm-plex-ttf'
pkgname=font-ibm-plex-ttf
version=1.3.1
revision=1
archs=noarch
wrksrc="plex-${version}"
depends="font-util"
short_desc="IBMâ€™s typeface, IBM Plex (TTF variant)"
maintainer="Vintodrimmer <vintodrimmer@protonmail.ch>"
license="OFL-1.1"
