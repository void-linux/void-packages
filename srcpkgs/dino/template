do_configure() {
	./configure
}

do_build() {
	make
}

do_install() {
	vbin build/dino

	vinstall build/libdino.so.0 755 /usr/lib
	vinstall build/libqlite.so.0 755 /usr/lib
	vinstall build/libxmpp-vala.so.0 755 /usr/lib

	ldconfig
}
