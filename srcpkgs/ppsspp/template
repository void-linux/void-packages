skip_extraction="
 ${_armips_commit}.tar.gz
 ${_glslang_commit}.tar.gz
 ${_SPIRV_Cross_commit}.tar.gz
 ${_discord_rpc_commit}.tar.gz
 ${_miniupnp_commit}.tar.gz
