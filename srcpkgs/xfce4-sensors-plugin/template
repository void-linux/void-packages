# Template file for 'xfce4-sensors-plugin'
pkgname=xfce4-sensors-plugin
version=1.5.0
revision=1
build_style=meson
# sysfsacpi requires procacpi, but detection logic is dumb
# xnvctrl requires libXNVCtrol.so
configure_args="-Dhddtemp-path=/usr/bin/hddtemp -Dprocacpi=enabled
 -Dsysfsacpi=enabled -Dxnvctrl=disabled"
hostmakedepends="pkg-config gettext"
makedepends="libsensors-devel xfce4-panel-devel libnotify-devel libglib-devel
 gtk+3-devel libxfce4ui-devel libxfce4util-devel "
depends="hicolor-icon-theme desktop-file-utils"
short_desc="Xfce hardware sensors plugin"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://goodies.xfce.org/projects/panel-plugins/xfce4-sensors-plugin"
changelog="https://gitlab.xfce.org/panel-plugins/xfce4-sensors-plugin/-/raw/master/NEWS"
