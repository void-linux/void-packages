conf_files="/etc/acpi/events/anything /etc/acpi/handler.sh"

post_install() {
	vinstall ${FILESDIR}/handler.sh 755 etc/acpi
	vinstall ${FILESDIR}/anything 644 etc/acpi/events
	vsv acpid
}
