CXXFLAGS="-Wl,-lpthread"

if [ "$XBPS_TARGET_ENDIAN" != "le" ] ||
	[ $XBPS_WORDSIZE != 64 ] ||
	[ "$XBPS_WORDSIZE" != "$XBPS_TARGET_WORDSIZE" ]; then
	broken="require webengine"
fi

if [ -n "$CROSS_BUILD" ]; then
	configure_args+=" -DSSE4_1_FOUND=OFF -DSSE2_FOUND=OFF"
