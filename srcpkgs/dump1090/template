# Template file for 'dump1090'
pkgname=dump1090
version=1.0
revision=1
_gitrev="0c3bb23eb447d4ae47c7013346fa6fa97482bb1d"
build_style=gnu-makefile
hostmakedepends="git pkg-config"
makedepends="librtlsdr-devel"
short_desc="ADS-B decoder specifically designed for RTLSDR devices"
maintainer="Dakota Richline <drichline@protonmail.com>"
license="BSD-3-Clause"
homepage="https://github.com/antirez/dump1090"

do_fetch() {
	rm -rf ${wrksrc}
	git clone ${homepage} ${wrksrc}
	cd ${wrksrc}
	git checkout ${_gitrev}
}

do_install() {
	vbin dump1090
	vlicense ${FILESDIR}/LICENSE
}
