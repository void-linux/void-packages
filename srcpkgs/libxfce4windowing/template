libxfce4windowing-devel_package() {
	depends="libglib-devel gdk-pixbuf-devel gtk+3-devel libdisplay-info-devel
	 ${sourcepkg}>=${version}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove "usr/share/gir-*"
	}
}
