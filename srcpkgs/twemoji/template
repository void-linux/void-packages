do_install() {
	vlicense LICENSE-MIT.txt
	vlicense LICENSE-CC-BY.txt
	vmkdir etc/fonts/conf.d/
	install -Dm644 TwitterColorEmoji-SVGinOT.ttf ${DESTDIR}/usr/share/fonts/twemoji/TwitterColorEmoji-SVGinOT.ttf
}
