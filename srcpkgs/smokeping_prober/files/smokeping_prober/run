#!/bin/sh
exec 2>&1

# Add $ARGS for more arguments to smokeping_prober 
# $CONF_FILE is the location of the configuration file.

[ -f ./conf ] && . ./conf || exit 1;
[ -z "$CONF_FILE" ] && exit 2;

: ${USER:=_smokeping_prober}

exec chpst -u $USER smokeping_prober --config.file "${CONF_FILE}" ${ARGS}
