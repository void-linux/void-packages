post_install() {
	vlicense LICENSE.rst
}

python3-imagesize_package() {
	archs=noarch
	depends="python3"
	pycompile_module="imagesize.py"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE.rst
	}
}
