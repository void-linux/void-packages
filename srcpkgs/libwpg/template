# Template file for 'libwpg'
pkgname=libwpg
version=0.3.4
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="libwpd-devel librevenge-devel boost-devel-minimal"
short_desc="Library for importing WordPerfect Graphics"
maintainer="Đoàn Trần Công Danh <congdanhqx@gmail.com>"
license="MPL-2.0, LGPL-2.1-or-later"
homepage="http://libwpg.sourceforge.net/"
distfiles="${SOURCEFORGE_SITE}/libwpg/libwpg-${version}.tar.xz"
checksum=b55fda9440d1e070630eb2487d8b8697cf412c214a27caee9df69cec7c004de3

libwpg-devel_package() {
	depends="libwpg>=${version}_${revision} librevenge-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}

libwpg-tools_package() {
	short_desc+=" - tools"
	pkg_install() {
		vmove usr/bin
	}
}
