# grub: follows etc/kernel.d/post-install/50-grub actions
case ${ACTION} in
post)
	RESULT=1
	if command -v grub-mkconfig >/dev/null 2>&1; then
		if [ -d $ROOTDIR/boot/grub ]; then
			grub-mkconfig -o $ROOTDIR/boot/grub/grub.cfg
			RESULT=$?
	        fi
	fi
	[ $RESULT -ne 0 ] && exit $RESULT
	;;
esac
