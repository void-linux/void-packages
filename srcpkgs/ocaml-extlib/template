# Template file for 'ocaml-extlib'
pkgname=ocaml-extlib
version=1.7.4
revision=1
build_style=gnu-makefile
hostmakedepends="ocaml ocaml-findlib cppo"
short_desc="Extended Standard Library for OCaml "
maintainer="John Zimmermann <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://github.com/ygrek/ocaml-extlib"
changelog="https://raw.githubusercontent.com/ygrek/ocaml-extlib/${version}/CHANGES"
distfiles="https://github.com/ygrek/ocaml-extlib/archive/${version}.tar.gz"
checksum=b99ce3bddc4b04ff1e68ae2054696ffdee600b487fac38e988d4d799edbdb340
nocross=yes

do_install() {
	vmkdir $(ocamlfind printconf destdir)
	export OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

	make install

	for _i in src/doc/*; do
		vdoc $_i
	done
}
