checksum=932843df9fa584e6a664b2e7a21dec4ddf9507c235a78853f21e00b111352395

do_check() {
	python3 -m pip install --no-deps --target test pytest_httpserver-${version}-*-*-*.whl
	PYTHONPATH=test python3 -m pytest tests
}

