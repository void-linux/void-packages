# Template file for 'fonts-roboto-ttf'
pkgname=fonts-roboto-ttf
_mono_version=3.001
version=2.138
revision=4
depends="font-util"
short_desc="Google's signature family of fonts"
maintainer="travankor <travankor@tuta.io>"
license="Apache-2.0 OR OFL-1.1"
homepage="https://fonts.google.com/specimen/Roboto"
distfiles="https://github.com/google/roboto/archive/refs/tags/v${version}.tar.gz
 https://github.com/googlefonts/RobotoMono/archive/refs/tags/v${_mono_version}.tar.gz"
checksum="299dbc4ea5d57e56c87742c099b944f4274b94815f34a734918630a75eb85d55
	677d8513918572700531a3115f721a416557a5c701b150abc4d118a7177c8bdc"
font_dirs="/usr/share/fonts/roboto"
conflicts="google-fonts-ttf<=20190605_2"

do_install() {
	vmkdir usr/share/fonts/roboto

	# Roboto
	find roboto-2-${version} -type f -name '*.ttf' \
		-exec install -Dm644 '{}' ${DESTDIR}/usr/share/fonts/roboto/ \;

	# Roboto Mono
	find RobotoMono-${_mono_version} -type f -name '*.ttf' \
		-exec install -Dm644 '{}' ${DESTDIR}/usr/share/fonts/roboto/ \;

	vlicense RobotoMono-${_mono_version}/OFL.txt
}
