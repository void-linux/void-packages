post_install() {
	vlicense LICENSE
	rm ${DESTDIR}/usr/wormhole_complete.*
	vcompletion wormhole_complete.bash bash wormhole
	vcompletion wormhole_complete.fish fish wormhole
	vcompletion wormhole_complete.zsh zsh _wormhole
}
