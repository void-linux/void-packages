do_configure() {
	./configure CC="${CC}" CXX="${CXX}" CFLAGS="${CFLAGS}" CXXFLAGS="${CXXFLAGS}" \
		LINK=${CXX} LDFLAGS="${LDFLAGS}" BINDIR=/usr/bin SHAREDIR=${pkgname}
}
