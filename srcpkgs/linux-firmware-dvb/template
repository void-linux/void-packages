do_extract() {
	mkdir -p ${wrksrc}
	tar xvf ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${pkgname}-${version}.tar.gz \
		--strip-components=2 -C ${wrksrc}
	tar xvf ${XBPS_SRCDISTDIR}/${pkgname}-${version}/dvb-firmwares.tar.bz2 \
		-C ${wrksrc}
}

do_build() {
	:
}

