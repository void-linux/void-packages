kactivities5-devel_package() {
	short_desc+=" - development"
	depends="${sourcepkg}>=${version}_${revision} qt5-devel"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
