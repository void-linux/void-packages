post_install() {
	vmkdir usr/libexec/vault
	mv $DESTDIR/usr/bin/acme $DESTDIR/usr/libexec/vault/acme
	mv $DESTDIR/usr/bin/{sidecar,vault-acme-sidecar}
	vlicense LICENSE
}
