# Template file for 'freerouting'
pkgname=freerouting
version=1.4.4
revision=2
hostmakedepends="gradle openjdk11"
depends="openjdk11"
short_desc="Advanced PCB autorouter"
maintainer="Ã‰rico Nogueira <ericonr@disroot.org>"
license="GPL-3.0-or-later"
