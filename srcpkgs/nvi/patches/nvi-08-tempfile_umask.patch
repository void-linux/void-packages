+		mode_t orig_umask;
 		if (opts_empty(sp, O_TMP_DIRECTORY, 0))
 			goto err;
+		orig_umask = umask(0);
+		umask(orig_umask & 0177);
 		(void)snprintf(tname, sizeof(tname),
 		    "%s/vi.XXXXXX", O_STR(sp, O_TMP_DIRECTORY));
 		if ((fd = mkstemp(tname)) == -1) {
+			umask(orig_umask);
 			msgq(sp, M_SYSERR,
