post_extract() {
	sed -i 's/${LD}/${CC}/' src/Makefile
	sed -i '/CC.*-o/s/$/ $(LDFLAGS)/' misc/Makefile
	sed -i 's/\($(DESTDIR)\)/\1$(PREFIX)/g' Makefile
}
