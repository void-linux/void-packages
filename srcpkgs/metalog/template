pre_configure() {
	./autogen.sh
}

post_install() {
	vsv metalog

	# Disable logging for metaloga to avoid any issues
	# https://github.com/void-linux/void-packages/pull/44912#issuecomment-1625625388
	rm -rf "${DESTDIR}/etc/sv/metalog/log"
}
