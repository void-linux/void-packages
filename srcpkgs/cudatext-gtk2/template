# Template file for 'cudatext-gtk2'
pkgname=cudatext-gtk2
version=1.168.6.1
revision=1
archs="x86_64"
hostmakedepends="tar xz python3"
depends="gtk+ python3"
short_desc="Cross-platform text and code editor, written in Lazarus"
maintainer="luan-adao <luanadao98@gmail.com>"
license="MPL-2.0"
homepage="https://cudatext.github.io"
distfiles="https://sourceforge.net/projects/cudatext/files/release/${version}/cudatext_${version}-1_gtk2_amd64.deb"
checksum=abb2340fbfd888bc87f7c870656679fe82156109373c5c695eafa0569bac360a
nostrip=yes
restricted=yes
python_version=3.6

do_extract() {
	mkdir -p ${DESTDIR}
	ar x ${XBPS_SRCDISTDIR}/cudatext-gtk2-${version}/cudatext_${version}-1_gtk2_amd64.deb
}

do_install() {
	tar xf data.tar.xz -C ${DESTDIR}
}
