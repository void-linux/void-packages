# Template file for 'nncp'
pkgname=nncp
version=6.2.0
revision=1
build_style=go
go_import_path=cypherpunks.ru/nncp
short_desc="Node to Node copy, utilities for secure store-and-forward"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="GPL-3.0-only"
