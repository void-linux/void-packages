revision=1
build_style=gnu-configure
makedepends="gmp-devel mpfr-devel"
short_desc="Lattice algorithms using floating-point orthogonalization and LLL"
maintainer="Gonzalo Tornar√≠a <tornaria@cmat.edu.uy>"
