distfiles="https://github.com/aanatoly/xtrlock-pam/archive/${version}.tar.gz"
checksum=dcc4b37a1ec303a99c9ef96412f6ba875f0c06355cdfdf4605a2a0a9e144c5d2

post_install() {
	ln -s xtrlock-pam ${DESTDIR}/usr/bin/xtrlock
}
