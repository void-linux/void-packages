do_build() {
	cp ${XBPS_CROSS_BASE}/usr/src/sun7i-kernel*/include/video/sunxi_disp_ioctl.h .
	$CC $CFLAGS $LDFLAGS -Wall a10disp.c -o a10disp
}
do_install() {
	vbin a10disp
	vdoc README
}
