# Template file for 's6-rc'
pkgname=s6-rc
version=0.5.4.2
revision=1
build_style=configure
configure_args="--prefix=/usr --libdir=/usr/lib --includedir=/usr/include
 --with-sysdeps=${XBPS_CROSS_BASE}/usr/lib/skalibs/sysdeps
 --with-lib=${XBPS_CROSS_BASE}/usr/lib $(vopt_if static --enable-static-libc)"
makedepends="execline-devel skalibs-devel s6-devel"
depends="s6>=2.12.0.0_1 execline>=2.9.4.0_1"
short_desc="Service manager of the s6 init system"
maintainer="Duncaen <duncaen@voidlinux.org>"
license="ISC"
homepage="https://skarnet.org/software/s6-rc/"
changelog="https://skarnet.org/software/s6-rc/upgrade.html"
distfiles="https://skarnet.org/software/s6-rc/s6-rc-${version}.tar.gz"
checksum=00bdfa596fa7161512e972ec9282a2abd8fd0e31f09177bad7a2bc3d8f283982

build_options="static"
desc_option_static="Build static binaries"

post_install() {
	vlicense COPYING
	vdoc README
	vcopy "doc/*" usr/share/doc/${pkgname}
	vmkdir usr/share/examples/${pkgname}
	vcopy "examples/source/*" usr/share/examples/${pkgname}/
}

s6-rc-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
	}
}

s6-rc-doc_package() {
	short_desc+=" - documentation"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/share/doc
	}
}
