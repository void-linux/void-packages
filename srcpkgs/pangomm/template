# Template file for 'pangomm'
pkgname=pangomm
version=2.43.1
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="libsigc++-devel glibmm-devel cairomm-devel pango-devel"
short_desc="C++ bindings for the pango library"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="https://gtkmm.org"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=00483967b4ed0869da09dc0617de45625b9ab846c7b07aa25dfc940a4fc540a4
patch_args="-Np1"

pangomm-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/pango*"
		vmove "usr/lib/*.so"
	}
}
