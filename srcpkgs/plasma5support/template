# Template file for 'plasma5support'
pkgname=plasma5support
version=6.5.4
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-base qt6-tools gettext
 kf6-kconfig qt6-declarative-host-tools pkg-config"
makedepends="qt6-declarative-devel kf6-kconfig-devel kf6-ki18n-devel
 kf6-kcoreaddons-devel kf6-knotifications-devel kf6-kguiaddons-devel
 kf6-solid-devel libksysguard-devel kf6-kio-devel kf6-kidletime-devel
 kf6-kservice-devel kf6-kio-devel kf6-kunitconversion-devel
 kf6-kholidays-devel kf6-networkmanager-qt-devel plasma-activities-devel
 qt6-base-private-devel libglib-devel"
short_desc="Support components for porting from KF5/Qt5 to KF6/Qt6"
maintainer="John <me@johnnynator.dev>"
license="GPL-3.0-or-later"
homepage="https://invent.kde.org/plasma/plasma5support"
distfiles="${KDE_SITE}/plasma/${version}/${pkgname}-${version}.tar.xz"
checksum=addeb62d9eee6e70a0642876ce00e27e437cfd6e6d0bdaee31a378c26ac3d258

do_check() {
	cd build
	ctest -E "pluginloadertest"
}

plasma5support-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
