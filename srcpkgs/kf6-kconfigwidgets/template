# Template file for 'kf6-kconfigwidgets'
pkgname=kf6-kconfigwidgets
version=6.19.0
revision=1
build_style=cmake
configure_args="-DKF6_HOST_TOOLING=/usr/lib/cmake"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 gettext kf6-kconfig-devel"
makedepends="kf6-kcodecs-devel kf6-kcolorscheme-devel kf6-kconfig-devel
 kf6-kcoreaddons-devel kf6-kwidgetsaddons-devel qt6-base-private-devel"
short_desc="Widgets for KConfig"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kconfigwidgets"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname#kf6-}-${version}.tar.xz"
checksum=1d785b68307c054a6133b8e4e462b569f02ec7adb8aafe1b95f49531b9a87f7c

do_check() {
	cd build
	# disable failing tests
	ctest -E "kstandardactiontest"
}

kf6-kconfigwidgets-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} kf6-kcodecs-devel
	 kf6-kconfig-devel kf6-kwidgetsaddons-devel kf6-kcolorscheme-devel
	 qt6-base-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
