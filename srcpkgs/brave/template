# Template file for 'brave'
pkgname=brave
version=1.2.41
revision=1
archs="x86_64"
create_wrksrc=yes
build_style=fetch
makedepends="unzip"
short_desc="Web browser that stops ads and trackers by default"
maintainer="Malte Gejr <maltegejr.korup@gmail.com>"
license="MPL-2.0"
homepage="https://brave.com/"
distfiles="https://github.com/brave/brave-browser/releases/download/v${version}/brave-v${version}-linux-x64.zip>brave.zip"
checksum=fe5228ab8fdc2d1d3e59e849b4cd3b9a60b6b8a3553011f33382eecb608e0cae

do_install() {
	vmkdir /usr/share/brave
	vinstall "${FILESDIR}/brave.desktop" 755 "/usr/share/applications/"
	cd ${wrksrc} && unzip -q "brave.zip" && rm "brave.zip"
	vbin "${wrksrc}/brave" && rm "${wrksrc}/brave"
	cp -r ${wrksrc}/* "${DESTDIR}/usr/share/brave"
}
