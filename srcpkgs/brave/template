# Template file for 'brave'
pkgname=brave
version=1.2.41
revision=1
archs="x86_64"
create_wrksrc=yes
build_style=fetch
makedepends="unzip"
short_desc="A web browser that stops ads and trackers by default"
maintainer="Malte Gejr <maltegejr.korup@gmail.com>"
license="MPL-2.0"
homepage="https://brave.com/"
triggers="update-desktopdb"
_sarch="x64"
_schecksum="fe5228ab8fdc2d1d3e59e849b4cd3b9a60b6b8a3553011f33382eecb608e0cae"
do_install() {
  vmkdir /usr/share/brave
  echo "export SVERSION=\"${version}\"" >"${DESTDIR}/usr/share/brave/pkgdata"
  echo "export SARCH=\"${_sarch}\"" >"${DESTDIR}/usr/share/brave/pkgdata"
  echo "export SCHECKSUM=\"${_schecksum}\"" >>"${DESTDIR}/usr/share/brave/pkgdata"
}
