make_install_args="RAKUDO_LOG_PRECOMP=1 RAKUDO_RERESOLVE_DEPENDENCIES=0"
configure_script="perl Configure.pl"
configure_args="--prefix=/usr --rakudo-home=/usr/lib/raku --backends=moar"
make_dirs="
