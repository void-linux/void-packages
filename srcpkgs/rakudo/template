post_extract() {
	# remove failing test
	rm --force t/09-moar/01-profilers.t
	# remove failing test on i686
	if [ "${XBPS_TARGET_WORDSIZE}" -eq 32 ]; then
		rm --force t/04-nativecall/26-varargs.t
	fi
}

post_install() {
	vbin tools/install-dist.raku raku-install-dist
}
