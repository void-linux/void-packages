do_check() {
	# Must export PYTHONPATH so subprocesses see the variable
	local _pypath="${PYTHONPATH}"
	export PYTHONPATH="${PWD}/src:${PYTHONPATH}"
	python3 -m pytest
}

post_install() {
	vlicense LICENSE
}
