post_install() {
	for f in soju.1 sojuctl.1; do
		scdoc <doc/$f.scd >doc/$f
		vman doc/$f
	done
	vlicense LICENSE
	vinstall $FILESDIR/config 644 etc/soju
	vdoc $FILESDIR/README.voidlinux
	vsv soju
}
