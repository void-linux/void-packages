post_install() {
	for f in doc/*.?.scd; do
		scdoc <$f >"${f%.scd}"
		vman "${f%.scd}"
	done
	vlicense LICENSE
	vinstall $FILESDIR/config 644 etc/soju
	vdoc $FILESDIR/README.voidlinux
	vsv soju
}
