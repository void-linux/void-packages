do_install() {
	vbin bin/xpanes
	vbin bin/tmux-xpanes

	vlicense LICENSE
	vman man/xpanes.1
	vman man/tmux-xpanes.1

	vinstall completion/zsh/_xpanes 644 usr/share/zsh/site-functions
	vinstall completion/zsh/_tmux-xpanes 644 usr/share/zsh/site-functions
}
