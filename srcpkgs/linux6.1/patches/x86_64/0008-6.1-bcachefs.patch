+	list_for_each_entry(pin, &pin_list->key_cache_list, list) {
+		prt_printf(out, "\t%px %ps", pin, pin->flush);
+		prt_newline(out);
+	}
+
+	if (!list_empty(&pin_list->flushed)) {
