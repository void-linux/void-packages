# Template file for 'kf6-kdesu'
pkgname=kf6-kdesu
version=6.21.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 gettext kf6-kconfig"
makedepends="kf6-kconfig-devel kf6-kcoreaddons-devel kf6-ki18n-devel
 kf6-kpty-devel qt6-base-private-devel"
short_desc="KDE User interface for running shell commands with root privileges"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kdesu"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname#kf6-}-${version}.tar.xz"
checksum=5029d646f1607d54385d0abbed8aabf1e844bede445c411998aa1bdcf0b85f76

kf6-kdesu-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} kf6-kpty-devel qt6-base-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
