if [ -n "$CROSS_BUILD" ]; then
	configure_args+=" --with-boost-unit-test-framework=no"
fi

brial-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision} m4ri-devel boost-devel-minimal"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
