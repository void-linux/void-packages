# Template file for 'libyuv'
pkgname=libyuv
version=0.0.1922.20251020
revision=1
_yuv_version=1922
_commit=500f45652c459cfccd20f83f297eb66cb7b015cb
build_style=cmake
configure_args="-DUNIT_TEST=1 -DYUV_SO_VERSION=$_yuv_version"
makedepends="libjpeg-turbo-devel gtest-devel"
short_desc="Library for YUV scaling"
maintainer="John <me@johnnynator.dev>"
license="BSD-3-Clause"
homepage="https://chromium.googlesource.com/libyuv/libyuv/"
distfiles="https://chromium.googlesource.com/libyuv/libyuv/+archive/$_commit.tar.gz"
checksum=@40bb688ef09c3e9bcd0ce1b430a61804d42b0fe117bfd78f7bfcf12345a399a9

post_install() {
	vlicense LICENSE
}

libyuv-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
