lib32disabled=yes
archs="i686* x86_64*"

post_install() {
	vlicense COPYING
}

intel-gpu-tools_package() {
	depends="igt-gpu-tools>=${version}_${revision}"
	short_desc+=" (transitional dummy package)"
	metapackage=yes
}
