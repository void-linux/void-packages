# Template file for 'lziprecover'
pkgname=lziprecover
version=1.24
revision=1
build_style=configure
checkdepends="lzip"
short_desc="Data recovery tool and decompressor for files in the lzip format"
maintainer="Matt Boehlke <mtboehlke@gmail.com>"
license="GPL-2.0-or-later"
