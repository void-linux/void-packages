pre_build() {
	# Remove version constraint on packages that have
	# a strict version requirement.
	sed -e "s|MechanicalSoup==.*,|MechanicalSoup',|" \
		-e "s|urwid==.*,|urwid',|" \
		-e "s|ReParser==.*,|ReParser',|" \
		-e "s|ConfigArgParse==.*,|ConfigArgParse',|" \
		-e "s|readlike==.*,|readlike',|" \
		-i setup.py
}

post_install() {
	vlicense LICENSE
}
