export GOTOOLCHAIN=go1.20

post_install() {
	grype="${DESTDIR}/usr/bin/grype"
	for shell in bash fish zsh; do
		vtargetrun ${grype} completion ${shell} >grype.${shell}
		vcompletion grype.${shell} ${shell}
	done
}
