# Template file for 'grype'
pkgname=grype
version=0.73.4
revision=1
build_style=go
build_helper=qemu
go_import_path="github.com/anchore/grype"
go_package="github.com/anchore/grype/cmd/grype"
short_desc="Vulnerability scanner for container images and filesystems"
