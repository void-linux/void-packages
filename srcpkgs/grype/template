go_package="github.com/anchore/grype/cmd/grype"
hostmakedepends="go1.20"
short_desc="Vulnerability scanner for container images and filesystems"
maintainer="Jan Christian Gr√ºnhage <jan.christian@gruenhage.xyz>"
