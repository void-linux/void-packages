# Template file for 'vala'
pkgname=vala
version=0.38.1
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config flex libxslt"
makedepends="libglib-devel libfl-devel graphviz-devel"
short_desc="Compiler for the GObject type system"
maintainer="Enno Boland <gottox@voidlinux.eu>"
homepage="http://live.gnome.org/Vala"
license="LGPL-2.1"
distfiles="${GNOME_SITE}/vala/${version%.*}/vala-${version}.tar.xz"
checksum=1035344f3ba50a572894c0aed3f794dd0efb9f08fce1c1d0cc537936e9a05084

libvala_package() {
	short_desc+=" - shared library"
	pkg_install() {
		vmove usr/lib/*.so.*
	}
}
vala-devel_package() {
	depends="libglib-devel vala>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/*.so
		vmove usr/share/aclocal
		vmove usr/share/devhelp
	}
}
