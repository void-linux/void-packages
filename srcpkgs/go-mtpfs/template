do_fetch() {
	git clone git://${go_import_path} ${pkgname}-${version}
	cd ${pkgname}-${version}
	git reset --hard eeb4cce46870f2b57043fca50ea5bc680e72ec8a
}
post_install() {
	vlicense LICENSE
}
