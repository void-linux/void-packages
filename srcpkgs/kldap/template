# Template file for 'kldap'
pkgname=kldap
version=19.08.1
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python
kcoreaddons kdoctools"
makedepends="kio-devel"
short_desc="LDAP access API for KDE"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/applications/${version}/src/kldap-${version}.tar.xz"
checksum=b6fb822df67449870fb5c0bfe1adb1bd3d44535e3f2186ef6be286e4a590bd54

kldap-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
