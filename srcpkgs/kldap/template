# Template file for 'kldap'
pkgname=kldap
version=23.04.2
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python3
 gettext kcoreaddons kdoctools"
makedepends="kio-devel qtkeychain-qt5-devel"
short_desc="LDAP access API for KDE"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/kldap-${version}.tar.xz"
checksum=cccf41aa9a8e80944bb72e7baa271b81a84777ed672e662e0279582ea7e0c342

kldap-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
