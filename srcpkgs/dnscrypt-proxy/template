post_install() {
	vconf dnscrypt-proxy/example-dnscrypt-proxy.toml dnscrypt-proxy.toml
	vlicense LICENSE
	vsv dnscrypt-proxy
	for example in dnscrypt-proxy/example*txt; do
		vdoc $example
	done
}
