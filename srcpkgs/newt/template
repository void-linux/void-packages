# Template file for 'newt'
pkgname=newt
version=0.52.19
revision=1
build_style=gnu-configure
makedepends="slang-devel popt-devel"
short_desc="Library for color text mode, widget based user interfaces"
maintainer="Enno Boland <gottox@voidlinux.eu>"
license="GPL-3"
homepage="https://fedorahosted.org/newt/"
distfiles="https://fedorahosted.org/releases/n/e/$pkgname/$pkgname-$version.tar.gz"
checksum=08c0db56c21996af6a7cbab99491b774c6c09cef91cd9b03903c84634bff2e80

newt-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
