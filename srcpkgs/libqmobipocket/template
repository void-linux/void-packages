libqmobipocket-devel_package() {
	short_desc+=" - development files"
	depends="libqmobipocket>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
