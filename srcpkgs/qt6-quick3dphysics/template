# Template file for 'qt6-quick3dphysics'
pkgname=qt6-quick3dphysics
version=6.10.0
revision=1
build_style=cmake
hostmakedepends="qt6-base qt6-declarative-host-tools qt6-quick3d-tools qt6-shadertools"
makedepends="qt6-base-private-devel qt6-declarative-devel qt6-quick3d-private-devel
 qt6-shadertools-devel"
short_desc="Cross-platform application and UI framework - Quick3D Physics"
maintainer="John <me@johnnynator.dev>"
license="LGPL-3.0-only OR GPL-2.0-only OR GPL-3.0-only"
homepage="https://qt.io/"
distfiles="http://download.qt.io/official_releases/qt/${version%.*}/${version}/submodules/qtquick3dphysics-everywhere-src-${version}.tar.xz"
checksum=c2b408bfe7ed9d9a7eda371dc657c623789d5086d445b242fda61bd8db054942

case "$XBPS_TARGET_MACHINE" in
	i686*) CXXFLAGS+=" -msse2" ;;
esac

qt6-quick3dphysics-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}
	 qt6-base-devel qt6-declarative-devel qt6-quick3d-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/pkgconfig
		vmove usr/lib/qt6/metatypes
		vmove usr/lib/qt6/mkspecs
		vmove usr/lib/qt6/modules
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.prl"
		vmove "usr/lib/*.so"
	}
}

qt6-quick3dphysics-tools_package() {
	pkg_install() {
		vmove usr/lib/qt6/bin
	}
}
