checksum=e9d9041903acb6bd3ffe94e0a02e69eea53f1128274da1bfe00fe44331ccceb1

post_install() {
	vlicense LICENSE
	vtargetrun ${DESTDIR}/usr/bin/gotop --create-manpage > gotop.1
	vman gotop.1
}
