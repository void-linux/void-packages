do_install() {
	case "$XBPS_TARGET_MACHINE" in
		aarch64*) vbin ${GOPATH}/bin/linux_arm64/${pkgname} ;;
		arm*) vbin ${GOPATH}/bin/linux_arm/${pkgname} ;;
		*) vbin ${GOPATH}/bin/${pkgname} ;;
	esac
	vlicense LICENSE
}

