# Template file for 'openmoji-font'
pkgname=openmoji-font
version=12.0.0
revision=1
archs=noarch
create_wrksrc=yes
hostmakedepends="unzip"
short_desc="Open-source emojis for designers, developers and everyone else!"
maintainer="Protesilaos Stavrou <info@protesilaos.com>"
license="CC-BY-SA-4.0"
homepage="https://github.com/hfg-gmuend/${pkgname%-*}"
changelog="https://github.com/hfg-gmuend/openmoji/raw/master/changelog.txt"
distfiles="${homepage}/releases/download/${version}/${pkgname}.zip"
checksum=e994fbd4a04f816b59fc6b4a69f1e06e32ad075013e06d6c870c945eab25e019
font_dirs="/usr/share/fonts/TTF"

do_install() {
	install -Dm644 *.ttf -t ${DESTDIR}/${font_dirs}
}
