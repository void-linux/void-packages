# Template file for 'libksysguard'
pkgname=libksysguard
version=6.5.4
revision=1
build_style=cmake
configure_args="-DKF6_HOST_TOOLING=/usr/lib/cmake
 -DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules gettext pkg-config libcap-progs
 qt6-tools qt6-base qt6-declarative-host-tools
 kf6-kauth-tools kf6-kpackage kf6-kconfig"
makedepends="qt6-base-devel qt6-declarative-devel qt6-webchannel-devel
 kf6-kcoreaddons-devel
 kf6-kconfig-devel
 kf6-ki18n-devel
 kf6-kauth-devel
 kf6-kservice-devel
 kf6-kpackage-devel
 kf6-knewstuff-devel
 kf6-solid-devel
 libpcap-devel libcap-devel libnl3-devel libsensors-devel
 libdrm-devel zlib-devel"
short_desc="KDE libksysguard"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/plasma/libksysguard"
distfiles="${KDE_SITE}/plasma/${version}/${pkgname}-${version}.tar.xz"
checksum=74f370be24722afa2ae79acf3d73edc6a23f0ecba8e0b717de973f5d0da0508e

do_check() {
	cd build
	ctest -E "processdatamodeltest|cgrouptest"
}

libksysguard-devel_package() {
	short_desc+=" - development"
	depends="kf6-ki18n-devel kf6-kconfig-devel qt6-base-devel
	 ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
