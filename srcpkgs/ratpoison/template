# Template file for 'ratpoison'
pkgname=ratpoison
version=1.4.9
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config texinfo"
makedepends="libICE-devel libXft-devel libXinerama-devel libXrandr-devel
 libXtst-devel readline-devel"
depends="perl"
