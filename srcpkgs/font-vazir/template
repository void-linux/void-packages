checksum=ad36f2e0f6a06db162ae132a6b2738a1ec82e77290c5c0e0db623a9c5ca1dc8c

font_dirs="/usr/share/fonts/TTF"

do_install() {
	for f in ./*.ttf; do
		vinstall "$f" 644 usr/share/fonts/TTF
	done
}
