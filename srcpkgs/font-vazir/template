checksum=18c9e5c1f58e17ae76b80fc15793c3f99e548b56e0b839b9c2cf4c8a3ac135f3

font_dirs="/usr/share/fonts/TTF"

do_install() {
	for f in ./*.ttf; do
		vinstall "$f" 644 usr/share/fonts/TTF
	done
}
