# Template file for 'font-vazir'
pkgname=font-vazir
version=21.0.1
revision=1
archs=noarch
create_wrksrc=yes
hostmakedepends="unzip"
depends="font-util"
short_desc="Persian (Farsi) Font - قلم (فونت) فارسی وزیر"
maintainer="linarcx <linarcx@gmail.com>"
license="OFL-1.1"
