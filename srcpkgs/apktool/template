# Template file for 'apktool'
pkgname=apktool
version=2.4.1
revision=1
wrksrc="Apktool-${version}"
hostmakedepends="gradle openjdk8"
depends="virtual?java-runtime"
short_desc="A tool for reverse engineering Android apk files"
maintainer="Stnby <stnby@tuta.io>"
license="Apache-2.0"
homepage="https://ibotpeaches.github.io/Apktool"
distfiles="https://github.com/iBotPeaches/Apktool/archive/v${version}.tar.gz"
checksum=6e19c56da880b3ff13fd5cca7c9fcab59bd604a1b8ba6de9be4e66ebc068282a

do_build() {
	./gradlew build shadowJar
}

do_install() {
	vmkdir usr/share/${pkgname}
	vinstall brut.apktool/apktool-cli/build/libs/apktool-cli-all.jar 644 usr/share/${pkgname}
	vbin $FILESDIR/${pkgname}
	vlicense LICENSE
}
