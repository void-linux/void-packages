pkgname=heroic
version=2.18.1
revision=1
build_style=none
short_desc="An open source launcher for Epic, Amazon and GOG Games"
license="GPL-3.0-only"
homepage="https://github.com/Heroic-Games-Launcher/HeroicGamesLauncher"
distfiles="https://github.com/Heroic-Games-Launcher/HeroicGamesLauncher/releases/download/v${version}/Heroic-${version}-linux-x64.tar.xz"
checksum=1518a6e11bce31e3003a1ceafd01c12814585e4122db7bf9d8e60c39db42e38a

do_install() {
    vmkdir usr/lib/heroic
    vcopy . usr/lib/heroic

    chmod +x ${DESTDIR}/usr/lib/heroic/heroic

    vmkdir usr/bin
    ln -sf /usr/lib/heroic/heroic ${DESTDIR}/usr/bin/heroic

    vmkdir usr/share/applications
    vcopy resources/app.asar.unpacked/build/linux/heroic.desktop \
          usr/share/applications
}
