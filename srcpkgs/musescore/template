if [ "$XBPS_TARGET_ENDIAN" = "le" ]; then
	build_options_default="webengine"
fi

if [ "$build_option_webengine" ]; then
	makedepends+=" qt5-webengine-devel"
else
	make_build_args+=" BUILD_WEBENGINE=OFF"
fi
