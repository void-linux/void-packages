# Template file for 'dbeaver'
pkgname=dbeaver
version=6.1.0
revision=1
archs="x86_64"
hostmakedepends="apache-maven-bin"
short_desc="Free Universal Database Tool"
maintainer="Kyle Nusbaum <knusbaum+void@sdf.org>"
license="Apache-2.0"
homepage="https://dbeaver.io"
distfiles="https://github.com/dbeaver/dbeaver/archive/${version}.tar.gz"
checksum=c76e3caaac5824857a628a0e2b0fe66e80affa97657e87b095c30770874c53da
nopie=true

do_build() {
	mvn package
}

do_install() {
	vmkdir /usr/lib
	vcopy "product/standalone/target/products/org.jkiss.dbeaver.core.product/linux/gtk/x86_64/dbeaver" /usr/lib/

	vmkdir /usr/bin
	ln -s /usr/lib/dbeaver/dbeaver ${DESTDIR}/usr/bin/dbeaver
}
