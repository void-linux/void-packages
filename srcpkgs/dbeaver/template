# Template file for 'dbeaver'
pkgname=dbeaver
version=5.3.3
revision=1
only_for_archs="i686 x86_64"
hostmakedepends="apache-maven-bin"
short_desc="Free Universal Database Tool"
maintainer="Kyle Nusbaum <knusbaum+void@sdf.org>"
license="Apache-2.0"
homepage="https://dbeaver.io"
distfiles="https://github.com/dbeaver/dbeaver/archive/${version}.tar.gz"
checksum=9282c5de703271d888c621ba3c7b91407c730bc951e0b27409a26384359f928c
nopie=true

do_build() {
	mvn package
}

do_install() {
	case $XBPS_TARGET_MACHINE in
		x86_64*)
			_target_dir=x86_64
			;;
		i686*)
			_target_dir=x86
			;;
	esac
	vmkdir /usr/lib
	vcopy "product/standalone/target/products/org.jkiss.dbeaver.core.product/linux/gtk/${_target_dir}/dbeaver" /usr/lib/

	vmkdir /usr/bin
	ln -s /usr/lib/dbeaver/dbeaver ${DESTDIR}/usr/bin/dbeaver
}
