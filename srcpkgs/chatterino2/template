	vsrcextract -C lib/expected-lite ${_expected_lite_commit}.tar.gz
	vsrcextract -C lib/lua/src ${_lua_commit}.tar.gz
	vsrcextract -C cmake/sanitizers-cmake ${_sanitizers_cmake_commit}.tar.gz
}

