post_install() {
	vsed -e '/NOT CMAKE_SIZEOF_VOID_P STREQUAL/,+5d' \
		-i ${DESTDIR}/usr/lib/cmake/PlasmaWaylandProtocols/PlasmaWaylandProtocolsConfigVersion.cmake
}
