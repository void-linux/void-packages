checksum=2d48319be933df77c660fbfe7efef8c3d61bbde6787e2f33725bcc519858b287

do_build() {
	make ${makejobs}
}

do_install() {
	for bin in build/bin/linux/${GOARCH}/*; do
	    vbin $bin
	done
}
