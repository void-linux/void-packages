# Template file for 'fterman'
pkgname=fterman
version=1.0
revision=1
archs="x86_64"
build_style=gnu-makefile
makedepends="git gcc make"
short_desc="TUI file manager"
maintainer="Sergey R. <sergeiroman060@gmail.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/groman1/fterman"
do_fetch() {
	local url="https://github.com/groman1/fterman"
	msg_normal "Fetching source from $url ...\n"
	git clone ${url} ${pkgname}-${version}
}
do_install() {
	msg_normal "Compilation complete, installing ..."
	vmkdir /usr/bin
	vbin fterman /usr/bin/fterman
}
