# Template file for 'kf6-kbookmarks'
pkgname=kf6-kbookmarks
version=6.21.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base kf6-kconfig"
makedepends="kf6-kconfig-devel qt6-base-devel kf6-kcoreaddons-devel
 kf6-kwidgetsaddons-devel"
short_desc="KDE Bookmarks management library"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kbookmarks"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname#kf6-}-${version}.tar.xz"
checksum=06e2d5ad22324c4a6809ae8f6a3192004abd8dc56bbb5b281c1828f32dc8e07a

kf6-kbookmarks-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}
	 kf6-kwidgetsaddons-devel qt6-base-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
