post_patch() {
	# version is pre-generated
	vsed -i -e "s/'setuptools_scm'//" setup.py
}

post_build() {
	python3 setup.py build_sphinx -b man
}

post_install() {
	vlicense LICENSE
	vman build/sphinx/man/afew.1
}
