# Template file for 'snooze-cron-lite'
pkgname=snooze-cron-lite
version=0.1
revision=1
build_style=meta
make_dirs="/var/cache/snooze 0755 root root"
depends="snooze run-parts"
short_desc="Run cron drop-in scripts using snooze"
maintainer="Cameron Nemo <camerontnorman@gmail.com>"
homepage="https://www.voidlinux.eu/"
license="CC0-1.0"

post_install() {
	vsv snooze-hourly
	vsv snooze-daily
	vsv snooze-weekly
	vsv snooze-monthly
}
