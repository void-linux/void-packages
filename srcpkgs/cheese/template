# Template file for 'cheese'
pkgname=cheese
version=3.34.0
revision=1
build_style=meson
build_helper="gir"
configure_args="-Dintrospection=$(vopt_if gir true false)"
hostmakedepends="gdk-pixbuf glib-devel gtk-doc intltool itstool pkg-config
 $(vopt_if gir 'gobject-introspection') vala"
makedepends="clutter-gst3-devel clutter-gtk-devel gnome-desktop-devel gtk-doc
 gst-plugins-good1 libXtst-devel libcanberra-devel libgee08-devel librsvg-devel"
depends="clutter-gst clutter-gtk desktop-file-utils gnome-video-effects
 gst-plugins-good1 hicolor-icon-theme"
short_desc="GNOME tool to take pictures and videos from your webcam"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://wiki.gnome.org/Apps/Cheese"
distfiles="${GNOME_SITE}/${pkgname}/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=d1865600ac88012e136b1ec3db72a4634f57bc2035895277be792bb078627e73
nocross="https://build.voidlinux.org/builders/armv7l_builder/builds/18665/steps/shell_3/logs/stdio"

build_options="gir"
build_options_default="gir"

libcheese_package() {
	short_desc+=" - shared libraries"
	pkg_install() {
		vmove "usr/lib/*.so.*"
		if [ "$build_option_gir" ]; then
			vmove usr/lib/girepository-1.0
		fi
	}
}

cheese-devel_package() {
	depends="gst-plugins-bad1-devel
		 clutter-gst3-devel
		 clutter-gtk-devel
		 libcanberra-devel
		 libcheese>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
		vmove usr/share/gtk-doc
	}
}
