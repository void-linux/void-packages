KDSoap-qt5-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/bin/kdwsdl2cpp
		vmove "usr/lib/*.so"
		vmove usr/share/mkspecs
	}
}
