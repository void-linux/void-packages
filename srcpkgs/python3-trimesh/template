 python3-pyglet python3-shapely python3-rtree python3-Pillow python3-svg.path
 python3-jsonschema python3-psutil python3-chardet python3-sympy
 python3-pycollada"
checkdepends="$depends python3-pytest-xdist python3-httpx"
