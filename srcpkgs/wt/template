# Template file for 'wt'
pkgname=wt
version=4.12.0
revision=2
build_style=cmake
configure_args="-DBUILD_EXAMPLES=OFF"
makedepends="boost-devel-minimal libboost_thread libboost_filesystem
 libboost_program_options
 openssl-devel Haru-devel pango-devel sqlite-devel postgresql-libs-devel
 libmysqlclient-devel unixodbc-devel libfreeglut-devel libunwind-devel"
short_desc="Wt, C++ Web Toolkit"
maintainer="danoloan10 <danoloan10@tutanota.com>"
license="GPL-2.0-or-later"
homepage="https://www.webtoolkit.eu/wt"
changelog="https://webtoolkit.eu/wt/doc/reference/html/Releasenotes.html"
distfiles="https://github.com/emweb/wt/archive/refs/tags/${version}.tar.gz"
checksum=8a134eb532cfd2f6d956be271bc7403cad2def370cf52dd59b9e968f1bba9459

wt-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
