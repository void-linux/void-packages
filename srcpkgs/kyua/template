 ac_cv_path_GDB=/usr/bin/gdb ac_cv_path_UMOUNT=/usr/bin/umount"
hostmakedepends="pkg-config automake libtool atf-devel"
makedepends="atf-devel lutok-devel sqlite-devel"
depends="atf>=0.21"
checkdepends="atf"
