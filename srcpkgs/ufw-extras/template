# Template file for 'ufw-extras'
pkgname=ufw-extras
version=0.4
revision=1
noarch=yes
depends="ufw"
short_desc="Extra configuration files for Uncomplicated Firewall (ufw)"
maintainer="Orphaned <orphan@voidlinux.eu>"
license="GPL-2.0-or-later"
