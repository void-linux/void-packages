# Template file for 'kddockwidgets'
pkgname=kddockwidgets
version=2.2.5
revision=2
build_style=cmake
configure_args="-DKDDockWidgets_QT6=true
 -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt6/mkspecs"
hostmakedepends="qt6-base extra-cmake-modules pkg-config"
makedepends="qt6-base-private-devel qt6-declarative-private-devel json-c++"
short_desc="KDAB's Dock Widget Framework for Qt"
maintainer="Đoàn Trần Công Danh <congdanhqx@gmail.com>"
license="GPL-3.0-only OR GPL-2.0-only"
homepage="https://github.com/KDAB/KDDockWidgets"
distfiles="https://github.com/KDAB/KDDockWidgets/releases/download/v${version}/kddockwidgets-${version}.tar.gz"
checksum=1c202d03a0c7018aebcb249b09122d846b34298d88d0bc247a601f48c7513c89

kddockwidgets-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/qt6/mkspecs
		vmove usr/lib/cmake
	}
}
