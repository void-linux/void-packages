case "$XBPS_TARGET_MACHINE" in
	*-musl) makedepends+=" libexecinfo-devel musl-legacy-compat"
		LDFLAGS="-lexecinfo"
		post_extract() {
			sed -i -e "/AM_CFLAGS += -Wpedantic/d" src/app_sysenv/Makefile.am
		}
		;;
esac

