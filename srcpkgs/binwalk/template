post_extract() {
	vsed -i -e 's;/etc/bash_completion.d/%s;%s.bash;' setup.py
}

do_check() {
	PYTHONPATH="${wrksrc}/src" python3 setup.py test
}

post_install() {
	vlicense LICENSE
}
