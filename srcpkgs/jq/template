# Template file for 'jq'
pkgname=jq
version=1.6
revision=1
wrksrc="jq-jq-${version}"
build_style=gnu-configure
hostmakedepends="automake libtool"
makedepends="oniguruma-devel"
checkdepends="valgrind"
short_desc="Command-line JSON processor"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="MIT"
homepage="http://stedolan.github.io/jq/"
distfiles="https://github.com/stedolan/jq/archive/jq-${version}.tar.gz"
checksum=158182b85f3be9e23ab1dc50cfcc24e415aade2a0b8a5d9f709e0b587666d61b

pre_configure() {
	autoreconf -fi
}

post_install() {
	rm -rf ${DESTDIR}/usr/share/doc/$pkgname
	vlicense COPYING
}

jq-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so*
	}
}
