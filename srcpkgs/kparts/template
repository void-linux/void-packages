# Template file for 'kparts'
pkgname=kparts
version=5.86.0
revision=1
build_style=cmake
hostmakedepends="kcoreaddons extra-cmake-modules gettext
 qt5-host-tools qt5-qmake python3"
makedepends="kio-devel"
short_desc="KDE Plugin framework for user interface components"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kparts"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=40bd41a970c9a85d38a31e243f4db49b867e75b509d2c6591a4c7d1eb2720120

do_check() {
	: # test can not find packages assets?!
}

kparts-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
