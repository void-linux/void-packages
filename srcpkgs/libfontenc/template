# Template file for 'libfontenc'
pkgname=libfontenc
version=1.1.4
revision=1
build_style=gnu-configure
configure_args="--with-fontrootdir=/usr/share/fonts/X11"
hostmakedepends="pkg-config"
makedepends="xorgproto zlib-devel"
short_desc="Fontenc Library from X.org"
maintainer="maxice8 <thinkabit.ukim@gmail.com>"
license="MIT"
homepage="http://xorg.freedesktop.org/"
distfiles="${XORG_SITE}/lib/${pkgname}-${version}.tar.bz2"
checksum=2cfcce810ddd48f2e5dc658d28c1808e86dcf303eaff16728b9aa3dbc0092079

post_install() {
	vlicense COPYING
}

libfontenc-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
