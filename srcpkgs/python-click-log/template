}

python3-click-log_package() {
	archs=noarch
	pycompile_module="click_log"
	depends="python3-click"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
