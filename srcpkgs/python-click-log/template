post_install() {
	vlicense README.rst LICENSE
}

python3.4-click-log_package() {
	noarch=yes
	pycompile_version="3.4"
	pycompile_module="click-log"
	depends="python3.4-click"
	short_desc="${short_desc/Python2/Python3.4}"
	pkg_install() {
		vmove usr/lib/python3.4
		vlicense README.rst LICENSE
	}
}
