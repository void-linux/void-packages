# Template file for 'xorg-macros'
pkgname=xorg-macros
version=1.19.1
revision=1
noarch=yes
wrksrc=xorg-macros-util-macros-${version}
build_style=gnu-configure
hostmakedepends="autoconf automake"
depends="automake pkg-config"
short_desc="X.org macros utilities"
maintainer="marmeladema <xademax@gmail.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/freedesktop/xorg-macros"
distfiles="https://github.com/freedesktop/xorg-macros/archive/util-macros-${version}.tar.gz"
checksum=353eca5062146b29933a5862f6bfb6d52cdbac4aff6f3ad8558a507e44ded52a

pre_configure() {
	env NOCONFIGURE=1 ./autogen.sh
}

post_install() {
	mv ${DESTDIR}/usr/share/util-macros ${DESTDIR}/usr/share/xorg-macros
}
