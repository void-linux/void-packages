glyr-devel_package() {
	depends="glyr>=${version}_${revision}"
	short_desc="Music metadata searchengine utility and library - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
