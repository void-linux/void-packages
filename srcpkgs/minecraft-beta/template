# Template file for 'minecraft-beta'
pkgname=minecraft-beta
version=2.1.15166
revision=1
archs=x86_64
wrksrc="minecraft-launcher"
depends="wmname wget xorg"
short_desc="Beta Launcher for the famous Minecraft game"
maintainer="ThatGeekyWeeb <https://github.com/ThatGeekyWeeb/> <thatgeekyweeb@gmail.com>"
license="Propietary"
homepage="http://www.minecraft.net/"
distfiles="https://launcher.mojang.com/download/linux/x86_64/minecraft-launcher_${version}.tar.gz"
checksum="1c7ab4a11384ba1f85c3549090484f14a51c0277d0fa25c5fffb8333e60f0493"
repository=nonfree
nopie=true
nostrip=true
_ver="2.1.15166"
_source=$disfiles
_mode="644"
do_install() {
	cd $FILESDIR
	srcdir="${wrksrc}"
	cd "${wrksrc}"
	mkdir -p "${DESTDIR}/opt/"
	install -Dm644 "${FILESDIR}/minecraft-launcher.svg"	"/usr/share/icons/hicolor/symbolic/apps/minecraft-launcher.svg"
	install -Dm644 "${FILESDIR}/minecraft-launcher.desktop" "/usr/share/applications/minecraft-launcher.desktop"
	cp -Rv "${wrksrc}" "${DESTDIR}/opt/minecraft-launcher/"
	vbin "${DESTDIR}/opt/minecraft-launcher/minecraft-launcher"
}
