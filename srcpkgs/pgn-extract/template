# Template file for 'pgn-extract'
pkgname=pgn-extract
version=19.04
revision=1
wrksrc="pgn-extract"
build_style=gnu-makefile
make_use_env=yes
short_desc="Portable Game Notation (PGN) Manipulator for Chess Games"
