do_build() {
	cargo build --release ${makejobs}
}

do_check() {
	cargo test --release ${makejobs}
}

do_install() {
	vbin target/release/rustfmt
	vbin target/release/cargo-fmt
	vdoc README.md
	vlicense LICENSE-APACHE
	vlicense LICENSE-MIT
}
