# Template file for 'libmspack'
pkgname=libmspack
version=0.8alpha
revision=1
build_style=gnu-configure
short_desc="Library for Microsoft compression formats"
maintainer="Martin Riese <grauehaare@gmx.de>"
license="LGPL-2.1-only"
homepage="https://www.cabextract.org.uk/libmspack"
distfiles="https://cabextract.org.uk/libmspack/libmspack-${version}.tar.gz"
checksum=0533792e9561375a5fce1bc96bbc65ec778af486e0daa3803b226da9244addaf
disable_parallel_build=yes

libmspack-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
