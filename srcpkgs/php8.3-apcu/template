pre_configure() {
	phpize8.3
}

pre_install() {
	make_install_args="INSTALL_ROOT=$DESTDIR"
}

post_install() {
	rm -r $DESTDIR/usr/include
	vdoc "${FILESDIR}/README.voidlinux"
}
