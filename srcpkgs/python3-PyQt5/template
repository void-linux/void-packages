}
python3-PyQt5-opengl_package() {
	lib32disabled=yes
	depends="python3-PyQt5>=${version}_${revision}"
	short_desc="${short_desc} - opengl module"
	pkg_install() {
		vmove "${py3_sitelib}/PyQt5/QtOpenGL.*"
		if [ -z "$CROSS_BUILD" ]; then
			vmove "${py3_sitelib}/PyQt5/_QOpenGLFunctions_*"
		fi
	}
}
