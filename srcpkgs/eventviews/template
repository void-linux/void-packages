maintainer="Helmut Pozimski <helmut@pozimski.eu>"
license="GPL-2.0-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/applications/${version}/src/${pkgname}-${version}.tar.xz"
