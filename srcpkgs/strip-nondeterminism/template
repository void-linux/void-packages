# Template file for 'strip-nondeterminism'
pkgname=strip-nondeterminism
version=1.3.0
revision=1
archs=noarch
build_style=perl-module
hostmakedepends="perl-Archive-Zip"
makedepends="$hostmakedepends"
depends="$makedepends"
