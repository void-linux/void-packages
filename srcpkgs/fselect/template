case "$XBPS_TARGET_MACHINE" in
	ppc64le*) ;;
	ppc64*) broken="some rustix junk";;
esac

if [ "$XBPS_TARGET_NO_ATOMIC8" ]; then
	makedepends+=" libatomic-devel"
	XBPS_CROSS_RUSTFLAGS+=" -latomic"
fi

