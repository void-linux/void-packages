		vdoc ${wrksrc}/Changes.md
		vdoc ${wrksrc}/README.md
		vdoc ${wrksrc}/TODO
	}
}

lua53-vicious_package() {
	depends="lua53"
	short_desc="${_desc} (5.3.x)"
