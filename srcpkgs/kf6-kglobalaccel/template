kf6-kglobalaccel-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} qt6-base-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
