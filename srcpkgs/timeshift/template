# Remove hard-dep on crontab, leave up to user to decide
post_extract() {
	sed -i '/dependencies/s:"crontab",::' src/Core/Main.vala
	sed -i 's:--thread:& Core/AppExcludeEntry.vala:' src/makefile
}
