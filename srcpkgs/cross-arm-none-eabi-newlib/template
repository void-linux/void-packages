configure_args="
 --disable-newlib-supplied-syscalls
 --disable-nls
 --enable-interwork
 --enable-newlib-io-long-long
 --enable-newlib-register-fini
 --host=${XBPS_CROSS_TRIPLET}
 --prefix=/usr
 --target=${_triplet}
 --with-gnu-as
 --with-gnu-ld
"
hostmakedepends="cross-arm-none-eabi-binutils cross-arm-none-eabi-gcc"
