python3-terminado_package() {
	archs=noarch
	depends="python3-ptyprocess python3-tornado"
	pycompile_module="terminado"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
