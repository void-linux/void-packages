wrksrc="$pkgname-$_commit"
make_build_args="PREFIX=/usr"

post_install() {
	mv ${DESTDIR}/usr/bin/{wtf,$pkgname}
	mv ${DESTDIR}/usr/share/man/man6/{wtf,$pkgname}.6
}
