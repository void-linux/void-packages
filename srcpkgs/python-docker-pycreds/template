python3-docker-pycreds_package() {
	noarch=yes
	depends="python3-six"
	pycompile_module="dockerpycreds"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
