# Template file for 'snapper-rollback'
pkgname=snapper-rollback
version=1.0.0
revision=1
depends="coreutils python3 btrfs-progs python3-btrfsutil"
short_desc="Script for rolling back to a previous snapper-managed BTRFS snapshot"
maintainer="Yushi <github@yushi.one>"
license="GPL-3.0-or-later"
