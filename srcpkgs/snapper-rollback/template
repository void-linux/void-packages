distfiles="https://github.com/jrabinow/snapper-rollback/archive/refs/tags/v${version}.tar.gz"
checksum=62581d4ff5ab963b3524873a442e1ea95cf0000b11a5ff7fa010810c900a6cb6
conf_files="/etc/snapper-rollback.conf"

do_install() {
	vinstall snapper-rollback.conf 644 etc
	vbin snapper-rollback.py snapper-rollback
}
