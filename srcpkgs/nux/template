# Template file for 'nux'
pkgname=nux
version=4.0.8
revision=1
_major_minor=${version%.*}
build_style=gnu-configure
configure_args="CXXFLAGS=-Wno-error"
hostmakedepends="pkg-config"
makedepends="boost-devel cairo-devel gdk-pixbuf-devel glew1-devel glu-devel
 ibus-devel libglib-devel libglvnd-devel libpng-devel libsigc++-devel
 libX11-devel libXcomposite-devel libXdamage-devel libXext-devel
 libXinerama-devel libXxf86vm-devel pango-devel pciutils-devel pcre-devel"
short_desc="OpenGL toolkit"
maintainer="Earldridge Jazzed Pineda <earldridgejazzedpineda@gmail.com>"
license="GPL-3.0-only, LGPL-3.0-only"
homepage="https://launchpad.net/nux"
changelog="https://git.launchpad.net/nux/plain/debian/changelog"
distfiles="https://launchpad.net/nux/${_major_minor}/${version}/+download/nux-${version}.tar.gz"
checksum=3534ad4becd064f62e7393ef5b8f9bbb71bd1cd4830f859aea341b6f15877077

nux-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
