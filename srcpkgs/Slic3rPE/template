# Template file for 'Slic3rPE'
pkgname=Slic3rPE
version=1.42.0
revision=1
_status="-alpha6"
wrksrc="Slic3r-version_${version}${_status}"
build_style=cmake
configure_args="-DSLIC3R_WX_STABLE=1 -DSLIC3R_FHS=1 -DDESTDIR=/usr/share/"
hostmakedepends="pkg-config"
makedepends="boost-devel tbb-devel libcurl-devel nlopt-devel gtest-devel
