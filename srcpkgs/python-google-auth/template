python3-google-auth_package() {
	archs=noarch
	depends="python3-pyasn1-modules python3-rsa python3-six python3-cachetools"
	pycompile_module="google"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
