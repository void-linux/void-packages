# Template file for 'nebula-gtk'
    pkgname=nebula-gtk
    version=1.0.0
    revision=1
    build_style=cargo
    hostmakedepends="pkg-config desktop-file-utils appstream-glib glib-devel libadwaita-devel gtk4-devel"
    makedepends="gtk4-devel libadwaita-devel"
    depends="libadwaita gtk4 xbps"
    short_desc="GTK frontend for Void Linux's XBPS tooling"
    maintainer="Letdown2491 <github.penknife946@passmail.net>"
    license="MIT"
    homepage="https://github.com/Letdown2491/nebula-gtk"
    distfiles="https://github.com/Letdown2491/nebula-gtk/archive/refs/tags/v${version}.tar.gz"
    checksum=2ca4dcbbc7bb11801c0e96e77fcd15406411350b49f9e15924762878e73b9d54

    cargo_build_args="--bin nebula-gtk"
    cargo_install_args="--path . --bin nebula-gtk"

    do_install() {
        cargo install --locked --path . --root ${DESTDIR}/usr --bin nebula-gtk
        vinstall assets/applications/tech.geektoshi.Nebula.desktop 644 usr/share/applications
        vinstall assets/icons/hicolor/128x128/apps/nebula.png 644 usr/share/icons/hicolor/128x128/apps
        vinstall assets/icons/hicolor/256x256/apps/nebula.png 644 usr/share/icons/hicolor/256x256/apps
        vinstall assets/icons/hicolor/512x512/apps/nebula.png 644 usr/share/icons/hicolor/512x512/apps
        vinstall data/category_overrides.toml 644 usr/share/nebula
        vinstall data/generated/category_suggestions.json 644 usr/share/nebula
        vlicense LICENSE
    }
