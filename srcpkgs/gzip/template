case "$XBPS_TARGET_MACHINE" in
	*-musl) configure_args+=" DEFS=NO_ASM gl_cv_func_fflush_stdin=yes" ;;
esac

pre_check() {
	# help-version test is know to fail
	sed -i '1721,1727d;1447d' tests/Makefile
}
