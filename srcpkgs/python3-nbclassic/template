post_install() {
	vlicense LICENSE
	mv ${DESTDIR}/usr/etc ${DESTDIR}

	# use system mathjax2
	local _mathjax="${DESTDIR}/${py3_sitelib}/nbclassic/static/components/MathJax"
	rm -r "${_mathjax}"
	ln -s /usr/share/mathjax "${_mathjax}"
}
