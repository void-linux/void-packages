post_install() {
	vlicense LICENSE
	mv ${DESTDIR}/usr/etc ${DESTDIR}

	# use system mathjax2
	rm -rf ${DESTDIR}/${py3_sitelib}/nbclassic/static/components/MathJax
	ln -sf /usr/share/mathjax ${DESTDIR}/${py3_sitelib}/nbclassic/static/components/MathJax
}
