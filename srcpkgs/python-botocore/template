python3-botocore_package() {
	archs=noarch
	pycompile_module="botocore"
	depends="python3-dateutil python3-docutils python3-jmespath python3-urllib3"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove "usr/lib/python3*"
	}
}
