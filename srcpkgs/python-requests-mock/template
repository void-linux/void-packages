python3-requests-mock_package() {
	noarch=yes
	pycompile_module="requests_mock"
	depends="python3-requests python3-six"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
