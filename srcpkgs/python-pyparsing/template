post_install() {
	vlicense LICENSE
}

python3-pyparsing_package() {
	archs=noarch
	depends="python3"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
