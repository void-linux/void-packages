# Template file for 'python-certifi'
pkgname=python-certifi
version=2018.11.29
revision=1
noarch=yes
build_style=python-module
pycompile_module="certifi"
hostmakedepends="python-setuptools python3-setuptools"
depends="python"
short_desc="Collection of Root Certificates to validate SSL certificates(Python2)"
maintainer="Nathan Owens <ndowens04@gmail.com>"
license="MPL-2.0"
homepage="https://certifi.io"
distfiles="https://github.com/certifi/python-certifi/archive/${version}.tar.gz"
checksum=294a8e507557adfa1b6c11d59ce51607f09a63d00fe3e94e5c8ce5aa544d8e37

post_extract() {
	vlicense LICENSE
}

python3-certifi_package() {
	noarch=yes
	pycompile_module="certifi"
	depends="python3"
	short_desc="${short_desc/2/3}"
	pkg_install() {
		vmove "usr/lib/python3*"
	}
}
