# Template file for 'fossil'
pkgname=fossil
version=2.11.1
revision=1
build_style=configure
configure_args="--disable-internal-sqlite --prefix=/usr"
hostmakedepends="tcl"
makedepends="zlib-devel libressl-devel readline-devel sqlite-devel"
