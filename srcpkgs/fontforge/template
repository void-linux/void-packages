post_extract() {
	# Disable unused #include <execinfo.h>
	vsed -i fontforge/cvundoes.c -e "s;\(.*#include <execinfo.h>\);//\1;"
}

post_install() {
	vcopy contrib/cidmap/Adobe-* usr/share/fontforge
}
