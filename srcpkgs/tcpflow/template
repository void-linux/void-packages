pre_configure() {
	rmdir src/{dfxml,be13_api,http-parser}
	ln -fsr ../be13_api-$_be13_commit src/be13_api
	ln -fsr ../dfxml-$_dfxml_commit src/dfxml
	ln -fsr ../http-parser-$_httpparser_commit src/http-parser
	autoreconf -fi
}
