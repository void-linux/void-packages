# Template file for 'OpenUtau'
pkgname=OpenUtau
version=0.1.565
revision=1
archs="x86_64"
short_desc="Open singing synthesis platform"
maintainer="finnvanhee <finnvanhee@gmail.com>"
license="MIT"
homepage="https://github.com/stakira/OpenUtau"
distfiles="https://github.com/stakira/OpenUtau/releases/download/${version}/OpenUtau-linux-x64.zip
 https://raw.githubusercontent.com/stakira/OpenUtau/master/LICENSE.txt"
checksum="4ab8d9ff696710b270449cd9480da52dc2d6b2739ccb6fe3731a0bf5e1f454dd
 cdef6370f9e705c804fd1acbe1b1c65027c13186c466b51ccb0323d5607cc9c4"

do_install() {
	chmod +x OpenUtau
	vlicense LICENSE.txt
	vmkdir /usr/lib/OpenUtau
	vcopy * /usr/lib/OpenUtau/
	vmkdir /usr/bin
	ln -s /usr/lib/OpenUtau/OpenUtau ${DESTDIR}/usr/bin/OpenUtau
	vmkdir /usr/share/pixmaps
	vcopy ${FILESDIR}/openutau.svg /usr/share/pixmaps/
	vmkdir /usr/share/applications
	vcopy ${FILESDIR}/OpenUtau.desktop /usr/share/applications/
}
