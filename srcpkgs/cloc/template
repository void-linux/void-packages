# Template file for 'cloc'
pkgname=cloc
version=1.80
revision=1
noarch=yes
hostmakedepends="perl"
depends="perl"
short_desc="Count Lines of Code"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="GPL-2.0-or-later"
