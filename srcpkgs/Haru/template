# Template file for 'Haru'
pkgname=Haru
version=2.4.5
revision=1
build_style=cmake
configure_args="-DLIBHPDF_STATIC=OFF"
makedepends="zlib-devel libpng-devel"
short_desc="Free, cross platform, open source library for generating PDF files"
maintainer="Florian Eich <flrn@nrmncr.net>"
license="Zlib"
homepage="http://libharu.org/"
distfiles="https://github.com/libharu/libharu/archive/v${version}/libharu-${version}.tar.gz"
checksum=0ed3eacf3ceee18e40b6adffbc433f1afbe3c93500291cd95f1477bffe6f24fc


Haru-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/libhpdf.so
	}
}
