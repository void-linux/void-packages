configure_args="
 --enable-proc
 --disable-resolvconf
 --with-ppp=/usr/bin/ppp
 --with-pppd=/usr/bin/pppd
 --with-resolvconf=/usr/bin/resolvconf
 --with-rt_dst"
hostmakedepends="autoconf automake pkg-config"
