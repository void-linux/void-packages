maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-3.0-only"
homepage="https://launchpad.net/ufw"
distfiles="https://launchpad.net/ufw/${_major_minor}/${version}/+download/ufw-${version}.tar.gz"
