# Template file for 'qt6-datavis3d'
pkgname=qt6-datavis3d
version=6.8.2
revision=1
build_style=cmake
hostmakedepends="qt6-base qt6-declarative-host-tools"
makedepends="qt6-base-private-devel qt6-declarative-devel"
short_desc="Qt6 Data Visualization 3D"
maintainer="Đoàn Trần Công Danh <congdanhqx@gmail.com>"
license="GPL-3.0-only WITH Qt-GPL-exception-1.0, LGPL-3.0-only, GPL-2.0-or-later"
homepage="https://www.qt.io"
distfiles="https://download.qt.io/official_releases/qt/${version%.*}/${version}/submodules/qtdatavis3d-everywhere-src-${version}.tar.xz"
checksum=cda29241af5f6f983c2c9864a4920fbfde42521e3e6974758914308d95c51e26

subpackages="qt6-datavis3d-private-devel qt6-datavis3d-devel"

qt6-datavis3d-private-devel_package() {
	depends="${sourcepkg}-devel>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove "usr/include/qt6/QtDataVisualization/${version}"
		vmove "usr/include/qt6/QtDataVisualizationQml/${version}"
		vmove usr/lib/qt6/mkspecs/modules/*_private.pri
	}
}

qt6-datavis3d-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}
	 qt6-base-devel qt6-declarative-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/pkgconfig
		vmove usr/lib/qt6/metatypes
		vmove usr/lib/qt6/mkspecs
		vmove "usr/lib/*.prl"
		vmove "usr/lib/*.so"
	}
}
