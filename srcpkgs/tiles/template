register_shell="/bin/tiles-shell /usr/bin/tiles-shell"

do_install() {
	TILES_VERSION="${version}" ./install.sh "${DESTDIR}" /usr/bin
	"$CC" $CFLAGS -o "${DESTDIR}/usr/bin/tiles-shell" tiles-shell.c
}
