# Template file for 'kde-cli-tools'
pkgname=kde-cli-tools
version=6.5.2
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DKF6_HOST_TOOLING=/usr/lib/cmake
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-base qt6-tools gettext
 kf6-kconfig kf6-kcmutils kf6-kdoctools"
makedepends="plasma-activities-devel kf6-kcmutils-devel kf6-kdesu-devel
 qt6-svg-devel kf6-kconfig-devel kf6-kiconthemes-devel kf6-kio-devel
 kf6-kservice-devel kf6-kwindowsystem-devel kf6-kparts-devel
 kf6-kcoreaddons-devel kf6-kwidgetsaddons-devel kf6-kdoctools-devel
 plasma-workspace-devel kf6-ki18n-devel qt6-base-private-devel"
depends="xdg-utils"
short_desc="KDE CLI tools"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later, GPL-2.0-or-later"
homepage="https://invent.kde.org/plasma/kde-cli-tools"
distfiles="${KDE_SITE}/plasma/${version}/${pkgname}-${version}.tar.xz"
checksum=834f1da71ec6f9eb2d0560218080a0f02a00cd6609c9ed5464011700c28a0a1c

post_install() {
	ln -sf ../libexec/kf6/kdesu ${DESTDIR}/usr/bin
}
