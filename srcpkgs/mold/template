export SYSTEM_MIMALLOC=1
export GIT_HASH=$_commit_hash

pre_patch() {
	# chroot-grep is built without PCRE support, so we use ripgrep instead
	vsed -i test/*.sh -e "s/grep -P/rg -P/;s/rg -\([a-yA-Z]*\)z/rg -\1U/"
}

pre_install() {
	vmkdir usr/bin
}

post_install() {
	vlicense LICENSE
}
