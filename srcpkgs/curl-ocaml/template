# Template file for 'curl-ocaml'
pkgname=curl-ocaml
version=0.8.1
revision=1
wrksrc="ocurl-${version}"
build_style=gnu-configure
make_install_args="FINDLIB=ocamlfind"
hostmakedepends="ocaml ocaml-findlib pkg-config libcurl-devel lwt"
makedepends="libcurl-devel"
short_desc="OCaml bindings to libcurl"
maintainer="John Zimmermann <johnz@posteo.net>"
license="MIT"
homepage="http://ygrek.org.ua/p/ocurl/"
changelog="https://raw.githubusercontent.com/ygrek/ocurl/master/CHANGES.txt"
distfiles="http://ygrek.org.ua/p/release/ocurl/ocurl-${version}.tar.gz"
checksum=3e0f9cd883c69b17a3d15ab215c670ea124a0db2fa57170093ab8e19fafa8d22
nocross=yes

pre_install() {
	export OCAMLFIND_DESTDIR="${DESTDIR}$(ocamlfind printconf destdir)"
	vmkdir "usr/lib/ocaml/stublibs"
	vlicense COPYING
}
