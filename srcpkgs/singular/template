 --enable-gfanlib
 --enable-Singular
 --enable-factory
 --disable-doc
 --disable-polymake
 --without-python
 --with-libparse
 ac_cv_lib_cddgmp_dd_free_global_constants=yes"
hostmakedepends="perl tar"
