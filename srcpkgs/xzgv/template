# Template file for 'xzgv'
pkgname=xzgv
version=0.9.2
revision=1
build_style=gnu-makefile
make_build_target="all man"
make_use_env=true
hostmakedepends="pkg-config"
makedepends="gtk+-devel libexif-devel"
short_desc="Keyboard-controllable fast picture viewer"
maintainer="marin <void@marin.fyi>"
license="GPL-2.0-only"
homepage="https://sourceforge.net/projects/xzgv/"
distfiles="https://master.dl.sourceforge.net/project/xzgv/xzgv/$version/xzgv-$version.tar.gz"
checksum=25a240bb8c4a85c3979ce1a39c81c859724b490c1fd83dd4e3ef1db053ee819e

do_install() {
	vbin src/xzgv
	vinstall src/xzgv.desktop 644 usr/share/applications
	vinstall src/icon-64.xpm 644 usr/share/icons xzgv.xpm
	vman doc/xzgv.1
}
