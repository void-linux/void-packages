# Template file for 'xxHash'
pkgname=xxHash
version=0.7.3
revision=1
build_style=gnu-makefile
make_use_env=yes
make_check_target="test"
short_desc="Fast non-cryptographic hashing algorithm"
maintainer="John <johnz@posteo.net>"
license="BSD-2-Clause, GPL-2.0-or-later"
homepage="https://cyan4973.github.io/xxHash/"
distfiles="https://github.com/Cyan4973/${pkgname}/archive/v${version}.tar.gz>xxhash-${version}.tar.gz"
checksum=952ebbf5b11fbf59ae5d760a562d1e9112278f244340ad7714e8556cbe54f7f7

post_install() {
	vlicense LICENSE
}

libxxHash_package() {
	short_desc+=" - library"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}

xxHash-devel_package() {
	short_desc+=" - development files"
	depends="libxxHash>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"
	}
}
