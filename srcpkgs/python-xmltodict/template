	vlicense LICENSE
}

python3-xmltodict_package() {
	noarch=yes
	short_desc="${short_desc/Python2/Python3}"
	pycompile_module="xmltodict.py"
	depends="python3"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
