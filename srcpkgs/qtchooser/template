revision=2
_commit=g13a3d08
wrksrc="qtchooser-$version-$_commit"
build_style=gnu-makefile
hostmakedepends="git"
short_desc="Qt4/Qt5 version chooser"
maintainer="Juan RP <xtraeme@voidlinux.org>"
