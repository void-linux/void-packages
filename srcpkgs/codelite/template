# Template file for 'codelite'
pkgname=codelite
version=18.1.0
revision=1
build_style=cmake
build_helper=cmake-wxWidgets-gtk3
configure_args="-DWITH_PCH=0 -DWITH_CHATAI=1 -DWITH_WX_CONFIG=wx-config-gtk3
	$(vopt_if sftp -DENABLE_SFTP=1 -DENABLE_SFTP=0)"
hostmakedepends="pkg-config which bison flex git gettext"
makedepends="gtk+3-devel wxWidgets-gtk3-devel sqlite-devel MesaLib-devel libglib-devel
	harfbuzz-devel $(vopt_if hunspell hunspell-devel) $(vopt_if sftp libssh-devel)
	libgomp-devel"
short_desc="Open-source, cross platform IDE for the C/C++ programming languages"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="http://www.codelite.org"
python_version=3

build_options="hunspell sftp helpplugin chatai"
build_options_default="hunspell sftp helpplugin chatai"
desc_option_hunspell="Enable SpellCheck plugin"
desc_option_sftp="Enable Workspace Mirroring plugin"
desc_option_helpplugin="Enable Help plugin"
desc_option_chataiplugin="Enable ChatAI plugin"

CXXFLAGS="-D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64"

do_fetch() {
	git clone https://github.com/eranif/codelite.git
	mv ./codelite ./codelite-${version}
	cd ./codelite-${version}
	git submodule update --init --recursive
}
