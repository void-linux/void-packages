# Template file for 'watchexec'
pkgname=watchexec
version=1.20.0
revision=1
wrksrc="${pkgname}-cli-v${version}"
build_wrksrc="crates/cli"
build_style=cargo
short_desc="Executes commands in response to file modifications"
