	makedepends+=" libatomic-devel"
	XBPS_CROSS_RUSTFLAGS+=" -latomic"
fi

post_install() {
	vman ${wrksrc}/doc/watchexec.1
	vcompletion ${wrksrc}/completions/zsh zsh
}
