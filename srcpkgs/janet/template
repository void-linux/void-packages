# Template file for 'janet'
pkgname=janet
version=1.25.1
revision=1
build_style=meson
configure_args="-Db_lto=false --libdir=/usr/lib"  # breaks jpm
short_desc="Dynamic Lisp dialect and bytecode VM"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="MIT"
homepage="https://janet-lang.org/"
changelog="https://github.com/janet-lang/janet/blob/master/CHANGELOG.md"
distfiles="https://github.com/janet-lang/janet/archive/v${version}.tar.gz"
checksum=0f8a4afaf7b58091e0a61c972ddd959bd61acb2a6306d3120492dee936bf751e

post_install() {
	vlicense LICENSE
}

janet-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
