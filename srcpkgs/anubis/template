system_accounts="_anubis"

pre_build() {
	npm install --ignore-scripts
	npm run assets
}

do_check() {
	go test -p "$XBPS_MAKEJOBS" ${make_check_args} ./...
}

post_install() {
	vsv anubis
	vlicense LICENSE
}
