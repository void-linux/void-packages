}

pre_check() {
	# regression tests require running postgresql
	vsed -i regress/run_test.pl -e '/\/usr\/bin\/env/ a exit;'
}

postgis_package() {
	build_style=meta
	short_desc+=" (meta package)"
	depends="${sourcepkg}"
}
