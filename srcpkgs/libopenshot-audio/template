CXXFLAGS="-I${XBPS_CROSS_BASE}/usr/include/freetype2"

libopenshot-audio-devel_package() {
	short_desc+=" - development files"
	depends+=" ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
	}
}
