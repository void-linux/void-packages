# Template file for 'vimtex'
pkgname=vimtex
version=2.4
revision=1
depends="vim-common"
short_desc="Plugin for LaTeX files"
maintainer="dkwo <nicolopiazzalunga@gmail.com>"
license="MIT"
homepage="https://github.com/lervag/vimtex"
distfiles="${homepage}/archive/refs/tags/v${version}.tar.gz"
checksum=04183d57b5753bb9530bacfcc610aaa9d487589db0ea62508c0107fff22e1856
python_version=3

do_install() {
	vmkdir usr/share/vim/vimfiles
	for dir in after autoload compiler doc ftdetect ftplugin indent media rplugin syntax; do
		vcopy $dir usr/share/vim/vimfiles/$dir
	done
	vlicense LICENSE.md
}
