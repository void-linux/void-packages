# Template file for 'yad'
pkgname=yad
version=0.41.0
revision=1
build_style=gnu-configure
configure_args="--enable-icon-browser --with-gtk=gtk3 --enable-gio
 --enable-icon-browser $(vopt_enable html) $(vopt_enable spell)
 $(vopt_enable sourceview)"
hostmakedepends="automake gettext-devel glib-devel intltool pkg-config"
makedepends="gtk+3-devel libglib-devel $(vopt_if html webkit2gtk-devel)
 $(vopt_if spell gtkspell3-devel) $(vopt_if sourceview gtksourceview-devel)"
short_desc="Yet Another Dialog"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="GPL-3.0-or-later"
homepage="https://github.com/v1cont/yad"
distfiles="https://github.com/v1cont/yad/archive/v${version}.tar.gz"
checksum=abf6522d26bef3725d12fef3e171f85c8921ec09da4b7bea89f92e4d9dd068ea

build_options="html spell sourceview"
desc_option_html="Compile HTML support with webkit2gtk"
desc_option_spell="Compile Spell check support with gtkspell3"
desc_option_sourceview="Compile GtkSourceView support"

pre_configure() {
	autoreconf -ivf
	intltoolize
}
