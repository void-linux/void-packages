post_install() {
	vlicense LICENSE
}

python3-click-threading_package() {
	noarch=yes
	pycompile_module="click_threading"
	depends="python3-click"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
