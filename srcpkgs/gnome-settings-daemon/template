	hostmakedepends+=" polkit"
fi

gnome-settings-daemon-devel_package() {
	depends="libglib-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}
