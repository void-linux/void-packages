}

python3-cached-property_package() {
	noarch=yes
	depends="python3"
	pycompile_module="cached_property.py"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
