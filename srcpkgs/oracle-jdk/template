license="oracle"
lib32disabled=yes
repository="nonfree"
only_for_archs="i686 x86_64 armv6l armv7l aarch64"
depends="hicolor-icon-theme desktop-file-utils xdg-utils shared-mime-info wget"
hostmakedepends="wget"
provides="java-environment-${version}_1"
replaces="java-environment>=0"

case "${XBPS_TARGET_MACHINE}" in
x86_64)
	_arch=amd64
	_filename=jdk-${version}-linux-x64.tar.gz
	checksum=1845567095bfbfebd42ed0d09397939796d05456290fb20a83c476ba09f991d3
	;;
i686)
	_arch=i386
	_filename=jdk-${version}-linux-i586.tar.gz
	checksum=d78a023abffb7ce4aade43e6db64bbad5984e7c82c54c332da445c9a79c1a904
	;;
arm*)
	_arch=arm
	_filename=jdk-${version}-linux-arm32-vfp-hflt.tar.gz
	checksum=c72e37da3c34531949b74a5bd846a3862933408df6306358fcea27876158ef7e
	;;
aarch64)
	_arch=aarch64
	_filename=jdk-${version}-linux-arm64-vfp-hflt.tar.gz
	checksum=4d01293098c4f65a97fe594b490fffaf81d85d9374a48b7e359505508c4839a4
	;;
