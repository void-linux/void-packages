makedepends="kf6-kcmutils-devel kf6-knewstuff-devel gtk+3-devel
 qt6-svg-devel qt6-base-devel libglib-devel kf6-kcolorscheme-devel
 kf6-kconfig-devel kf6-kguiaddons-devel kf6-kwindowsystem-devel
