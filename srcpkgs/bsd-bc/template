# Template file for 'bsd-bc'
pkgname=bsd-bc
version=1.0
revision=1
wrksrc="bc-${version}"
build_style=gnu-makefile
make_check_target=test
checkdepends="bc"
short_desc="Implementation of POSIX bc with GNU extensions"
maintainer="maxice8 <thinkabit.ukim@gmail.com>"
license="0BSD"
homepage="https://github.com/gavinhoward/bc"
distfiles="https://github.com/gavinhoward/bc/releases/download/${version}/bc-${version}.tar.xz"
checksum=39d0e924993e7e2ffef5fe3b5083640cc8466de3f3b1d0c5ba49663b97ff9c2d

post_install() {
	vlicense LICENSE.md

	mv -f ${DESTDIR}/usr/bin/{,bsd-}bc
	rm -f ${DESTDIR}/usr/bin/dc
	ln -rsf ${DESTDIR}/usr/bin/bsd-bc ${DESTDIR}/usr/bin/bsd-dc
}
