python3-axolotl_package() {
	archs=noarch
	depends="python3-axolotl-curve25519 python3-cryptography python3-protobuf"
	pycompile_module="axolotl"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
