# Template file for 'dysk'
pkgname=dysk
version=3.6.0b
revision=1
build_style=cargo
short_desc="Utility to get information on filesystems, like df but better"
maintainer="yabobay <yabobay@yahoo.com>"
license="MIT"
homepage="https://dystroy.org/dysk/"
changelog="https://raw.githubusercontent.com/Canop/dysk/refs/heads/main/CHANGELOG.md"
distfiles="https://github.com/Canop/dysk/archive/refs/tags/v${version}.tar.gz"
checksum=59125412523853348218ff57eb1f58f31158e88dc172949d1007b4adbc7a4e61

post_install() {
	vlicense LICENSE
	vdoc README.md
	out_dir=$(find target -type f -name "$pkgname.bash" -exec dirname {} \;)
	vcompletion $out_dir/$pkgname.bash bash
	vcompletion $out_dir/$pkgname.fish fish
	vcompletion $out_dir/_$pkgname zsh
	vman $out_dir/$pkgname.1
}
