pre_configure() {
	vsed -i misc/displaycal-vrml-to-x3d-converter.desktop \
		-e 's|MimeType=model/vrml;x-world/x-vrml;|MimeType=model/vrml;|'
}

dispcalGUI_package() {
	build_style=meta
	short_desc+=" (transitional dummy package)"
	depends="${sourcepkg}>=${version}_${revision}"
}
