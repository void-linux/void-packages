# Template file for 'dash'
pkgname=dash
version=0.5.12
revision=1
build_style=gnu-configure
configure_args="$(vopt_enable static) $(vopt_with libedit)"
hostmakedepends="bison $(vopt_if libedit libedit-devel)"
short_desc="POSIX-compliant Unix shell, much smaller than GNU bash"
maintainer="Enno Boland <gottox@voidlinux.org>"
license="BSD-3-Clause"
homepage="http://gondor.apana.org.au/~herbert/dash/"
distfiles="http://gondor.apana.org.au/~herbert/dash/files/$pkgname-$version.tar.gz"
checksum=6a474ac46e8b0b32916c4c60df694c82058d3297d8b385b74508030ca4a8f28a
register_shell="/usr/bin/sh /usr/bin/dash /bin/sh /bin/dash"

alternatives="
 sh:sh:/usr/bin/dash
 sh:sh.1:/usr/share/man/man1/dash.1"

build_options="static libedit"

post_install() {
	 vlicense COPYING
}
