# Template file for 'wget2'
pkgname=wget2
version=2.2.0
revision=1
build_style="gnu-configure"
configure_args="
 --enable-shared
 --enable-static
 --with-ssl=gnutls
 $(vopt_with lzma)
 $(vopt_with bzip2)
 $(vopt_with pcre2 libpcre2)"
hostmakedepends="pandoc pkg-config texinfo"
makedepends="
 attr-devel brotli-devel gnutls-devel libiconv-devel libidn2-devel libpsl-devel
 libzstd-devel lzlib-devel nghttp2-devel zlib-devel
 $(vopt_if bzip2 bzip2-devel) $(vopt_if lzma liblzma-devel)
 $(vopt_if pcre2 pcre2-devel)"
checkdepends="libmicrohttpd-devel"
short_desc="File and recursive website downloader, successor of GNU Wget"
maintainer="Will Reed <wreedb@disroot.org>"
license="GPL-3.0-or-later"
homepage="https://gitlab.com/gnuwget/wget2"
distfiles="${GNU_SITE}/wget/wget2-${version}.tar.gz"
checksum="2b3b9c85b7fb26d33ca5f41f1f8daca71838d869a19b406063aa5c655294d357"

build_options="pcre2 bzip2 lzma"
build_options_default="pcre2 bzip2 lzma"
desc_option_pcre2="Enable support for regex using libpcre2"
desc_option_bzip2="Enable support for bzip2 compression"
desc_option_lzma="Enable support for lzma compression"

post_install() {
	rm -f "${DESTDIR}/usr/bin/wget2_noinstall"
}

wget2-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
