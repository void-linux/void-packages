# Template file for 'libktorrent'
pkgname=libktorrent
version=25.08.2
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DKF6_HOST_TOOLING=/usr/lib/cmake
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins
 -DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt6/mkspecs/modules"
hostmakedepends="extra-cmake-modules gettext qt6-base qt6-tools pkg-config doxygen
 kf6-kconfig kf6-kcoreaddons"
makedepends="qt6-base-devel karchive-devel kf6-solid-devel kf6-kio-devel kf6-ki18n-devel
 kf6-kcrash-devel gmp-devel libgcrypt-devel qca-qt6-devel boost-devel-minimal"
short_desc="BitTorrent protocol implementation"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://apps.kde.org/en/ktorrent"
distfiles="${KDE_SITE}/release-service/${version}/src/libktorrent-${version}.tar.xz"
checksum=45d8088c6cd7537883667e11cbfe937f964cbd8070d7dea5d39bd93a11b55836

libktorrent-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} kf6-karchive-devel
	 kf6-kio-devel kf6-solid-devel kf6-ki18n-devel qt6-base-devel
	 libgcrypt-devel gmp-devel boost-devel-minimal"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
