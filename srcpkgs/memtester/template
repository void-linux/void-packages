CFLAGS="-fcommon"

post_patch() {
	if [ -n "$CROSS_BUILD" ]; then
		vsed -i -e "s|^cc|$CC|" -e "s|-c|${CFLAGS} -c|" conf-cc
		vsed -i -e "s|^cc|$CC|" -e "s|-s|${LDFLAGS} -s|" conf-ld
	fi
	vsed -i -e "s|/usr/local|${DESTDIR}/usr|" \
		-e "s|man/man8|share/man/man8|" Makefile
}
