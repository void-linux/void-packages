CFLAGS="-fcommon"

pre_build() {
	sed -i -e "s|^cc|$CC|" -e "s|-c|${CFLAGS} -c|" conf-cc
	sed -i -e "s|^cc|$CC|" -e "s|-s|${LDFLAGS} -s|" conf-ld
	sed -i -e "s|/usr/local|${DESTDIR}/usr|" \
		-e "s|man/man8|share/man/man8|" Makefile
}
