# Template file for 'libxisf'
pkgname=libxisf
version=0.2.9
revision=1
build_style=cmake
configure_args="-DUSE_BUNDLED_LIBS=OFF"
hostmakedepends="pkg-config"
makedepends="liblz4-devel pugixml-devel zlib-devel"
short_desc="Library to load and write XISF format from PixInsight"
maintainer="Đoàn Trần Công Danh <congdanhqx@gmail.com>"
license="GPL-3.0-or-later"
homepage="https://nouspiro.space/?page_id=306"
distfiles="https://gitea.nouspiro.space/nou/libXISF/archive/v${version}.tar.gz"
checksum=d3d911ed0e01ef1d99868742ed895694d53b1b0ee208e403113879e9551e314e

libxisf-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
