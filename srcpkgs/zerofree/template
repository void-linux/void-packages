# Template file for 'zerofree'
pkgname=zerofree
version=1.1.1
revision=1
build_style=gnu-makefile
makedepends="e2fsprogs-devel"
short_desc="A tool to zero free blocks in an ext2 filesystem"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="GPL-2.0-only"
