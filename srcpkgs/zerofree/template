long_desc="
 zerofree is a tool to zero free blocks in an ext2 filesystems; ext3 and
 ext4 filesystems are also supported."

makedepends="e2fsprogs-devel"

do_build() {
	make
}

do_install() {
	vinstall zerofree 755 usr/sbin
}
