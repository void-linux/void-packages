# Template file for 'xapp'
pkgname=xapp
version=3.2.1
revision=1
build_style=meson
build_helper="gir"
hostmakedepends="pkg-config meson ninja gettext libdbusmenu-gtk3 libdbusmenu-gtk3-devel	gtk-update-icon-cache"
makedepends="glib-devel dbus-devel gtk+3-devel gdk-pixbuf-devel cairo-devel libX11-devel libgnomekbd-devel python3-gobject-devel"
depends="inxi xfconf"
short_desc="Cross-desktop libraries and common resources from Linux Mint"
maintainer="Antonio Volpicelli AntoFox <nioanto@live.it>"
license="GPL-3.0-or-later, LGPL-3.0-or-later"
homepage="https://github.com/linuxmint/xapp"
changelog="https://raw.githubusercontent.com/linuxmint/xapp/master/debian/changelog"
distfiles="https://github.com/linuxmint/xapp/archive/${version}.tar.gz"
checksum=213b6790e00b90f63f90cf6ce189efb5948a23b67330e3aa81fadb4ef822a6ef
replaces="xapps>=0"

xapp-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision} gtk+3-devel
	 libglib-devel cairo-devel libX11-devel libgnomekbd-devel
	 gdk-pixbuf-devel libxkbfile-devel"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove usr/share/gir-1.0
		vmove usr/share/vala
	}
}


