#!/bin/sh

: ${ROOTDIR:=/srv/www/darkhttpd}
: ${LOGDIR:=/var/log/darkhttpd}

if [ ! -d $ROOTDIR ]; then
	mkdir -p $ROOTDIR
	chown _darkhttpd:_darkhttpd $ROOTDIR
fi
if [ ! -d $LOGDIR ]; then
	mkdir -p $LOGDIR
	chown _darkhttpd:_darkhttpd $LOGDIR
fi

exec darkhttpd $ROOTDIR --chroot --uid _darkhttpd --gid _darkhttpd --no-server-id --log ${LOGDIR}/darkhttpd.log
