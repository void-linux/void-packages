conflicts="python-pipenv>=0"

post_extract() {
	sed -i '/certifi/d' setup.py
}

post_install() {
	vlicense LICENSE
	# remove files only valid for Python 2
	rm -rf ${DESTDIR}/${py3_sitelib}/pipenv/patched/yaml2
	rm -f ${DESTDIR}/${py3_sitelib}/pipenv/vendor/importlib_resources/_py2.py
}
