post_install() {
	mv ${DESTDIR}/usr/share/qgis/python ${DESTDIR}/usr/lib/qgis/
	ln -s ../../lib/qgis/python ${DESTDIR}/usr/share/qgis/python
	mv ${DESTDIR}/usr/man ${DESTDIR}/usr/share/
}
