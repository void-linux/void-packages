# Template file for 'splint'
pkgname=splint
version=3.1.2
revision=5
wrksrc="${pkgname}-${version}.orig"
build_style=gnu-configure
hostmakedepends="flex"
makedepends="libfl-devel"
short_desc="Secure Programming Lint"
maintainer="Orphaned <orphan@voidlinux.org>"
