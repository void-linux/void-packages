revision=1
build_style=gnu-configure
configure_args="ac_cv_so_reuseport_works=yes ac_cv_so_tfo=yes"
hostmakedepends="pkg-config automake"
makedepends="libev-devel openssl-devel"
checkdepends="lsof curl"
