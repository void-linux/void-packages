post_patch() {
	vsed -i -e "s/grep -Pq/grep -q/" -e 's/\\t/\t/' \
		src/tests/test32-proxy-authority.sh
}

pre_configure() {
	autoreconf -fi
}

post_install() {
	vman hitch.8
	vman hitch.conf.5
	vlicense LICENSE
	vsv hitch
}
