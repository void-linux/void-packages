# Template file for 'ivykis'
pkgname=ivykis
version=0.43.2
revision=1
build_style=gnu-configure
hostmakedepends="autoconf automake libtool"
short_desc="Library for asynchronous I/O readiness notification"
maintainer="Komeil Parseh <komeilparseh@disroot.org>"
license="LGPL-2.0-or-later"
homepage="https://github.com/buytenh/ivykis"
distfiles="https://github.com/buytenh/ivykis/archive/refs/tags/v${version}.tar.gz"
checksum=5a81cb5ff94e2b9c289682204aecc675bd726d6db822c592ed9f0e3e493d488e

pre_configure() {
	autoreconf -if
}

ivykis-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/share/man/man3
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
