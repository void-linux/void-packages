post_install() {
	vlicense LICENSE
	vlicense LICENSE.BSD
}

python3-cryptography_package() {
	depends="python3-cffi python3-asn1crypto python3-six python3-idna"
	pycompile_module="cryptography"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
		vlicense LICENSE.BSD
	}
}
