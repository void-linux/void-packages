if [ -z "$CROSS_BUILD" ]; then
	configure_args+=" -DwxWidgets_CONFIG_EXECUTABLE=/usr/bin/wx-config-gtk3"
fi

pre_configure() {
	case $XBPS_TARGET_MACHINE in
		x86_64* | i686*);;
		*) sed -i '/D_USE_SSE/d' src/CMakeLists.txt;;
	esac
}
