# Template file for 'wordwarvi'
pkgname=wordwarvi
version=1.0.4
revision=1
build_style=gnu-makefile
hostmakedepends="pkg-config"
makedepends="portaudio-devel gtk+-devel libvorbis-devel alsa-lib-devel"
