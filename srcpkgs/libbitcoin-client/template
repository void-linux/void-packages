makedepends+=" libbitcoin-system-devel"
makedepends+=" libpng-devel"
makedepends+=" libsecp256k1-devel"
makedepends+=" protobuf-devel"
makedepends+=" qrencode-devel"
makedepends+=" zeromq-devel"
hostmakedepends+=" autoconf"
