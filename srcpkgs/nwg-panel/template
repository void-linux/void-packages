post_install() {
	for f in *.svg; do
		vinstall "$f" 644 usr/share/pixmaps
	done
	for f in *.desktop; do
		vinstall "$f" 644 usr/share/applications
	done
	vdoc README.md
	vlicense LICENSE
}
