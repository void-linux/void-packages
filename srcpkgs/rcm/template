# Template file for 'rcm'
pkgname=rcm
version=1.3.3
revision=1
archs=noarch
build_style=gnu-configure
checkdepends="python3-cram"
depends="perl"
short_desc="Management suite for dotfiles"
maintainer="maxice8 <thinkabit.ukim@gmail.com>"
license="BSD-3-Clause"
