do_check() {
	# find '-perm' errors on *hooks* tests
	:
}

post_build() {
	# Fix shebangs on binaries
	for binary in lsrc mkrc rcdn rcup ; do
		sed -i 's|#!/bin/sh|#!/usr/bin/env bash|g' bin/"$binary"
	done
}

post_install() {
	vlicense LICENSE
}
