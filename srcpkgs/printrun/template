# Template file for 'printrun'
pkgname=printrun
version=1.6.0
revision=3
archs=noarch
wrksrc="Printrun-printrun-${version}"
build_style=python2-module
hostmakedepends="python-setuptools python-pyserial"
depends="python wxPython python-pyserial python-pyglet python-numpy"
