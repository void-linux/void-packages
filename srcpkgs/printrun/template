distfiles="https://github.com/kliment/Printrun/archive/printrun-${version}.tar.gz"
checksum=fefcb4c5793fc77205a14263bc915616cde0523cd60704f356191b9ae34ba65d

post_install() {
	for file in ${DESTDIR}/usr/bin/*.py; do
		mv -- "$file" "${file%%.py}"
	done
}
