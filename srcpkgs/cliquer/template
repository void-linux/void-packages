# Template file for 'cliquer'
pkgname=cliquer
version=1.22
revision=1
build_style=gnu-configure
short_desc="C routines for finding cliques in an arbitrary weighted graph"
maintainer="Gonzalo Tornar√≠a <tornaria@cmat.edu.uy>"
license="GPL-2.0-or-later"
