if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-host-tools qt5-qmake"
fi

post_extract() {
	if [ "$CROSS_BUILD" ]; then
		vsed -i "/set(CMAKE_PREFIX_PATH/d" CMakeLists.txt
	fi
}
