# Template file for 'mpvqt'
pkgname=mpvqt
version=1.1.1
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base"
makedepends="mpv-devel qt6-declarative-devel"
short_desc="Libmpv wrapper for QtQuick2 and QML"
maintainer="classabbyamp <void@placeviolette.net>"
license="LGPL-2.1-only OR LGPL-3.0-only"
homepage="https://invent.kde.org/libraries/mpvqt"
distfiles="${KDE_SITE}/mpvqt/mpvqt-${version}.tar.xz"
checksum=bdd1ea69338cf3017f628a886218b8c185ca24e8257f03207a3cf1bbb51e3d32

mpvqt-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
