# Template file for 'ocaml-react'
pkgname=ocaml-react
version=1.2.1
revision=1
wrksrc="react-${version}"
hostmakedepends="ocaml ocaml-findlib ocamlbuild opam ocaml-topkg"
short_desc="OCaml module for functional reactive programming"
maintainer="John Zimmermann <johnz@posteo.net>"
license="ISC"
homepage="http://erratique.ch/software/react"
distfiles="http://erratique.ch/software/react/releases/react-${version}.tbz"
checksum=7b2c5c078cc659dcd2202e5d89628df592c5e843b7e8f357b63db5f6d2e148aa
nocross=yes

do_build() {
	ocaml pkg/pkg.ml build
}

do_install() {
	opam-installer --prefix=${DESTDIR}/usr \
		--libdir=${DESTDIR}$(ocamlc -where) \
		--docdir=${DESTDIR}/usr/share/doc

	vlicense LICENSE.md
}
