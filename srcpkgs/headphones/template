# Template file for 'headphones'
pkgname=headphones
version=0.6.3
revision=1
make_dirs="/opt/headphones 0755 _headphones _headphones"
depends="python3"
short_desc="Automatic music downloader for SABnzbd"
maintainer="Jason Elswick <jason@jasondavid.tv>"
license="GPL-3.0-or-later"
homepage="https://github.com/rembo10/headphones"
distfiles="https://github.com/rembo10/headphones/archive/refs/tags/v${version}.tar.gz"
checksum=98e5c7bc2c09c689d03d92e6faff697e9cdfb48850a816d8ebdf464e60017cec
python_version=3

system_accounts="_headphones"
headphones_homedir="/opt/headphones"
headphones_shell="/sbin/nologin"

do_install() {
	vmkdir opt/
	vcopy ${wrksrc} opt/headphones/
}

post_install() {
	vsv headphones
}
