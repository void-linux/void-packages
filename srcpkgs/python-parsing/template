checksum=fc079f975968ae21f82223ae2340a39e7182ea993631812ddb5978619ed5c456

post_install() {
	vlicense LICENSE
}

python3-parsing_package() {
	archs=noarch
	depends="python3"
	pycompile_module="pyparsing.py"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
