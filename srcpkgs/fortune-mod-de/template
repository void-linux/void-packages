do_install() {
	PREFIX="$DESTDIR/usr" MANDIR=share/man DOCDIR=share/doc/fortune-mod-de \
		FORTUNESDIR=share/fortunes ./install.sh
	rm -rf ${DESTDIR}/usr/{games,share/doc,share/man}
}
