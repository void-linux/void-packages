do_install() {
	vbin st
	vman doc/st.1

	vinstall doc/st.info 644 usr/share/terminfo/s st.terminfo
	vdoc README.md README
	vdoc doc/FAQ
	vdoc doc/Xresources
	vlicense doc/LICENSE
}
