# Template file for 'aff4-cpp-lite'
pkgname=aff4-cpp-lite
version=2.1.1+pre
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config autoconf libtool automake"
makedepends="zlib-devel snappy-devel liblz4-devel raptor-devel libcppunit-devel"
checkdepends="libcppunit openssl"
short_desc="Lightweight C++/C AFF4 reader library"
maintainer="cbaulesch <christophe@baulesch.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/aff4/aff4-cpp-lite"
changelog="https://raw.githubusercontent.com/aff4/aff4-cpp-lite/refs/heads/master/ChangeLog"
distfiles="https://github.com/aff4/aff4-cpp-lite/archive/refs/tags/v${version//+/-}.tar.gz"
checksum=b682ef3af8b581e9b2bb00ff74c7896723f86da7efdb9780209f57def644c9f5

CXXFLAGS="-D_LARGEFILE64_SOURCE"

pre_configure() {
		./autogen.sh
}

aff4-cpp-lite-devel_package() {
		depends="${sourcepkg}>=${version}_${revision}"
		short_desc+=" - development files"
		pkg_install() {
			vmove usr/include
			vmove usr/lib/pkgconfig
			vmove "usr/lib/*.a"
			vmove "usr/lib/*.so"
		}
}
