# Template file for 'python-frozendict'
pkgname=python-frozendict
version=1.2
revision=1
noarch=yes
wrksrc="${pkgname/python-/}-${version}"
build_style=python-module
pycompile_module="frozendict"
hostmakedepends="python-setuptools python3-setuptools"
depends="python"
short_desc="Simple immutable mapping for Python2"
maintainer="John <johnz@posteo.net>"
license="MIT"
homepage="https://github.com/slezica/python-frozendict"
distfiles="${PYPI_SITE}/f/frozendict/frozendict-1.2.tar.gz"
checksum=774179f22db2ef8a106e9c38d4d1f8503864603db08de2e33be5b778230f6e45

post_install() {
	vlicense LICENSE.txt
}

python3-frozendict_package() {
	noarch=yes
	short_desc="${short_desc/Python2/Python3}"
	pycompile_modules="frozendict"
	depens="python3"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
