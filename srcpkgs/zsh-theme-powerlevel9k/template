# Template file for 'zsh-theme-powerlevel9k'
_pkgname=powerlevel9k
pkgname=zsh-theme-"${_pkgname}"
version=0.6.5
revision=1
noarch=yes
depends="zsh"
short_desc="Powerlevel9k theme for zsh"
maintainer="Daniil Yarancev <tiber.iumk12@gmailDOTcom>"
license="MIT"
homepage="https://github.com/bhilburn/powerlevel9k"
distfiles="${homepage}/archive/v${version}.tar.gz>${pkgname}-${version}.tar.gz"
wrksrc="${_pkgname}-${version}"
checksum=d69d291618fd506e5889240d23080eb40c3f02493682d117880d69e3f71e349c

do_install() {
	vinstall ${_pkgname}.zsh-theme 644 /usr/share/${pkgname}
	vcopy functions /usr/share/${pkgname}
	vlicense LICENSE
}
