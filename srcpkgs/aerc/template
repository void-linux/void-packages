# Template file for 'aerc'
pkgname=aerc
version=0.2.0
revision=1
build_style=go
hostmakedepends="scdoc git"
short_desc="Terminal email client"
maintainer="shtayerc <david.murko@mailbox.org>"
license="MIT"
homepage="https://aerc-mail.org"
distfiles="https://git.sr.ht/~sircmpwn/aerc/archive/${version}.tar.gz"
checksum=ccf08950b85bf8ef167ffedbb58892d14987dadbe36206d49cdeb07060846cfb

do_configure() {
	:
}

do_build() {
	make ${makejobs} PREFIX=/usr
}

do_install() {
	make STRIP=true PREFIX=/usr DESTDIR=${DESTDIR} install
}

post_install() {
	vlicense LICENSE
}
