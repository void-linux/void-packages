# Template file for 'stb'
pkgname=stb
version=0.20250512
revision=1
_commit=802cd454f25469d3123e678af41364153c132c2a
short_desc="Single-file libraries for C/C++"
maintainer="Biswapriyo Nath <nathbappai@gmail.com>"
license="MIT, Public Domain"
homepage="https://github.com/nothings/stb"
distfiles="https://github.com/nothings/stb/archive/${_commit}.tar.gz"
checksum=d7f870bbe53a4171d5d5526043926b2f26194e6b08de63fc3f1cf4b54e5d5249

do_install() {
	install -Dm 644 *.{c,h} -t ${DESTDIR}/usr/include/stb/
}

post_install() {
	# Create a pkg-config file
	vmkdir usr/lib/pkgconfig
	sed ${FILESDIR}/stb.pc \
		-e "s;@VERSION@;${version};" \
		> ${DESTDIR}/usr/lib/pkgconfig/stb.pc

	vlicense LICENSE
}
