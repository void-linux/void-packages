# Template file for 'numix-icon-theme'
pkgname=numix-icon-theme
version=18.07.17
revision=1
build_style=fetch
noarch=yes
short_desc="SVG icon theme for Linux, Create for numixproject"
maintainer="1is7ac3 <isaac.qa13@gmail.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/numixproject/numix-icon-theme"
distfiles="https://github.com/numixproject/${pkgname}/archive/${version}.tar.gz"
checksum=39b27fd7cc15862bc56ce4dc56cbc5bd567fcb8077d343111f31ba23dce641d1

do_install() {
	tar xzf ${version}.tar.gz --strip 1
	vmkdir usr/share/icons
	vcopy Numix-Light usr/share/icons/Numix-Light
	vcopy Numix usr/share/icons/Numix
}
