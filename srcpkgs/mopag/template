replaces="mopag>=0"

pre_build() {
	sed -i 's|^CPPFLAGS *=|override CPPFLAGS +=|g' Makefile
	sed -i 's|^CFLAGS *=|override CFLAGS +=|g' Makefile
	sed -i 's|^LDFLAGS *=|override LDFLAGS +=|g' Makefile
}
