archs="x86_64* aarch64* ppc64*"
build_style=cmake
configure_args="-DBUILD_TESTING=OFF"  # needs root to run
hostmakedepends="pkg-config flex"
makedepends="bcc-devel clang clang-tools-extra elfutils-devel llvm"
