do_configure() {
	sed -i -e "s|/usr/local|/usr|" Makefile
	sed -i -e 's/LINK_FLAGS   =/& -pthread -lrt/' Makefile
}

do_build() {
	make ${makejobs} DESTDIR=${DESTDIR}
}

do_install() {
	make ${makejobs} DESTDIR=${DESTDIR} install
}
