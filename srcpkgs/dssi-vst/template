archs=i686
hostmakedepends="pkg-config git wine-tools"
makedepends="zlib-devel jack-devel alsa-lib-devel liblo-devel
 dssi-devel ladspa-sdk wine wine-devel"
depends="dssi ladspa-sdk ladspa-sdk-progs wine"
