checksum=88e6fc49f458526a265357601e4fb3e7400685e9720a9150227cbd288432e6f1

post_install() {
	vcompletion "build/src/bash-completion/tio" bash tio
	vsconf examples/config/config
	vcopy examples/lua usr/share/examples/tio
}
