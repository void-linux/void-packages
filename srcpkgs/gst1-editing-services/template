# Template file for 'gst1-editing-services'
pkgname=gst1-editing-services
version=1.8.0
revision=1
wrksrc="${pkgname/gst1/gstreamer}-${version}"
build_style=gnu-configure
hostmakedepends="python flex perl pkg-config gobject-introspection"
