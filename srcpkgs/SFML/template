# Template file for 'SFML'
pkgname=SFML
version=3.0.2
revision=1
build_style=cmake
configure_args="-DSFML_BUILD_EXAMPLES=0 -DSFML_BUILD_DOC=1 -DSFML_INSTALL_PKGCONFIG_FILES=1 -DBUILD_SHARED_LIBS=1"
hostmakedepends="doxygen"
makedepends="libsndfile-devel libXrandr-devel libjpeg-turbo-devel
 libopenal-devel glew-devel freetype-devel MesaLib-devel glu-devel
 xcb-util-image-devel libXcursor libXcursor-devel libXi-devel"
short_desc="Simple and Fast Multimedia Library"
maintainer="Andrea Brancaleoni <abc@pompel.me>"
license="Zlib"
homepage="http://www.sfml-dev.org/"
distfiles="https://github.com/SFML/SFML/archive/${version}.tar.gz"
checksum=0034e05f95509e5d3fb81b1625713e06da7b068f210288ce3fd67106f8f46995

pre_install() {
	doxygen $wrksrc/build/doc/doxyfile
}

post_install() {
	rm -f ${DESTDIR}/usr/sfml-*.pc
}

SFML-devel_package() {
	depends="SFML>=${version}_${revision} libopenal-devel libsndfile-devel
	 freetype-devel libXcursor-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/doc/SFML
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
