libdbusmenu-qt5-devel_package() {
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
		vmove usr/lib/*.so
	}
}
