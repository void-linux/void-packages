version=0.9.3+16.04.20160218
revision=2
wrksrc="${pkgname%5}-${version}"
build_style=cmake
configure_args="-DWITH_DOC=OFF"
hostmakedepends="pkg-config qt5-host-tools qt5-tools-devel"
makedepends="qt5-tools-devel"
