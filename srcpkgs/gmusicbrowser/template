# Template file for 'gmusicbrowser'
pkgname=gmusicbrowser
version=1.1.15
revision=7
archs=noarch
hostmakedepends="perl gettext"
depends="perl-Gtk2 perl-Glib-Object-Introspection gst-plugins-good1
 gst-plugins-bad1 gst-plugins-ugly1"
