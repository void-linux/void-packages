pre_check() {
	# this fix the failed test in i686
	# https://github.com/Knio/dominate/issues/175
	if [ "$XBPS_TARGET_MACHINE" = "i686" ]; then
		vsed -i '/3713141171098444831/i  \\t\t1692341442, # i686' tests/test_dom_tag.py
	fi
}
