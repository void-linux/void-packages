# Remove requirement of python3-vlc
# as we can use python3-mpv instead,
# also because python*-vlc is not in repo
post_patch() {
	vsed -e '/python-vlc/d' -i setup.py
}

pre_check() {
	rm tests/test_player_vlcplayer.py
}

post_install() {
	vlicense LICENSE.txt LICENSE
}
