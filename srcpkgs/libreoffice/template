	short_desc+=" - Common files"
	depends="hunspell hyphen mythes openldap libreoffice-i18n-en-US>=${version}_${revision}"
	skiprdeps=/usr/lib/libreoffice/program/libofficebean.so
	pkg_install() {
		_split common
	}
}

