# Template file for 'rssguard'
pkgname=rssguard
version=3.5.9
revision=1
build_style=qmake
configure_args="CONFIG+=release LRELEASE_EXECUTABLE=lrelease-qt5 USE_WEBENGINE=false"
makedepends="qt5-tools-devel"
