build_style=meson
configure_args="-Djpeg=enabled -Dwerror=false"
hostmakedepends="pkg-config wayland-devel scdoc"
makedepends="wayland-devel wayland-protocols pixman-devel libjpeg-turbo-devel
 libpng-devel"
