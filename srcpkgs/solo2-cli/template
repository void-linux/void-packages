post_install() {
	for shell in bash fish zsh; do
		vcompletion "$XBPS_SRCDISTDIR/${pkgname}-${version}/solo2.completions.${shell}" \
			"${shell}" solo2
	done
	vinstall 70-solo2.rules 644 usr/lib/udev/rules.d
}
