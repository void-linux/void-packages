post_install() {
	vlicense LICENSE
}

python3-mechanize_package() {
	archs=noarch
	depends="python3 python3-html5lib"
	pycompile_module="mechanize"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
	vmove usr/lib/python3*
	vlicense LICENSE
	}
}
