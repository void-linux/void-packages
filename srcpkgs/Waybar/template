 $(vopt_if pulseaudio pulseaudio-devel)
 $(vopt_if dbusmenugtk libdbusmenu-gtk3-devel)
 $(vopt_if mpd libmpdclient-devel)
 $(vopt_if sndio sndio-devel)
 $(vopt_if jack jack-devel)"
