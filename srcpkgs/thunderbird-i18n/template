	'id     "Indonesian"'
	'is     "Icelandic"'
	'it     "Italian"'
	'ja     "Japanese"'
	'ko     "Korean"'
	'lt     "Lithuanian"'
	'nb-NO  "Norwegian (BokmÃ¥l)"'
	'nl     "Dutch"'
	'nn-NO  "Norwegian (Nynorsk)"'
	'pl     "Polish"'
