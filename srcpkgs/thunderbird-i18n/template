	'gd     "Gaelic (Scotland)"'
	'gl     "Galician"'
	'he     "Hebrew"'
	'hr     "Croatian"'
	'hsb    "Upper Sorbian"'
	'hu     "Hungarian"'
	'hy-AM  "Armenian"'
	'id     "Indonesian"'
	'is     "Icelandic"'
	'it     "Italian"'
	'ja     "Japanese"'
	'ko     "Korean"'
	'lt     "Lithuanian"'
	'nb-NO  "Norwegian (BokmÃ¥l)"'
	'nl     "Dutch"'
	'nn-NO  "Norwegian (Nynorsk)"'
	'pl     "Polish"'
	'pt-BR  "Portuguese (Brazilian)"'
	'pt-PT  "Portuguese (Portugal)"'
	'rm     "Romansh"'
