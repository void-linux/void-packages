	'he     "Hebrew"'
	'hr     "Croatian"'
	'hsb    "Upper Sorbian"'
	'hu     "Hungarian"'
	'hy-AM  "Armenian"'
	'id     "Indonesian"'
	'is     "Icelandic"'
	'it     "Italian"'
	'ja     "Japanese"'
