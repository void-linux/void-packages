# Template file for 'guile2.0'
pkgname=guile2.0
version=2.0.14
revision=1
wrksrc=${pkgname/2.0/}-${version}
build_style=gnu-configure
configure_args="--disable-static --disable-error-on-warning --program-suffix='-2.0'"
hostmakedepends="pkg-config"
makedepends="gc-devel gmp-devel libatomic_ops-devel libffi-devel libltdl-devel
 libunistring-devel readline-devel"
short_desc="A portable, embeddable Scheme implementation written in C"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="GPL-3.0-or-later, LGPL-3.0-or-later"
homepage="http://www.gnu.org/software/${pkgname}"
distfiles="${GNU_SITE}/${pkgname/2.0/}/${pkgname/2.0/}-${version}.tar.gz"
checksum=8aeb2f353881282fe01694cce76bb72f7ffdd296a12c7a1a39255c27b0dfe5f1
subpackages="libguile2.0 guile2.0-devel"

if [ "$CROSS_BUILD" ]; then
	# Need host guile to cross compile
	hostmakedepends+=" guile2.0"
	make_build_args+=" GUILE_FOR_BUILD=guile-2.0"
	configure_args+=" GUILE_FOR_BUILD=guile-2.0"
fi

post_install() {
	# conflicts with guile
	rm -rf ${DESTDIR}/usr/share/info
}

libguile2.0_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove "usr/lib/*.so.*"
		vmove "usr/lib/libguilereadline*.so"
		vmkdir usr/share/gdb/auto-load/usr/lib
		mv ${PKGDESTDIR}/usr/lib/*.scm ${PKGDESTDIR}/usr/share/gdb/auto-load/usr/lib
	}
}

guile2.0-devel_package() {
	short_desc+=" - development files"
	depends="gmp-devel gc-devel guile>=${version}_${revision}"
	pkg_install() {
		vmove usr/bin/guile-config-2.0
		sed -i '1s|/usr/bin/guile|/usr/bin/guile-2.0|' ${PKGDESTDIR}/usr/bin/guile-config-2.0
		vmove usr/include
		vmove usr/share/aclocal
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
