do_install() {
    vinstall ${wrksrc}/de_DE_frami/de_DE_frami.aff 644 usr/share/hunspell de_DE.aff
    vinstall ${wrksrc}/de_DE_frami/de_DE_frami.dic 644 usr/share/hunspell de_DE.dic
    vdoc README_extension_owner.txt README.txt
}

