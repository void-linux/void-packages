# Template file for 'libspiel'
pkgname=libspiel
version=1.0.4
revision=1
build_style=meson
build_helper=gir
hostmakedepends="pkg-config glib-devel libspeechprovider"
makedepends="libspeechprovider-devel gstreamer1-devel gst-plugins-base1-devel"
short_desc="Speech synthesis client library"
maintainer="oreo639 <oreo6391@gmail.com>"
license="LGPL-2.1-or-later"
homepage="https://project-spiel.org/libspiel/"
distfiles="https://github.com/project-spiel/libspiel/archive/refs/tags/SPIEL_${version//./_}.tar.gz"
checksum=6060024bd640c1d94d3860731e15a7171aa440b3a52d3bebf83d23088096eb75

libspiel-devel_package() {
	depends="libglib-devel ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove usr/share/gir-1.0
	}
}
