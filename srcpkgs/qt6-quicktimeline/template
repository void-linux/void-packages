if [ "$XBPS_CHECK_PKGS" ]; then
	configure_args="-DQT_BUILD_TESTS=ON"
fi

pre_check() {
	export QML2_IMPORT_PATH="$wrksrc/build/lib${XBPS_TARGET_WORDSIZE}/qt6/qml"
}

