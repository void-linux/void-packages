# Template file for 'conmon'
pkgname=conmon
version=2.0.14
revision=1
build_style=gnu-makefile
hostmakedepends="pkg-config"
makedepends="libglib-devel"
short_desc="OCI container runtime monitor"
maintainer="Cameron Nemo <cnemo@tutanota.com>"
