# Template file for 'paperjam'
pkgname=paperjam
version=1.2.2
revision=1
build_style=gnu-makefile
make_use_env=yes
hostmakedepends="asciidoc"
makedepends="libqpdf-devel libpaper-devel"
short_desc="Transforms PDF's: re-arrange, scale, rotate pages, and many more tricks"
maintainer="Tung Anh Vu <vu.tunganh96@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://mj.ucw.cz/sw/paperjam/"
distfiles="https://mj.ucw.cz/download/linux/${pkgname}-${version}.tar.gz"
checksum="a281912d00a935f490ce20873e87b82d5203bb6180326be1bec60184acab30fc"
post_patch() {
	vsed -i 's/^CXXFLAGS=/CXXFLAGS += /' Makefile
}

do_install() {
	vbin paperjam

	# Documentation
	a2x -d manpage -f manpage paperjam.1.txt
	vman paperjam.1
}
