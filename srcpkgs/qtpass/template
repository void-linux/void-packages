# Template file for 'qtpass'
pkgname=qtpass
version=1.4.0
revision=1
build_style=qmake
hostmakedepends="qt6-base qt6-tools"
makedepends="qt6-base-devel qt6-svg-devel"
depends="pass pwgen"
short_desc="Multi-platform GUI for pass"
maintainer="annejan <brouwer@annejan.com>"
license="GPL-3.0-or-later"
homepage="https://qtpass.org/"
changelog="https://raw.githubusercontent.com/IJHack/QtPass/master/CHANGELOG.md"
distfiles="https://github.com/IJHack/${pkgname}/archive/v${version}.tar.gz"
checksum=9abe9cde35a412b26b6376a5e8996dfeeeb5910fe6a723b78bcf954656fca0e6

post_install() {
	vinstall artwork/icon.png 0644 \
		usr/share/icons/hicolor/512x512/apps qtpass-icon.png
	vinstall artwork/icon.svg 0644 \
		usr/share/icons/hicolor/scalable/apps qtpass-icon.svg

	vinstall qtpass.desktop 0644 usr/share/applications
	vinstall qtpass.appdata.xml 0644 usr/share/metainfo
	vman qtpass.1
}
