checksum=7dfb4a8315e1d6ae406ff32d01c496175df558dd65968a19e5222d02c7cfb77a

dkms_modules="wireguard ${version}"

do_install() {
	make DESTDIR="${DESTDIR}" \
		DKMSDIR="/usr/src/wireguard-${version}/" dkms-install
}
