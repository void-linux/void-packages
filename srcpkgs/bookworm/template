skip_extraction="python3.patch"
python_version=3

post_patch() {
	vsrccopy python3.patch .
	PATH=/usr/libexec/chroot-git:$PATH
	git apply --include ="**/*.py" --whitespace=nowarn python3.patch
}

post_install() {
	ln -s com.github.babluboy.bookworm ${DESTDIR}/usr/bin/bookworm
}
