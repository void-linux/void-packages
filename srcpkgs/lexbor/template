# Template file for 'lexbor'
pkgname=lexbor
version=0.4.0
revision=1
build_style=cmake
short_desc="Development of an open source HTML renderer library"
maintainer="Nathan Owens <ndowens04@gmail.com>"
license="Apache-2.0"
homepage="https://github.com/lexbor/lexbor/"
distfiles="https://github.com/lexbor/lexbor/archive/v${version}.tar.gz"
checksum=61a7a6e63f27b5ff8f4149d432edfade1ee1aba6c24b2fa5786c7197a7664e53

liblexbor-devel_package() {
	depends="${sourcepkg}-${version}_${revision}"
	short_desc="${short_desc} - development files"
		pkg_install() {
			vmove usr/include
			vmove "usr/lib/*.so"
			vmove "usr/lib/*.a"
		}
}
