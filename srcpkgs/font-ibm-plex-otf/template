# Template file for 'font-ibm-plex-otf'
pkgname=font-ibm-plex-otf
version=1.1.0
revision=1
wrksrc="plex-${version}"
noarch=yes
depends="font-util"
font_dirs="/usr/share/fonts/OTF"
short_desc="The package of IBMâ€™s typeface, IBM Plex (OTF variant)"
maintainer="Vintodrimmer <vintodrimmer@protonmail.ch>"
license="OFL-1.1"
homepage="https://github.com/IBM/plex"
distfiles="https://github.com/IBM/plex/archive/v${version}.tar.gz"
checksum=6f8531b9eea476631d6238c25f43c49caa9f469f0488d734f9b61b96eedf318f

do_install() {
	vmkdir usr/share/fonts/OTF

	for files in IBM-Plex-*/fonts/complete/otf/*.otf; do
		vinstall ${files} 0644 \
		/usr/share/fonts/OTF/
	done
}
