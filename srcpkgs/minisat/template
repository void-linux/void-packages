# Template file for 'minisat'
pkgname=minisat
version=2.2.0
revision=2
wrksrc=minisat
build_wrksrc=simp
build_style=gnu-makefile
make_build_args="MROOT=${XBPS_BUILDDIR}/${wrksrc} CFLAGS="-I${XBPS_BUILDDIR}/${wrksrc}" r"
makedepends="zlib-devel"
archs="i686 x86_64"
