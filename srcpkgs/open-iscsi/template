# Template file for 'open-iscsi'
pkgname=open-iscsi
version=2.0.877
revision=1
conf_files="/etc/iscsi/iscsid.conf /etc/iscsi/initiatorname.iscsi"
build_style=gnu-configure
hostmakedepends="automake libtool"
makedepends="libisns-devel libmount-devel libressl-devel libkmod-devel"
short_desc="Open-iSCSI userland tools"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="GPL-2"
homepage="http://www.open-iscsi.com/"
distfiles="https://github.com/${pkgname}/${pkgname}/archive/${version}.tar.gz"
checksum=69eb95b0c39dee2da9d0d751bfdcdb8d11f9d37390de15c1a0b4558f9d0c4a57

case "$XBPS_TARGET_MACHINE" in
	*-musl) CFLAGS+="-D_LINUX_IF_ETHER_H";;
esac

post_extract() {
	vsed -e '1i#include <fcntl.h>' -i usr/idbm.c
	vsed -e '/CC.*-o/s/$/ $(LDFLAGS)/' -i utils/Makefile usr/Makefile
	vsed -e 's,<linux/if_ether.h>,<netinet/if_ether.h>,g' -i usr/iscsi_net_util.c
	vsed -e '1i#include <netinet/if_ether.h>' -i iscsiuio/src/unix/libs/bnx2x.c
	vsed -e 's/lib64/lib/g' -i libopeniscsiusr/Makefile
}

do_configure() {
	( cd iscsiuio && autoreconf -fi && ./configure ${configure_args} )
}

do_build() {
	make ${makejobs} CC="$CC" OPTFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" NO_SYSTEMD=1
}

do_install() {
	make install exec_prefix=/usr sbindir=/usr/bin DESTDIR="$DESTDIR"

	vbin usr/iscsistart
	for m in doc/*.8; do
		vman $m
	done

	true >${DESTDIR}/etc/iscsi/initiatorname.iscsi
	vsconf ${DESTDIR}/etc/iscsi/ifaces/iface.example
	rm ${DESTDIR}/etc/iscsi/ifaces/iface.example

	vsv iscsid
}

open-iscsi-devel_package() {
	short_desc+=" - development files"
	depends="open-iscsi-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
