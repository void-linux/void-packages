# Template file for 'tty-clock'
pkgname=tty-clock
version=2.3
revision=2
makedepends="ncurses-devel"
short_desc="Digital clock in ncurses"
maintainer="Emma Kadlecek <kadlecekemma@gmail.com>"
license="BSD-3-Clause"
homepage="https://github.com/R1shy/tty-clock"
distfiles="https://github.com/R1shy/tty-clock/archive/refs/tags/$version.tar.gz
 https://raw.githubusercontent.com/R1shy/tty-clock/master/LICENSE"
checksum="9b24dac3b23424c61b1e0ac268f62f6ead5de25fbd01768ce284620ee08bbfca"
replaces="tty-clock-git>=0"
skip_extraction="LICENSE"

do_build() {
	make CC="$CC" CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS -lncursesw"
}

do_install() {
	vbin tty-clock
	vman tty-clock.1
}

post_install() {
	vlicense  ${XBPS_SRCDISTDIR}/${pkgname}-${version}/LICENSE
}
