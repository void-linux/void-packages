if [ "$XBPS_ENDIAN" = "be" ]; then
	broken="Fails to build"
fi

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" lua51 libgdiplus"
fi

pre_build() {
	vsed -i -e "s#/app/lib#${XBPS_CROSS_BASE}/lib#g" configure-system-libraries.sh
	make ${make_build_args} VERSION="release-${version}" version
}
