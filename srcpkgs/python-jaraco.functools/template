post_install() {
	vlicense LICENSE
}

python3-jaraco.functools_package() {
	archs=noarch
	pycompile_module="jaraco.functools"
	depends="python3-more-itertools"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove "usr/lib/python3*"
		vlicense LICENSE
	}
}
