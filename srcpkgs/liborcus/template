# Template file for 'liborcus'
pkgname=liborcus
version=0.21.0
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config python3"
makedepends="boost-devel-minimal
 mdds libixion-devel python3-devel zlib-devel"
short_desc="Library for processing spreadsheet documents"
maintainer="Đoàn Trần Công Danh <congdanhqx@gmail.com>"
license="MPL-2.0"
homepage="https://gitlab.com/orcus/orcus"
changelog="https://gitlab.com/orcus/orcus/-/raw/master/CHANGELOG"
distfiles="https://gitlab.com/api/v4/projects/orcus%2Forcus/packages/generic/source/${version}/liborcus-${version}.tar.xz"
checksum=1c6e473d6b8a63d61d0e6874a1762d6f0e0e78338d763e48ac93126ecde19b37
replaces="liborcus11>=0"

export BOOST_ROOT="${XBPS_CROSS_BASE}/usr"

liborcus-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.la"
		vmove "${py3_sitelib}/*.la"
		vmove usr/lib/pkgconfig
	}
}
