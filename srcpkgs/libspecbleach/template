# Template file for 'libspecbleach'
pkgname=libspecbleach
version=0.2.0
revision=1
build_style=meson
hostmakedepends="pkg-config"
makedepends="fftw-devel"
short_desc="C library for audio noise reduction and other spectral effects"
maintainer="biopsin <biopsin@tuta.io>"
license="LGPL-2.1-or-later"
homepage="https://github.com/lucianodato/libspecbleach"
distfiles="$homepage/archive/v$version.tar.gz"
checksum=7d2577b23d8b598812eed1ac9c6a9cd3d9930eac10a88f1407adf2d90e6fe569

libspecbleach-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
