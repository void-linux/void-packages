# Template file for 'asm6f'
pkgname=asm6f
version=1.6freem02
revision=1
wrksrc="asm6f-${version/f/_f}"
build_style=gnu-makefile
short_desc="6502 assembler primarily targeted at NES/Famicom development"
maintainer="cr6git <quark6@protonmail.com>"
license="free"
homepage="https://github.com/freem/asm6f"
distfiles="https://github.com/freem/asm6f/archive/v${version/f/_f}.tar.gz"
checksum=e929e00d22cb271dcf82e0d1beedaa6e5bd79e2e2db57b2f8f9e3396ce2d48d3

pre_build() {
	sed -i 's|-Wall|${CFLAGS} -Wall|' Makefile
}

do_install() {
	vbin asm6f
	vdoc readme.txt
	vdoc readme-original.txt
}
