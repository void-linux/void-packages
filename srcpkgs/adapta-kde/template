do_install() {
	vmkdir usr/share
	vcopy aurorae usr/share
	vcopy color-schemes usr/share
	vcopy konsole usr/share
	vcopy Kvantum usr/share
	vcopy plasma usr/share
	vcopy wallpapers usr/share
	vcopy yakuake usr/share
}
