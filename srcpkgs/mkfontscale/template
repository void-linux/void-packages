# Template file for 'mkfontscale'
pkgname=mkfontscale
version=1.2.1
revision=1
build_style=gnu-configure
configure_args="--with-bzip2"
hostmakedepends="pkg-config"
makedepends="xorgproto zlib-devel bzip2-devel freetype-devel libfontenc-devel"
