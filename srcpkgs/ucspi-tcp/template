# Template file for 'ucspi-tcp'
pkgname=ucspi-tcp
version=0.88
revision=4
build_style=gnu-makefile
short_desc="Command-line tools for building TCP client-server applications"
maintainer="Nikolay Hristov <geroy@horizon9.org>"
license="Public Domain"
homepage="http://cr.yp.to/ucspi-tcp.html"
distfiles="http://cr.yp.to/ucspi-tcp/ucspi-tcp-${version}.tar.gz"
checksum=4a0615cab74886f5b4f7e8fd32933a07b955536a3476d74ea087a3ea66a23e9c
patch_args="-Np1"
make_check=no # checks are only designed to check if an installation worked

do_install() {
	vbin addcr
	vbin date@
	vbin finger@
	vbin http@
	vbin recordio
	vbin tcpclient
	vbin recordio
	vbin tcprulescheck
	vbin who@
	vbin argv0
	vbin delcr
	vbin fixcrio
	vbin mconnect
	vbin mconnect-io
	vbin tcpcat
	vbin tcprules
	vbin tcpserver
	vbin rblsmtpd
	vman addcr.1
	vman date@.1
	vman finger@.1
	vman http@.1
	vman recordio.1
	vman tcpclient.1
	vman tcprulescheck.1
	vman who@.1
	vman argv0.1
	vman delcr.1
	vman fixcr.1 fixcrio.1
	vman mconnect.1
	vman tcpcat.1
	vman tcprules.1
	vman tcpserver.1
	vdoc README
}
