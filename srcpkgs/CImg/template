do_install() {
	vlicense Licence_CeCILL_V2-en.txt
	vlicense Licence_CeCILL-C_V1-en.txt
	vinstall CImg.h 644 usr/include
	vmkdir usr/include/CImg
	vcopy "plugins/*.h" usr/include/CImg
}
