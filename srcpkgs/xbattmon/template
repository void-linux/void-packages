# Template file for 'xbattmon'
pkgname=xbattmon
version=0.9
revision=1
build_style=gnu-configure
make_install_args="PREFIX=/usr"
makedepends="libX11-devel"
short_desc="Simple battery monitor"
maintainer="Duncaen <duncaen@voidlinux.eu>"
license="GPL-3"
