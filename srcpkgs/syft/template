export GOTOOLCHAIN=go1.20

post_install() {
	syft="${DESTDIR}/usr/bin/syft"
	for shell in bash fish zsh; do
		vtargetrun ${syft} completion ${shell} >syft.${shell}
		vcompletion syft.${shell} ${shell}
	done
}
