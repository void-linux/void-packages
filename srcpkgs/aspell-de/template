# Template file for 'aspell-de'
pkgname=aspell-de
version=20161207
revision=1
noarch=yes
wrksrc="igerman98-${version}"
hostmakedepends="aspell"
short_desc="German dictionary for aspell"
maintainer="Leah Neukirchen <leah@vuxu.org>"
license="GPL-2.0-or-later"
homepage="https://j3e.de/ispell/igerman98/index.html"
distfiles="https://j3e.de/ispell/igerman98/dict/igerman98-${version}.tar.bz2"
checksum=17296f03c5fea62d76ecc530ebe80f6adc430278f58d472dc1842d71612960a8

do_build() {
	for l in de_DE de_AT de_CH; do
		make aspell/${l}.rws
	done
}

do_install() {
	cd aspell

	vmkdir usr/lib/aspell-0.60

	for l in de_DE de_AT de_CH; do
		install -m644 ${l}.alias ${l}.dat ${l}_affix.dat ${l}.multi ${l}.rws \
			${DESTDIR}/usr/lib/aspell-0.60
	done

	echo "add de_DE.multi" > ${DESTDIR}/usr/lib/aspell-0.60/deutsch.alias
	echo "add de_DE.multi" > ${DESTDIR}/usr/lib/aspell-0.60/german.alias
	echo "add de_CH.multi" > ${DESTDIR}/usr/lib/aspell-0.60/swiss.alias
}
