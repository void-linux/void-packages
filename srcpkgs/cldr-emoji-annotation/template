# Template file for 'cldr-emoji-annotation'
pkgname=cldr-emoji-annotation
version=48
revision=1
short_desc="Emoji annotation files in CLDR"
maintainer="John <me@johnnynator.dev>"
license="Unicode-3.0"
homepage="https://github.com/unicode-org/cldr"
distfiles="https://github.com/unicode-org/cldr/archive/refs/tags/release-${version}.tar.gz"
checksum=8edd97a3600bbd1c451f07c5bf7b979467e88ac6d101d360eb8f9b057d21a4d6

do_install() {
	for d in dtd annotations annotationsDerived; do
		vmkdir usr/share/unicode/cldr/common/$d
	done
	vcopy "common/annotations/*.xml" usr/share/unicode/cldr/common/annotations
	vcopy "common/annotationsDerived/*.xml" usr/share/unicode/cldr/common/annotationsDerived
	vcopy "common/dtd/*.dtd" usr/share/unicode/cldr/common/dtd

	vinstall "${FILESDIR}/cldr-emoji-annotation.pc" 644 usr/share/pkgconfig/
	vsed -e "s/version/$version/g" -i "${DESTDIR}/usr/share/pkgconfig/cldr-emoji-annotation.pc"

	vlicense LICENSE
}
