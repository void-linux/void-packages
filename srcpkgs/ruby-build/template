do_install() {
	vbin bin/ruby-build
	vbin bin/rbenv-install
	vbin bin/rbenv-uninstall
	vmkdir usr/share/ruby-build
	vcopy share/ruby-build/* usr/share/ruby-build
	vlicense LICENSE
	vdoc README.md
}
