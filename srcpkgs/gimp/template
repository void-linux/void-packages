# Template file for 'gimp'
pkgname=gimp
version=2.10.6
revision=1
lib32disabled=yes
build_style=gnu-configure
hostmakedepends="automake gegl gettext-devel glib-devel gtk+-devel intltool
 libtool pkg-config pygtk-devel perl-XML-Parser"
makedepends="aalib-devel alsa-lib-devel babl-devel dbus-glib-devel gegl-devel
 ghostscript-devel glib-networking jasper-devel lcms-devel libgexiv2-devel
 libglib-devel libgudev-devel libmng-devel libmypaint-devel libopenexr-devel
 libopenjpeg2-devel librsvg-devel libwmf-devel libwebp-devel libXcursor-devel
 libXpm-devel mypaint-brushes poppler-glib-devel pygtk-devel"
depends="desktop-file-utils gegl hicolor-icon-theme iso-codes
 mypaint-brushes"
checkdepends="appstream-glib desktop-file-utils"
short_desc="The GNU image manipulation program"
conf_files="/etc/gimp/2.0/*"
maintainer="Kartik S <kartik.ynwa@gmail.com>"
license="GPL-3.0-only"
homepage="https://www.gimp.org"
distfiles="https://download.gimp.org/pub/gimp/v${version%.*}/gimp-${version}.tar.bz2"
checksum=4ec8071f828e918384cf7bc7d1219210467c84655123f802bc55a8bf2415101f

pre_configure() {
	if [ "$CROSS_BUILD" ]; then
		sed -i 's:^py_prefix=`:py_prefix='"$XBPS_CROSS_BASE"'`:' configure
	fi
}

pre_build() {
	if [ "$CROSS_BUILD" ]; then
		make -C tools invert-svg \
			CFLAGS_FOR_BUILD="$BUILD_CFLAGS -fPIE -I/usr/lib/glib-2.0/include -I/usr/lib/glib-2.0"
	fi
}

libgimp_package() {
	short_desc+=" - runtime libraries"
	pkg_install() {
		vmove usr/lib/*.so.*
	}
}

gimp-devel_package() {
	depends="gegl-devel gtk+-devel libgimp>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/gtk-doc
		vmove usr/share/aclocal
		vmove "usr/lib/*.so"
	}
}

gimp-python_package() {
	lib32disabled=yes
	depends="pygtk"
	pycompile_dirs="usr/lib/gimp/2.0"
	short_desc+=" - Python2 bindings"
	pkg_install() {
		vmove usr/lib/gimp/2.0/python
		# Fancy command to print all directories that contain a ".py" file
		for plugin in $(find "${DESTDIR}/usr/lib/gimp/2.0/plug-ins" -name "*.py" -printf "%h\n" | uniq); do
			vmove usr/lib/gimp/2.0/plug-ins/"${plugin##*/}"
		done
	}
}
