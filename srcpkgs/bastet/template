checksum=f219510afc1d83e4651fbffd5921b1e0b926d5311da4f8fa7df103dc7f2c403f

do_install() {
	vbin ${pkgname}
	vinstall ${pkgname}.desktop 0644 usr/share/applications
	vinstall ${pkgname}.png 0644 usr/share/pixmaps
}
