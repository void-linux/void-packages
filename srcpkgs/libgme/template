# Template file for 'libgme'
pkgname=libgme
version=0.6.4
revision=1
build_style=cmake
configure_args="-DENABLE_UBSAN=OFF"
makedepends="zlib-devel SDL2-devel"
short_desc="Video game music file emulation/playback library"
maintainer="Pierre Allegraud <pierre.allegraud@crans.org>"
license="LGPL-2.1-or-later"
homepage="https://github.com/libgme/game-music-emu"
distfiles="https://github.com/libgme/game-music-emu/releases/download/${version}/libgme-${version}-src.tar.gz"
checksum=6f94eac735d86bca998a7ce1170d007995191ef6d4388345a0dc5ffa1de0bafa

if [ "$XBPS_TARGET_ENDIAN" = "be" ]; then
	CXXFLAGS="-DMSB_FIRST=1"
fi
if [ "$XBPS_TARGET_ENDIAN" = "le" ]; then
	CXXFLAGS="-DLSB_FIRST=1"
fi
#CXXFLAGS+=" -DGME_INTERNAL_BUILD=1"

libgme-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
