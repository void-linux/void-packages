post_install() {
	for f in images/*; do
		vinstall "$f" 644 usr/share/nwg-bar
	done
	for f in config/*; do
		vinstall "$f" 644 usr/share/nwg-bar
	done
	vdoc README.md
	vlicense LICENSE
}
