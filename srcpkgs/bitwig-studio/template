# Template file for 'bitwig-studio'
pkgname=bitwig-studio
version=5.3.13
revision=2
archs="x86_64"
hostmakedepends="curl"
depends="libstdc++ zlib libbsd xdg-utils libXau libXdmcp libXrender libXcursor fontconfig libxcb
 xcb-util-wm libxkbcommon libxkbcommon-x11 pixman cairo freetype libXfixes expat libjack alsa-lib gcc"
short_desc="DAW for music production, remixing and live performance"
maintainer="finnvanhee <finnvanhee@gmail.com>"
license="custom:bitwig"
homepage="https://bitwig.com/"
distfiles="bitwig-studio-${version}.deb"
restricted=yes
repository=nonfree
noverifyrdeps=yes

do_fetch() {
	if [ ! -f "bitwig-studio-${version}.deb" ]; then
	   curl -L "https://www.bitwig.com/dl/Bitwig%20Studio/${version}/installer_linux/" -o "bitwig-studio-${version}.deb"
	fi
}

do_install() {
	vcopy opt /
	vcopy usr /
	vlicense opt/bitwig-studio/EULA.txt
}
