pre_configure() {
	autoreconf -fi
}

libshout-idjc-devel_package() {
	depends="libtheora-devel libogg-devel libvorbis-devel speex-devel
	 ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
