# Template file for 'rust-analyzer'
pkgname=rust-analyzer
version=2022.01.03
revision=1
_ver=${version//./-}
wrksrc="${pkgname}-${_ver}"
build_style=cargo
make_install_args="--path=crates/${pkgname}"
short_desc="Rust compiler front-end for IDEs"
maintainer="Gabriel Sanches <gabriel@gsr.dev>"
