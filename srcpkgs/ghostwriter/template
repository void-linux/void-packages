	armv5tel*) broken="qtwebengine not built for this platform";;
	ppc|ppc-musl) broken="qtwebengine not built for this platform";;
	*) if [ "$XBPS_WORDSIZE" != "$XBPS_TARGET_WORDSIZE" ]; then
