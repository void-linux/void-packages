#!/bin/sh
QMAILU=$(id -u _qmaild)
QMAILG=$(id -g _qmaild)
HOSTNAME=$(hostname)
export SMTPAUTH="!"
export UTF8="1"
. /var/qmail/ssl/ssl.env
exec env PATH="/var/qmail/bin:/usr/local/bin:$PATH" \
     chpst -m 50000000 \
     sslserver -seV -Rp -l $HOSTNAME \
     -Xx /var/qmail/control/rules.smtpd.cdb \
     -u $QMAILU -g $QMAILG :0 465 \
     qmail-smtpd qmail-authuser true 2>&1

