#!/bin/sh
QMAILU=$(id -u _qmaild)
QMAILG=$(id -g _qmaild)
HOSTNAME=$(hostname)
export SMTPAUTH="!"
export UCSPITLS="!"
. /var/qmail/ssl/ssl.env
exec env PATH="/var/qmail/bin:/usr/local/bin:$PATH" \
     sslserver -seVn -Rp -l $HOSTNAME \
     -u $QMAILU -g $QMAILG :: 587 \
     qmail-smtpd qmail-authuser true 2>&1
