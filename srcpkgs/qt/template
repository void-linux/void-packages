qt-qmake_package() {
	short_desc+=" - qmake Makefile generator tool"
	pkg_install() {
		vmove usr/bin/qmake-qt4
		vmove usr/lib/qt/bin/qmake
		vmove usr/share/qt/mkspecs
	}
}
