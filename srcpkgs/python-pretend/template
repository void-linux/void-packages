	vlicense LICENSE.rst
}

python3-pretend_package() {
	depends="python3"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vdoc README.rst
		vlicense LICENSE.rst
	}
}
