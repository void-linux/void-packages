# Template file for 'bc'
pkgname=bc
version=1.1.0
revision=1
short_desc="Implementation of POSIX bc with GNU extensions"
maintainer="maxice8 <thinkabit.ukim@gmail.com>"
license="BSD-2-Clause"
homepage="https://github.com/gavinhoward/bc"
distfiles="${homepage}/releases/download/${version}/${pkgname}-${version}.tar.xz"
checksum=094884d42a7a02436c231267c09d07b16742f0afd78f850f0b7dacd5ed91d17e

do_configure() {
	PREFIX=/usr DESTDIR="${DESTDIR}" CC="${CC}" CFLAGS="${CFLAGS}" \
	HOSTCC="${CC_FOR_BUILD}" HOSTCFLAGS="${CFLAGS_FOR_BUILD}" ./configure.sh -GM
}
do_build() {
	make ${makejobs}
}
do_check() {
	make test
}
do_install() {
	# Note that make install is used because of a symlink.
	make install
	vman manuals/bc.1
	vman manuals/dc.1
	vlicense LICENSE.md
}
