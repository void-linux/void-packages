# Template file for 'YadQt'
pkgname=YadQt
version=1.0.0
revision=1
build_style=configure
hostmakedepends="automake pkg-config"
makedepends="qt6-base-devel"
depends="qt6-base"
short_desc="This is an app to produce simple Qt dialogs from the command line"
maintainer="Keith Hedger <kdhedger68713@gmail.com>"
license="GPL-3.0-or-later"
homepage="https://keithdhedger.github.io/"
distfiles="https://github.com/KeithDHedger/YadQt/archive/refs/tags/v1.tar.gz"
checksum="9c634d94a1885dc565f8892810b8a2766523641883eea067712d506c19419773"

pre_configure() {
	./remakesourcelist
	aclocal
	autoheader
	touch NEWS README AUTHORS ChangeLog
	automake --add-missing --copy
	autoconf

	if [ "$CROSS_BUILD" ]; then
		configure_args+=" --host=${XBPS_TARGET_MACHINE}"
	fi
	configure_args+=" --prefix=/usr"
}
