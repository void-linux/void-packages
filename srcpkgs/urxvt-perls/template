do_install() {
	vlicense LICENSE
	vinstall clipboard 644 usr/lib/urxvt/perl
	vinstall keyboard-select 644 usr/lib/urxvt/perl
	vinstall url-select 644 usr/lib/urxvt/perl
	vdoc README.md
}
