# Template file for 'pass-otp'
pkgname=pass-otp
version=1.2.0
revision=1
archs=noarch
build_style=gnu-makefile
depends="pass oath-toolkit qrencode"
short_desc="A pass extension for managing one-time-password (OTP) tokens"
