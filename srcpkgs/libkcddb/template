pre_check() {
	export QT_QPA_PLATFORM=offscreen
}

libkcddb-devel_package() {
	depends="libkcddb>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/lib/cmake
		vmove usr/share/doc
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/qt5/mkspecs
		vlicense cmake/COPYING-CMAKE-SCRIPTS
	}
}
