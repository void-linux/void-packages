post_install() {
	rm -rf "$DESTDIR/usr/share"
}

libkcddb-devel_package() {
	depends="libkcddb>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/lib/cmake
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/qt5/mkspecs
		vlicense LICENSES/BSD-3-Clause.txt
	}
}
