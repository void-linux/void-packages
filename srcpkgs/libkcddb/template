makedepends="kio-devel libmusicbrainz5-devel"
short_desc="KDE CDDB library"
maintainer="Piotr WÃ³jcik <chocimier@tlen.pl>"
license="GPL-2.0-or-later, LGPL-2.0-or-later, BSD-3-Clause, GFDL-1.2-only"
